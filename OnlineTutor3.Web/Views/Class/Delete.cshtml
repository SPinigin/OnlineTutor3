@model OnlineTutor3.Domain.Entities.Class
@{
    ViewData["Title"] = "Удаление класса";
    var students = ViewBag.Students as List<OnlineTutor3.Domain.Entities.Student> ?? new List<OnlineTutor3.Domain.Entities.Student>();
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow modern-card" style="border-left: 4px solid #dc3545;">
            <div class="card-header auth-card-header" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle"></i> Подтверждение удаления
                </h4>
            </div>
            <div class="card-body auth-card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-warning"></i>
                    <strong>Внимание!</strong> Это действие нельзя отменить.
                </div>

                <h5 class="text-dark-modern">Вы действительно хотите удалить этот класс?</h5>

                <div class="card mt-3 modern-card">
                    <div class="card-body modern-card-body">
                        <h6 class="modern-card-title">
                            <i class="fas fa-graduation-cap"></i> @Model.Name
                        </h6>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="text-muted-modern">@Model.Description</p>
                        }
                        <div class="row text-center">
                            <div class="col">
                                <strong class="text-dark-modern">@students.Count</strong><br>
                                <small class="text-muted-modern">учеников</small>
                            </div>
                        </div>
                        <small class="text-muted-modern">Создан: @Model.CreatedAt.ToString("dd.MM.yyyy")</small>
                    </div>
                </div>

                @if (students.Any())
                {
                    <div class="alert alert-danger mt-3">
                        <i class="fas fa-ban"></i>
                        <strong>Удаление невозможно!</strong> В классе есть ученики.
                        Сначала переместите их в другой класс или удалите.
                    </div>
                }
            </div>
            <div class="card-footer auth-card-footer">
                <form asp-action="Delete" method="post" class="d-inline">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-modern-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Отмена
                        </a>
                        @if (!students.Any())
                        {
                            <button type="submit" class="btn btn-modern-outline-danger">
                                <i class="fas fa-trash"></i> Удалить
                            </button>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

