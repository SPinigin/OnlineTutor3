@model OnlineTutor3.Domain.Entities.Class
@using OnlineTutor3.Domain.Entities
@{
    ViewData["Title"] = $"Класс: {Model.Name}";
    var students = ViewBag.Students as List<Student> ?? new List<Student>();
    var studentsWithUsers = ViewBag.StudentsWithUsers as List<(Student Student, ApplicationUser? User)> ?? new List<(Student Student, ApplicationUser? User)>();
}

<div class="page-header">
    <div>
        <h4 class="page-header-title">
            <i class="fas fa-graduation-cap page-header-icon"></i> @Model.Name
            <span class="badge badge-modern-@(Model.IsActive ? "success" : "secondary") ms-2 badge-sm">
                @(Model.IsActive ? "Активный" : "Неактивный")
            </span>
        </h4>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="text-muted-modern mb-0 small">@Model.Description</p>
        }
    </div>
    <div>
        <a asp-action="Index" class="btn btn-sm btn-modern-outline-secondary">
            <i class="fas fa-arrow-left"></i> Назад к списку
        </a>
    </div>
</div>

<div class="row mb-3 g-3">
    <div class="col-6 col-md-3">
        <div class="card border-0 shadow-sm stat-card">
            <div class="card-body text-center py-1 px-2">
                <div class="stat-card-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-card-value">@students.Count</div>
                <small class="stat-card-label">Учеников</small>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card border-0 shadow-sm stat-card stat-card-green">
            <div class="card-body text-center py-1 px-2">
                <div class="stat-card-icon stat-icon-green">
                    <i class="fas fa-calendar-plus"></i>
                </div>
                <div class="stat-card-value">@Model.CreatedAt.ToString("dd.MM.yyyy")</div>
                <small class="stat-card-label">Создан</small>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm modern-card">
    <div class="card-header modern-card-header">
        <h5 class="modern-card-title">
            <i class="fas fa-users"></i> Ученики (@students.Count)
        </h5>
    </div>
    <div class="card-body modern-card-body">
        @if (studentsWithUsers.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0 modern-table">
                    <thead>
                        <tr>
                            <th>Ученик</th>
                            <th>Контакты</th>
                            <th class="d-none d-md-table-cell">Школа/Класс</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in studentsWithUsers)
                        {
                            var student = item.Student;
                            var user = item.User;
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user-graduate me-2" style="color: #667eea;"></i>
                                        <div>
                                            <strong class="text-dark-modern">@(user != null ? user.FullName : "Неизвестно")</strong>
                                            @if (!string.IsNullOrEmpty(student.StudentNumber))
                                            {
                                                <br><small class="text-muted-modern">№ @student.StudentNumber</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (user != null)
                                    {
                                        <div>
                                            <i class="fas fa-envelope me-1" style="color: #6c757d;"></i>
                                            <small class="text-muted-modern">@user.Email</small>
                                        </div>
                                        @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                        {
                                            <div>
                                                <i class="fas fa-phone me-1" style="color: #6c757d;"></i>
                                                <small class="text-muted-modern">@user.PhoneNumber</small>
                                            </div>
                                        }
                                    }
                                </td>
                                <td class="d-none d-md-table-cell">
                                    @if (!string.IsNullOrEmpty(student.School))
                                    {
                                        <div>
                                            <i class="fas fa-school me-1" style="color: #6c757d;"></i>
                                            <small class="text-muted-modern">@student.School</small>
                                        </div>
                                    }
                                    @if (student.Grade.HasValue)
                                    {
                                        <div>
                                            <i class="fas fa-graduation-cap me-1" style="color: #6c757d;"></i>
                                            <small class="text-muted-modern">@student.Grade класс</small>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-user-graduate"></i>
                </div>
                <p class="empty-state-text">В этом классе пока нет учеников</p>
            </div>
        }
    </div>
</div>

