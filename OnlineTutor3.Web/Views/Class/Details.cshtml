@model OnlineTutor3.Domain.Entities.Class
@{
    ViewData["Title"] = $"Класс: {Model.Name}";
    var students = ViewBag.Students as List<OnlineTutor3.Domain.Entities.Student> ?? new List<OnlineTutor3.Domain.Entities.Student>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>
            <i class="fas fa-graduation-cap text-primary"></i> @Model.Name
            <span class="badge bg-@(Model.IsActive ? "success" : "secondary") ms-2">
                @(Model.IsActive ? "Активный" : "Неактивный")
            </span>
        </h2>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="text-muted">@Model.Description</p>
        }
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Назад к списку
        </a>
    </div>
</div>

<div class="row mb-4 g-2 g-md-3">
    <div class="col-6 col-md-3">
        <div class="card text-center border-primary">
            <div class="card-body">
                <i class="fas fa-users text-primary" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-0">@students.Count</h6>
                <p class="text-muted mb-0 small">Учеников</p>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card text-center border-success">
            <div class="card-body">
                <i class="fas fa-calendar-plus text-success" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-0">@Model.CreatedAt.ToString("dd.MM.yyyy")</h6>
                <p class="text-muted mb-0 small">Создан</p>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-users"></i> Ученики (@students.Count)
        </h5>
    </div>
    <div class="card-body">
        @if (students.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Имя</th>
                            <th>Email</th>
                            <th>Школа</th>
                            <th>Класс</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in students)
                        {
                            <tr>
                                <td>@student.StudentNumber</td>
                                <td>-</td>
                                <td>@(student.School ?? "-")</td>
                                <td>@(student.Grade?.ToString() ?? "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-user-graduate text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">В этом классе пока нет учеников</p>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        <i class="fas fa-edit"></i> Редактировать
    </a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
        <i class="fas fa-trash"></i> Удалить
    </a>
</div>

