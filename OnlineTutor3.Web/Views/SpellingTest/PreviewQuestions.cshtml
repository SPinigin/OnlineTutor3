@model List<OnlineTutor3.Web.ViewModels.ImportSpellingQuestionRow>
@{
    ViewData["Title"] = "Предпросмотр импорта вопросов";
    var test = ViewBag.Test as OnlineTutor3.Domain.Entities.SpellingTest;
    var pointsPerQuestion = ViewBag.PointsPerQuestion as int? ?? 1;
    
    var validQuestions = Model?.Where(q => q.IsValid).ToList() ?? new List<OnlineTutor3.Web.ViewModels.ImportSpellingQuestionRow>();
    var invalidQuestions = Model?.Where(q => !q.IsValid).ToList() ?? new List<OnlineTutor3.Web.ViewModels.ImportSpellingQuestionRow>();
}

<div class="page-header">
    <div>
        <h4 class="page-header-title">
            <i class="fas fa-eye page-header-icon"></i>
            <span>Предпросмотр импорта вопросов</span>
        </h4>
        @if (test != null)
        {
            <p class="text-muted-modern mb-0 small">
                <i class="fas fa-clipboard-check"></i> Тест: @test.Title
            </p>
        }
    </div>
    <div>
        <a asp-action="ImportQuestions" asp-route-id="@test!.Id" class="btn btn-sm btn-modern-outline-secondary">
            <i class="fas fa-arrow-left"></i> Назад
        </a>
    </div>
</div>

<div class="row mb-3 g-2 g-md-3" style="flex-wrap: nowrap;">
    <div class="col-4">
        <div class="card border-0 shadow-sm stat-card">
            <div class="card-body text-center py-1 px-1 px-md-2">
                <div class="stat-card-icon stat-icon-blue" style="font-size: 0.9rem;">
                    <i class="fas fa-list"></i>
                </div>
                <div class="stat-card-value" style="font-size: 1rem;">@Model.Count</div>
                <small class="stat-card-label" style="font-size: 0.65rem;">Всего вопросов</small>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card border-0 shadow-sm stat-card stat-card-green">
            <div class="card-body text-center py-1 px-1 px-md-2">
                <div class="stat-card-icon stat-icon-green" style="font-size: 0.9rem;">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-card-value" style="font-size: 1rem;">@validQuestions.Count</div>
                <small class="stat-card-label" style="font-size: 0.65rem;">Валидных</small>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card border-0 shadow-sm stat-card stat-card-pink">
            <div class="card-body text-center py-1 px-1 px-md-2">
                <div class="stat-card-icon stat-icon-pink" style="font-size: 0.9rem;">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="stat-card-value" style="font-size: 1rem;">@invalidQuestions.Count</div>
                <small class="stat-card-label" style="font-size: 0.65rem;">С ошибками</small>
            </div>
        </div>
    </div>
</div>

@if (invalidQuestions.Any() || validQuestions.Any())
{
    <div class="card mb-3 modern-card">
        <div class="card-header modern-card-header py-1">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                <h6 class="mb-0 modern-card-title" style="font-size: 0.85rem;">
                    <i class="fas fa-list-alt nav-link-icon"></i> Предпросмотр вопросов
                </h6>
                
                <div class="form-check form-switch mb-0">
                    <input class="form-check-input" type="checkbox" id="showErrorsOnly" checked style="font-size: 0.8rem;">
                    <label class="form-check-label text-dark-modern" for="showErrorsOnly" style="font-size: 0.75rem;">
                        Только ошибки
                    </label>
                </div>
            </div>
        </div>
    </div>
}

@if (invalidQuestions.Any())
{
    <div class="card mb-3 modern-card border-danger">
        <div class="card-header modern-card-header" style="border-left: 4px solid #dc3545;">
            <h5 class="modern-card-title mb-0 text-danger">
                <i class="fas fa-exclamation-triangle"></i> Вопросы с ошибками
            </h5>
        </div>
        <div class="card-body modern-card-body">
            <div class="table-responsive-md">
                <table class="table modern-table table-sm mb-0" style="table-layout: auto; width: 100%;">
                    <thead>
                        <tr>
                            <th class="small" style="width: 5%; min-width: 50px;">Строка</th>
                            <th class="small" style="min-width: 120px;">Слово с пропуском</th>
                            <th class="small" style="width: 15%; min-width: 80px;">Правильная буква</th>
                            <th class="small d-none d-md-table-cell" style="width: 25%;">Полное слово</th>
                            <th class="small" style="min-width: 150px;">Ошибки</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var question in invalidQuestions)
                        {
                            <tr>
                                <td class="small text-muted-modern">@question.RowNumber</td>
                                <td class="small text-dark-modern">@question.WordWithGap</td>
                                <td class="small text-dark-modern">@question.CorrectLetter</td>
                                <td class="small text-muted-modern d-none d-md-table-cell">@question.FullWord</td>
                                <td class="small">
                                    <ul class="mb-0 ps-3">
                                        @foreach (var error in question.Errors)
                                        {
                                            <li class="text-danger small">@error</li>
                                        }
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@if (validQuestions.Any())
{
    <div class="card mb-3 modern-card border-success valid-questions-section">
        <div class="card-header modern-card-header" style="border-left: 4px solid #28a745;">
            <h5 class="modern-card-title mb-0 text-success">
                <i class="fas fa-check-circle"></i> Валидные вопросы (@validQuestions.Count)
            </h5>
        </div>
        <div class="card-body modern-card-body">
            <div class="table-responsive-md">
                <table class="table modern-table table-sm mb-0" style="table-layout: auto; width: 100%;">
                    <thead>
                        <tr>
                            <th class="small" style="width: 5%; min-width: 40px;">#</th>
                            <th class="small" style="min-width: 120px;">Слово с пропуском</th>
                            <th class="small" style="width: 15%; min-width: 80px;">Правильная буква</th>
                            <th class="small d-none d-md-table-cell" style="width: 25%;">Полное слово</th>
                            <th class="small d-none d-md-table-cell" style="width: 10%;">Требуется ответ</th>
                            <th class="small d-none d-md-table-cell" style="width: 8%;">Баллы</th>
                            <th class="small d-none d-md-table-cell" style="width: 10%;">Подсказка</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < validQuestions.Count; i++)
                        {
                            var question = validQuestions[i];
                            <tr>
                                <td class="small text-muted-modern">@(i + 1)</td>
                                <td class="small text-dark-modern">@question.WordWithGap</td>
                                <td class="small text-dark-modern"><strong>@question.CorrectLetter</strong></td>
                                <td class="small text-muted-modern d-none d-md-table-cell">@question.FullWord</td>
                                <td class="small d-none d-md-table-cell">
                                    @if (question.RequiresAnswer)
                                    {
                                        <span class="badge badge-modern-success badge-sm">
                                            <i class="fas fa-check"></i> Да
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-modern-warning badge-sm">
                                            <i class="fas fa-times"></i> Нет
                                        </span>
                                    }
                                </td>
                                <td class="small text-muted-modern d-none d-md-table-cell">@pointsPerQuestion</td>
                                <td class="small text-muted-modern d-none d-md-table-cell">@(string.IsNullOrEmpty(question.Hint) ? "-" : question.Hint)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@if (!validQuestions.Any())
{
    <div class="card mb-3 modern-card border-warning">
        <div class="card-body modern-card-body">
            <div class="alert alert-warning border-0 shadow-sm mb-0" style="background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 152, 0, 0.1) 100%); border-left: 4px solid #ffc107 !important;">
                <i class="fas fa-exclamation-triangle text-warning"></i> 
                <span class="text-dark-modern">Нет валидных вопросов для импорта. Исправьте ошибки и попробуйте снова.</span>
            </div>
        </div>
    </div>
}

<div class="d-flex justify-content-end gap-2">
    <a asp-action="ImportQuestions" asp-route-id="@test!.Id" class="btn btn-modern-outline-secondary">
        <i class="fas fa-arrow-left"></i> Назад
    </a>
    @if (validQuestions.Any())
    {
        <form asp-action="ConfirmImport" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-modern-success">
                <i class="fas fa-check"></i> Подтвердить импорт (@validQuestions.Count вопросов)
            </button>
        </form>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Применяем фильтр при загрузке страницы
            function applyFilter() {
                if ($('#showErrorsOnly').is(':checked')) {
                    $('.valid-questions-section').hide();
                } else {
                    $('.valid-questions-section').show();
                }
            }
            
            // Применяем фильтр сразу при загрузке
            applyFilter();
            
            // Обработчик изменения переключателя
            $('#showErrorsOnly').on('change', function() {
                applyFilter();
            });
        });
    </script>
}
