@model OnlineTutor3.Web.ViewModels.CreateSpellingTestViewModel
@{
    ViewData["Title"] = "Создание теста по орфографии";
    var assignment = ViewBag.Assignment as OnlineTutor3.Domain.Entities.Assignment;
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-sm modern-card">
            <div class="card-header auth-card-header" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                <h5 class="mb-0">
                    <i class="fas fa-plus"></i> Создание теста по орфографии
                </h5>
            </div>
            <div class="card-body auth-card-body">
                @if (assignment != null)
                {
                    <div class="alert alert-info alert-sm py-2 mb-2">
                        <i class="fas fa-info-circle"></i> 
                        <strong>Задание:</strong> @assignment.Title
                    </div>
                }

                <form asp-action="Create" method="post">
                    <input asp-for="AssignmentId" type="hidden" />
                    <div asp-validation-summary="All" class="text-danger mb-2 small"></div>

                    <div class="mb-2">
                        <label asp-for="Title" class="form-label form-label-modern small">
                            <i class="fas fa-heading"></i> Название теста <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Title" class="form-control form-control-modern form-control-sm" placeholder="Например: Орфография. Правописание гласных" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="mb-2">
                        <label asp-for="Description" class="form-label form-label-modern small">
                            <i class="fas fa-align-left"></i> Описание
                        </label>
                        <textarea asp-for="Description" class="form-control form-control-modern form-control-sm" rows="2"
                                  placeholder="Краткое описание теста, инструкции для учеников..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label asp-for="TimeLimit" class="form-label form-label-modern small">
                                <i class="fas fa-clock"></i> Время на выполнение (минут)
                            </label>
                            <input asp-for="TimeLimit" type="number" class="form-control form-control-modern form-control-sm" min="5" max="300" />
                            <span asp-validation-for="TimeLimit" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-2">
                            <label asp-for="MaxAttempts" class="form-label form-label-modern small">
                                <i class="fas fa-redo"></i> Количество попыток
                            </label>
                            <input asp-for="MaxAttempts" type="number" class="form-control form-control-modern form-control-sm" min="1" max="100" />
                            <span asp-validation-for="MaxAttempts" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label asp-for="StartDate" class="form-label form-label-modern small">
                                <i class="fas fa-calendar-alt"></i> Дата начала
                            </label>
                            <input asp-for="StartDate" type="datetime-local" class="form-control form-control-modern form-control-sm" />
                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-2">
                            <label asp-for="EndDate" class="form-label form-label-modern small">
                                <i class="fas fa-calendar-times"></i> Дата окончания
                            </label>
                            <input asp-for="EndDate" type="datetime-local" class="form-control form-control-modern form-control-sm" />
                            <span asp-validation-for="EndDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-2">
                        <div class="form-check form-switch">
                            <input asp-for="ShowHints" class="form-check-input" />
                            <label asp-for="ShowHints" class="form-check-label text-dark-modern small">
                                <i class="fas fa-question-circle"></i> Показывать подсказки
                            </label>
                        </div>
                    </div>

                    <div class="mb-2">
                        <div class="form-check form-switch">
                            <input asp-for="ShowCorrectAnswers" class="form-check-input" />
                            <label asp-for="ShowCorrectAnswers" class="form-check-label text-dark-modern small">
                                <i class="fas fa-check-circle"></i> Показывать правильные ответы
                            </label>
                        </div>
                    </div>

                    <div class="mb-2">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label text-dark-modern small">
                                <i class="fas fa-toggle-on"></i> Тест активен
                            </label>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <a asp-controller="Assignment" asp-action="Index" class="btn btn-sm btn-modern-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Отмена
                        </a>
                        <button type="submit" class="btn btn-sm btn-modern-success">
                            <i class="fas fa-save"></i> Создать тест
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
