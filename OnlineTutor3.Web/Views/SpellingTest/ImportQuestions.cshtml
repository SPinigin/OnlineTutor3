@model OnlineTutor3.Web.ViewModels.SpellingQuestionImportViewModel
@{
    ViewData["Title"] = "Импорт вопросов";
    var test = ViewBag.Test as OnlineTutor3.Domain.Entities.SpellingTest;
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white py-2">
                <h5 class="mb-0">
                    <i class="fas fa-file-import"></i> Импорт вопросов по орфографии
                </h5>
            </div>
            <div class="card-body p-2">
                @if (test != null)
                {
                    <div class="alert alert-info alert-sm py-2 mb-2">
                        <i class="fas fa-info-circle"></i> 
                        <strong>Тест:</strong> @test.Title
                    </div>
                }

                <div class="alert alert-warning alert-sm py-2 mb-2">
                    <h6 class="small mb-1"><i class="fas fa-exclamation-triangle"></i> Инструкция по импорту:</h6>
                    <ol class="small mb-0">
                        <li>Скачайте шаблон Excel файла</li>
                        <li>Заполните вопросы согласно формату</li>
                        <li>Загрузите заполненный файл</li>
                        <li>Проверьте данные и подтвердите импорт</li>
                    </ol>
                </div>

                <div class="text-center mb-3">
                    <a asp-action="DownloadTemplate" class="btn btn-sm btn-success">
                        <i class="fas fa-download"></i> Скачать шаблон Excel
                    </a>
                    <div class="form-text small mt-1">
                        <i class="fas fa-lightbulb"></i> Шаблон содержит примеры и инструкции по заполнению
                    </div>
                </div>

                <hr class="my-2">

                <form asp-action="ImportQuestions" method="post" enctype="multipart/form-data">
                    <input asp-for="SpellingTestId" type="hidden" />
                    <div asp-validation-summary="All" class="text-danger mb-2 small"></div>

                    <div class="mb-2">
                        <label asp-for="ExcelFile" class="form-label small">
                            <i class="fas fa-file-excel"></i> Excel файл с вопросами <span class="text-danger">*</span>
                        </label>
                        <input asp-for="ExcelFile" class="form-control form-control-sm" type="file" accept=".xlsx,.xls" />
                        <span asp-validation-for="ExcelFile" class="text-danger small"></span>
                        <div class="form-text small">
                            <i class="fas fa-info-circle"></i> Поддерживаются файлы .xlsx и .xls (максимум 10 МБ)
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PointsPerQuestion" class="form-label small">
                            <i class="fas fa-star"></i> Баллы за каждый правильный ответ
                        </label>
                        <input asp-for="PointsPerQuestion" class="form-control form-control-sm" type="number" min="1" max="100" />
                        <span asp-validation-for="PointsPerQuestion" class="text-danger small"></span>
                        <div class="form-text small">
                            <i class="fas fa-info-circle"></i> Количество баллов, которое получит ученик за правильный ответ
                        </div>
                    </div>

                    <div class="alert alert-light border small mb-3">
                        <h6 class="small mb-2"><i class="fas fa-table"></i> Формат данных в Excel файле:</h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="small">Слово (с пропуском)*</th>
                                        <th class="small">Правильная буква*</th>
                                        <th class="small">Полное слово*</th>
                                        <th class="small">Подсказка</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="small">Прол_тает</td>
                                        <td class="small">е</td>
                                        <td class="small">пролетает</td>
                                        <td class="small">Безударная гласная "е"...</td>
                                    </tr>
                                    <tr>
                                        <td class="small">д_ждливый</td>
                                        <td class="small">о</td>
                                        <td class="small">дождливый</td>
                                        <td class="small">Проверочное слово: дождь</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <small class="text-muted">
                            <i class="fas fa-asterisk text-danger"></i> Поля отмеченные * обязательны для заполнения
                        </small>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <a asp-action="Details" asp-route-id="@test!.Id" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Назад к тесту
                        </a>
                        <button type="submit" class="btn btn-sm btn-info">
                            <i class="fas fa-upload"></i> Загрузить и проверить
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Проверка размера файла
            document.querySelector('input[type="file"]').addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    const maxSize = 10 * 1024 * 1024; // 10 МБ
                    if (file.size > maxSize) {
                        alert('Размер файла превышает 10 МБ. Выберите файл меньшего размера.');
                        e.target.value = '';
                    }
                }
            });
        });
    </script>
}

