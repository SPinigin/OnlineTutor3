@model OnlineTutor3.Domain.Entities.SpellingTest
@{
    ViewData["Title"] = $"Тест: {Model.Title}";
    var assignment = ViewBag.Assignment as OnlineTutor3.Domain.Entities.Assignment;
    var questions = ViewBag.Questions as List<OnlineTutor3.Domain.Entities.SpellingQuestion> ?? new List<OnlineTutor3.Domain.Entities.SpellingQuestion>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>
            <i class="fas fa-spell-check text-primary"></i> @Model.Title
            <span class="badge bg-@(Model.IsActive ? "success" : "secondary") ms-2">
                @(Model.IsActive ? "Активен" : "Неактивен")
            </span>
        </h2>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="text-muted">@Model.Description</p>
        }
        @if (assignment != null)
        {
            <p class="text-muted">
                <i class="fas fa-tasks"></i> 
                <a asp-controller="Assignment" asp-action="Details" asp-route-id="@assignment.Id">@assignment.Title</a>
            </p>
        }
    </div>
    <div>
        <a asp-controller="Assignment" asp-action="Details" asp-route-id="@Model.AssignmentId" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Назад к заданию
        </a>
    </div>
</div>

<div class="row mb-4 g-2 g-md-3">
    <div class="col-6 col-md-3">
        <div class="card text-center border-primary">
            <div class="card-body">
                <i class="fas fa-question-circle text-primary" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-0">@questions.Count</h6>
                <p class="text-muted mb-0 small">Вопросов</p>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card text-center border-info">
            <div class="card-body">
                <i class="fas fa-clock text-info" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-0">@Model.TimeLimit</h6>
                <p class="text-muted mb-0 small">Минут</p>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card text-center border-success">
            <div class="card-body">
                <i class="fas fa-redo text-success" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-0">@Model.MaxAttempts</h6>
                <p class="text-muted mb-0 small">Попыток</p>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card text-center border-warning">
            <div class="card-body">
                <i class="fas fa-calendar-plus text-warning" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-0">@Model.CreatedAt.ToString("dd.MM.yyyy")</h6>
                <p class="text-muted mb-0 small">Создан</p>
            </div>
        </div>
    </div>
</div>

<div class="card mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-question-circle"></i> Вопросы (@questions.Count)
        </h5>
        <a asp-controller="SpellingQuestion" asp-action="Create" asp-route-testId="@Model.Id" class="btn btn-sm btn-success">
            <i class="fas fa-plus"></i> Добавить вопрос
        </a>
    </div>
    <div class="card-body">
        @if (questions.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th style="width: 5%;">#</th>
                            <th style="width: 40%;">Слово с пропуском</th>
                            <th style="width: 15%;">Правильная буква</th>
                            <th style="width: 20%;">Полное слово</th>
                            <th style="width: 10%;">Баллы</th>
                            <th style="width: 10%;">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var question in questions.OrderBy(q => q.OrderIndex))
                        {
                            <tr>
                                <td>@question.OrderIndex</td>
                                <td>@question.WordWithGap</td>
                                <td><strong>@question.CorrectLetter</strong></td>
                                <td>@question.FullWord</td>
                                <td>@question.Points</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="SpellingQuestion" asp-action="Edit" asp-route-id="@question.Id" class="btn btn-outline-primary" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="SpellingQuestion" asp-action="Delete" asp-route-id="@question.Id" class="btn btn-outline-danger" title="Удалить">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-question-circle text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">В этом тесте пока нет вопросов</p>
                <a asp-controller="SpellingQuestion" asp-action="Create" asp-route-testId="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Добавить первый вопрос
                </a>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        <i class="fas fa-edit"></i> Редактировать тест
    </a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
        <i class="fas fa-trash"></i> Удалить тест
    </a>
</div>

