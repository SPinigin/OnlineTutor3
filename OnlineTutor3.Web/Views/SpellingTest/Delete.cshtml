@model OnlineTutor3.Domain.Entities.SpellingTest
@{
    ViewData["Title"] = "Удаление теста";
    var assignment = ViewBag.Assignment as OnlineTutor3.Domain.Entities.Assignment;
    var questionsCount = ViewBag.QuestionsCount as int? ?? 0;
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow modern-card" style="border-left: 4px solid #dc3545;">
            <div class="card-header auth-card-header" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle"></i> Подтверждение удаления
                </h4>
            </div>
            <div class="card-body auth-card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-warning"></i>
                    <strong>Внимание!</strong> Это действие нельзя отменить. Все вопросы и результаты теста также будут удалены.
                </div>

                <h5 class="text-dark-modern">Вы действительно хотите удалить этот тест?</h5>

                <div class="card mt-3 modern-card">
                    <div class="card-body modern-card-body">
                        <h6 class="modern-card-title">
                            <i class="fas fa-spell-check"></i> @Model.Title
                        </h6>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="text-muted-modern">@Model.Description</p>
                        }
                        @if (assignment != null)
                        {
                            <p class="text-muted-modern">
                                <i class="fas fa-tasks"></i> <strong class="text-dark-modern">Задание:</strong> @assignment.Title
                            </p>
                        }
                        <div class="row text-center mt-3">
                            <div class="col">
                                <strong class="text-dark-modern">@questionsCount</strong><br>
                                <small class="text-muted-modern">вопросов</small>
                            </div>
                            <div class="col">
                                <strong class="text-dark-modern">@Model.TimeLimit</strong><br>
                                <small class="text-muted-modern">минут</small>
                            </div>
                        </div>
                        <small class="text-muted-modern">Создан: @Model.CreatedAt.ToString("dd.MM.yyyy")</small>
                    </div>
                </div>
            </div>
            <div class="card-footer auth-card-footer">
                <form asp-action="Delete" method="post" class="d-inline">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-modern-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Отмена
                        </a>
                        <button type="submit" class="btn btn-modern-outline-danger">
                            <i class="fas fa-trash"></i> Удалить
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

