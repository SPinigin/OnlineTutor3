                                                                <button type="submit" class="btn btn-sm btn-modern-outline-@(test.IsActive ? "warning" : "success")" title="@(test.IsActive ? "Деактивировать" : "Активировать")" style="padding: 0.2rem 0.4rem;">
                                                                    <i class="fas fa-@(test.IsActive ? "toggle-on" : "toggle-off")" style="font-size: 0.75rem;"></i>
                                                                </button>
                                                            </form>
                                                            <a asp-controller="RegularTest" asp-action="Delete" asp-route-id="@test.Id" class="btn btn-sm btn-modern-outline-danger" title="Удалить" style="padding: 0.2rem 0.4rem;">
                                                                <i class="fas fa-trash" style="font-size: 0.75rem;"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                        @if (assignmentData?.NotParticleTests != null && assignmentData.NotParticleTests.Any())
                                        {
                                            @foreach (var test in assignmentData.NotParticleTests)
                                            {
                                                <tr class="test-row" data-details-url="@Url.Action("Details", "NotParticleTest", new { id = test.Id })" >
                                                    <td>
                                                        <span class="badge badge-modern-secondary">
                                                            <i class="fas fa-minus-circle"></i>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <small><strong class="text-dark-modern">@test.Title</strong></small>
                                                        @if (!string.IsNullOrEmpty(test.Description))
                                                        {
                                                            <br>
                                                            <small class="text-muted-modern">@(test.Description.Length > 50 ? test.Description.Substring(0, 50) + "..." : test.Description)</small>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <small class="text-muted-modern">@(assignmentData?.NotParticleTestQuestionCounts?.ContainsKey(test.Id) == true ? assignmentData.NotParticleTestQuestionCounts[test.Id] : 0)</small>
                                                    </td>
                                                    <td class="text-center d-none d-md-table-cell">
                                                        <small class="text-muted-modern">@test.TimeLimit</small>
                                                    </td>
                                                    <td class="text-center">
                                                        <span class="badge badge-modern-@(test.IsActive ? "success" : "secondary") badge-sm d-none d-md-inline">
                                                            @(test.IsActive ? "Активен" : "Неактивен")
                                                        </span>
                                                        <i class="fas @(test.IsActive ? "fa-check-circle" : "fa-pause-circle") d-md-none" style="color: @(test.IsActive ? "#43e97b" : "#6c757d");" title="@(test.IsActive ? "Активен" : "Неактивен")"></i>
                                                    </td>
                                                    <td class="text-center" onclick="event.stopPropagation();" style="white-space: nowrap;">
                                                        <div class="d-flex gap-0 gap-sm-1 justify-content-center" style="flex-wrap: nowrap;">
                                                            <a asp-controller="NotParticleTest" asp-action="Details" asp-route-id="@test.Id" class="btn btn-sm btn-modern-outline-info" title="Подробнее" style="padding: 0.2rem 0.4rem;">
                                                                <i class="fas fa-eye" style="font-size: 0.75rem;"></i>
                                                            </a>
                                                            <a asp-controller="NotParticleTest" asp-action="Edit" asp-route-id="@test.Id" class="btn btn-sm btn-modern-outline-primary" title="Редактировать" style="padding: 0.2rem 0.4rem;">
                                                                <i class="fas fa-edit" style="font-size: 0.75rem;"></i>
                                                            </a>
                                                            <form asp-controller="NotParticleTest" asp-action="ToggleActive" asp-route-id="@test.Id" method="post" class="d-inline" style="margin: 0;">
                                                                <button type="submit" class="btn btn-sm btn-modern-outline-@(test.IsActive ? "warning" : "success")" title="@(test.IsActive ? "Деактивировать" : "Активировать")" style="padding: 0.2rem 0.4rem;">
                                                                    <i class="fas fa-@(test.IsActive ? "toggle-on" : "toggle-off")" style="font-size: 0.75rem;"></i>
                                                                </button>
                                                            </form>
                                                            <a asp-controller="NotParticleTest" asp-action="Delete" asp-route-id="@test.Id" class="btn btn-sm btn-modern-outline-danger" title="Удалить" style="padding: 0.2rem 0.4rem;">
                                                                <i class="fas fa-trash" style="font-size: 0.75rem;"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Поиск
            $('#searchInput').on('keyup', function() {
                var searchText = $(this).val().toLowerCase();
                $('.assignment-item').each(function() {
                    var assignmentText = $(this).text().toLowerCase();
                    $(this).toggle(assignmentText.indexOf(searchText) > -1);
                });
            });

            // Фильтр по предмету
            $('#subjectFilter').on('change', function() {
                var subjectId = $(this).val();
                if (subjectId === '') {
                    $('.assignment-item').show();
                } else {
                    $('.assignment-item').hide();
                    $('.assignment-item[data-subject-id="' + subjectId + '"]').show();
                }
            });

            // Обработка клика на строку теста
            $('.test-row').on('click', function(e) {
                // Не обрабатываем клик, если кликнули на кнопку или ссылку
                if ($(e.target).closest('a, button').length > 0) {
                    return;
                }
                
                var detailsUrl = $(this).data('details-url');
                if (detailsUrl) {
                    window.location.href = detailsUrl;
                }
            });
        });
    </script>
}
