@model IEnumerable<OnlineTutor3.Domain.Entities.Assignment>
@{
    ViewData["Title"] = "Управление заданиями и тестами";
    var assignmentsWithTests = ViewBag.AssignmentsWithTests as Dictionary<int, OnlineTutor3.Web.ViewModels.AssignmentTestsViewModel> ?? new Dictionary<int, OnlineTutor3.Web.ViewModels.AssignmentTestsViewModel>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>
            <i class="fas fa-tasks"></i> Управление заданиями и тестами
        </h2>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Создать задание
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-tasks text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">У вас пока нет заданий</h4>
        <p class="text-muted">Создайте свое первое задание для начала работы с тестами</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Создать первое задание
        </a>
    </div>
}
else
{
    <div class="row mb-3 align-items-center">
        <div class="col-12 col-md-4 mb-2 mb-md-0">
            <h6 class="mb-0">
                <i class="fas fa-tasks"></i> 
                <span>Всего заданий: @Model.Count()</span>
            </h6>
        </div>
        <div class="col-12 col-md-4 mb-2 mb-md-0">
            <div class="input-group input-group-sm">
                <span class="input-group-text bg-white">
                    <i class="fas fa-search text-muted"></i>
                </span>
                <input type="text" 
                       id="searchInput" 
                       class="form-control" 
                       placeholder="Поиск по названию..."
                       autocomplete="off">
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="input-group input-group-sm">
                <span class="input-group-text bg-white">
                    <i class="fas fa-filter text-muted"></i>
                </span>
                <select id="subjectFilter" class="form-select">
                    <option value="">Все предметы</option>
                @if (ViewBag.Subjects != null)
                {
                    @foreach (var subject in (SelectList)ViewBag.Subjects)
                    {
                        <option value="@subject.Value">@subject.Text</option>
                    }
                }
                </select>
            </div>
        </div>
    </div>

    <div class="accordion" id="assignmentsAccordion">
        @foreach (var assignment in Model)
        {
            var assignmentData = assignmentsWithTests.ContainsKey(assignment.Id) 
                ? assignmentsWithTests[assignment.Id] 
                : null;
            var totalTests = assignmentData?.TotalTestsCount ?? 0;
            var collapseId = $"collapseAssignment{assignment.Id}";
            var headingId = $"headingAssignment{assignment.Id}";
            
            var subjectsDict = ViewBag.SubjectsDict as Dictionary<int, string>;
            var subjectName = subjectsDict != null && subjectsDict.ContainsKey(assignment.SubjectId) 
                ? subjectsDict[assignment.SubjectId] 
                : $"Предмет #{assignment.SubjectId}";

            <div class="accordion-item mb-2 assignment-item" data-assignment-id="@assignment.Id" data-subject-id="@assignment.SubjectId">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button @(assignment == Model.First() ? "" : "collapsed")" 
                            type="button" 
                            data-bs-toggle="collapse" 
                            data-bs-target="#@collapseId" 
                            aria-expanded="@(assignment == Model.First() ? "true" : "false")" 
                            aria-controls="@collapseId">
                        <div class="d-flex justify-content-between align-items-center w-100 me-3">
                            <div class="d-flex align-items-center flex-grow-1">
                                <div class="me-3">
                                    <strong>@assignment.Title</strong>
                                    @if (!string.IsNullOrEmpty(assignment.Description))
                                    {
                                        <br>
                                        <small class="text-muted">@(assignment.Description.Length > 60 ? assignment.Description.Substring(0, 60) + "..." : assignment.Description)</small>
                                    }
                                </div>
                                <div class="ms-auto d-flex align-items-center gap-3">
                                    <span class="badge bg-info">@subjectName</span>
                                    <span class="badge bg-@(assignment.IsActive ? "success" : "secondary")">
                                        @(assignment.IsActive ? "Активно" : "Неактивно")
                                    </span>
                                    <span class="badge bg-primary">
                                        <i class="fas fa-clipboard-list"></i> @totalTests тест@(totalTests == 1 ? "" : totalTests < 5 ? "а" : "ов")
                                    </span>
                                </div>
                            </div>
                        </div>
                    </button>
                </h2>
                <div id="@collapseId" 
                     class="accordion-collapse collapse @(assignment == Model.First() ? "show" : "")" 
                     aria-labelledby="@headingId" 
                     data-bs-parent="#assignmentsAccordion">
                    <div class="accordion-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h5 class="mb-1">@assignment.Title</h5>
                                @if (!string.IsNullOrEmpty(assignment.Description))
                                {
                                    <p class="text-muted mb-2">@assignment.Description</p>
                                }
                                <div class="d-flex gap-2 flex-wrap">
                                    <span class="badge bg-info">
                                        <i class="fas fa-book"></i> @subjectName
                                    </span>
                                    @if (assignment.DueDate.HasValue)
                                    {
                                        <span class="badge bg-@(assignment.DueDate.Value < DateTime.Now ? "danger" : "warning")">
                                            <i class="fas fa-calendar"></i> До: @assignment.DueDate.Value.ToString("dd.MM.yyyy HH:mm")
                                        </span>
                                    }
                                    <span class="badge bg-@(assignment.IsActive ? "success" : "secondary")">
                                        <i class="fas fa-toggle-@(assignment.IsActive ? "on" : "off")"></i> 
                                        @(assignment.IsActive ? "Активно" : "Неактивно")
                                    </span>
                                </div>
                            </div>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@assignment.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Редактировать задание
                                </a>
                                <a asp-action="Delete" asp-route-id="@assignment.Id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Удалить задание
                                </a>
                            </div>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="mb-0">
                                <i class="fas fa-clipboard-list"></i> Тесты (@totalTests)
                            </h6>
                            <div class="btn-group btn-group-sm">
                                <a asp-controller="SpellingTest" asp-action="Create" asp-route-assignmentId="@assignment.Id" class="btn btn-outline-success">
                                    <i class="fas fa-plus"></i> Орфография
                                </a>
                                <a asp-controller="PunctuationTest" asp-action="Create" asp-route-assignmentId="@assignment.Id" class="btn btn-outline-info">
                                    <i class="fas fa-plus"></i> Пунктуация
                                </a>
                                <a asp-controller="OrthoeopyTest" asp-action="Create" asp-route-assignmentId="@assignment.Id" class="btn btn-outline-warning">
                                    <i class="fas fa-plus"></i> Орфоэпия
                                </a>
                                <a asp-controller="RegularTest" asp-action="Create" asp-route-assignmentId="@assignment.Id" class="btn btn-outline-primary">
                                    <i class="fas fa-plus"></i> Классический
                                </a>
                            </div>
                        </div>

                        @if (totalTests == 0)
                        {
                            <div class="text-center py-4 bg-light rounded">
                                <i class="fas fa-clipboard-list text-muted" style="font-size: 2rem;"></i>
                                <p class="text-muted mt-2 mb-0">В этом задании пока нет тестов</p>
                            </div>
                        }
                        else
                        {
                            <div class="row g-2">
                                @* Тесты по орфографии *@
                                @if (assignmentData?.SpellingTests != null && assignmentData.SpellingTests.Any())
                                {
                                    @foreach (var test in assignmentData.SpellingTests)
                                    {
                                        <div class="col-12 col-md-6 col-lg-4">
                                            <div class="card border-success h-100">
                                                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                                                    <span>
                                                        <i class="fas fa-spell-check"></i> Орфография
                                                    </span>
                                                    <span class="badge bg-light text-dark">
                                                        @(assignmentData?.SpellingTestQuestionCounts?.ContainsKey(test.Id) == true 
                                                            ? $"{assignmentData.SpellingTestQuestionCounts[test.Id]} вопросов" 
                                                            : "0 вопросов")
                                                    </span>
                                                </div>
                                                <div class="card-body">
                                                    <h6 class="card-title">@test.Title</h6>
                                                    @if (!string.IsNullOrEmpty(test.Description))
                                                    {
                                                        <p class="card-text small text-muted">@(test.Description.Length > 80 ? test.Description.Substring(0, 80) + "..." : test.Description)</p>
                                                    }
                                                    <div class="d-flex gap-1 flex-wrap mb-2">
                                                        <span class="badge bg-info">@test.TimeLimit мин</span>
                                                        <span class="badge bg-@(test.IsActive ? "success" : "secondary")">
                                                            @(test.IsActive ? "Активен" : "Неактивен")
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="card-footer bg-transparent">
                                                    <div class="btn-group btn-group-sm w-100">
                                                        <a asp-controller="SpellingTest" asp-action="Details" asp-route-id="@test.Id" class="btn btn-outline-info" title="Подробнее">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a asp-controller="SpellingTest" asp-action="Edit" asp-route-id="@test.Id" class="btn btn-outline-primary" title="Редактировать">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-controller="SpellingTest" asp-action="Delete" asp-route-id="@test.Id" class="btn btn-outline-danger" title="Удалить">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }

                                @* Тесты по пунктуации *@
                                @if (assignmentData?.PunctuationTests != null && assignmentData.PunctuationTests.Any())
                                {
                                    @foreach (var test in assignmentData.PunctuationTests)
                                    {
                                        <div class="col-12 col-md-6 col-lg-4">
                                            <div class="card border-info h-100">
                                                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                                                    <span>
                                                        <i class="fas fa-comma"></i> Пунктуация
                                                    </span>
                                                    <span class="badge bg-light text-dark">
                                                        @(assignmentData?.PunctuationTestQuestionCounts?.ContainsKey(test.Id) == true 
                                                            ? $"{assignmentData.PunctuationTestQuestionCounts[test.Id]} вопросов" 
                                                            : "0 вопросов")
                                                    </span>
                                                </div>
                                                <div class="card-body">
                                                    <h6 class="card-title">@test.Title</h6>
                                                    @if (!string.IsNullOrEmpty(test.Description))
                                                    {
                                                        <p class="card-text small text-muted">@(test.Description.Length > 80 ? test.Description.Substring(0, 80) + "..." : test.Description)</p>
                                                    }
                                                    <div class="d-flex gap-1 flex-wrap mb-2">
                                                        <span class="badge bg-info">@test.TimeLimit мин</span>
                                                        <span class="badge bg-@(test.IsActive ? "success" : "secondary")">
                                                            @(test.IsActive ? "Активен" : "Неактивен")
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="card-footer bg-transparent">
                                                    <div class="btn-group btn-group-sm w-100">
                                                        <a asp-controller="PunctuationTest" asp-action="Details" asp-route-id="@test.Id" class="btn btn-outline-info" title="Подробнее">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a asp-controller="PunctuationTest" asp-action="Edit" asp-route-id="@test.Id" class="btn btn-outline-primary" title="Редактировать">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-controller="PunctuationTest" asp-action="Delete" asp-route-id="@test.Id" class="btn btn-outline-danger" title="Удалить">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }

                                @* Тесты по орфоэпии *@
                                @if (assignmentData?.OrthoeopyTests != null && assignmentData.OrthoeopyTests.Any())
                                {
                                    @foreach (var test in assignmentData.OrthoeopyTests)
                                    {
                                        <div class="col-12 col-md-6 col-lg-4">
                                            <div class="card border-warning h-100">
                                                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                                                    <span>
                                                        <i class="fas fa-volume-up"></i> Орфоэпия
                                                    </span>
                                                    <span class="badge bg-light text-dark">
                                                        @(assignmentData?.OrthoeopyTestQuestionCounts?.ContainsKey(test.Id) == true 
                                                            ? $"{assignmentData.OrthoeopyTestQuestionCounts[test.Id]} вопросов" 
                                                            : "0 вопросов")
                                                    </span>
                                                </div>
                                                <div class="card-body">
                                                    <h6 class="card-title">@test.Title</h6>
                                                    @if (!string.IsNullOrEmpty(test.Description))
                                                    {
                                                        <p class="card-text small text-muted">@(test.Description.Length > 80 ? test.Description.Substring(0, 80) + "..." : test.Description)</p>
                                                    }
                                                    <div class="d-flex gap-1 flex-wrap mb-2">
                                                        <span class="badge bg-info">@test.TimeLimit мин</span>
                                                        <span class="badge bg-@(test.IsActive ? "success" : "secondary")">
                                                            @(test.IsActive ? "Активен" : "Неактивен")
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="card-footer bg-transparent">
                                                    <div class="btn-group btn-group-sm w-100">
                                                        <a asp-controller="OrthoeopyTest" asp-action="Details" asp-route-id="@test.Id" class="btn btn-outline-info" title="Подробнее">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a asp-controller="OrthoeopyTest" asp-action="Edit" asp-route-id="@test.Id" class="btn btn-outline-primary" title="Редактировать">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-controller="OrthoeopyTest" asp-action="Delete" asp-route-id="@test.Id" class="btn btn-outline-danger" title="Удалить">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }

                                @* Классические тесты *@
                                @if (assignmentData?.RegularTests != null && assignmentData.RegularTests.Any())
                                {
                                    @foreach (var test in assignmentData.RegularTests)
                                    {
                                        <div class="col-12 col-md-6 col-lg-4">
                                            <div class="card border-primary h-100">
                                                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                                    <span>
                                                        <i class="fas fa-clipboard-check"></i> Классический
                                                    </span>
                                                    <span class="badge bg-light text-dark">
                                                        @(assignmentData?.RegularTestQuestionCounts?.ContainsKey(test.Id) == true 
                                                            ? $"{assignmentData.RegularTestQuestionCounts[test.Id]} вопросов" 
                                                            : "0 вопросов")
                                                    </span>
                                                </div>
                                                <div class="card-body">
                                                    <h6 class="card-title">@test.Title</h6>
                                                    @if (!string.IsNullOrEmpty(test.Description))
                                                    {
                                                        <p class="card-text small text-muted">@(test.Description.Length > 80 ? test.Description.Substring(0, 80) + "..." : test.Description)</p>
                                                    }
                                                    <div class="d-flex gap-1 flex-wrap mb-2">
                                                        <span class="badge bg-info">@test.TimeLimit мин</span>
                                                        <span class="badge bg-@(test.IsActive ? "success" : "secondary")">
                                                            @(test.IsActive ? "Активен" : "Неактивен")
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="card-footer bg-transparent">
                                                    <div class="btn-group btn-group-sm w-100">
                                                        <a asp-controller="RegularTest" asp-action="Details" asp-route-id="@test.Id" class="btn btn-outline-info" title="Подробнее">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a asp-controller="RegularTest" asp-action="Edit" asp-route-id="@test.Id" class="btn btn-outline-primary" title="Редактировать">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-controller="RegularTest" asp-action="Delete" asp-route-id="@test.Id" class="btn btn-outline-danger" title="Удалить">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Поиск
            $('#searchInput').on('keyup', function() {
                var searchText = $(this).val().toLowerCase();
                $('.assignment-item').each(function() {
                    var assignmentText = $(this).text().toLowerCase();
                    $(this).toggle(assignmentText.indexOf(searchText) > -1);
                });
            });

            // Фильтр по предмету
            $('#subjectFilter').on('change', function() {
                var subjectId = $(this).val();
                if (subjectId === '') {
                    $('.assignment-item').show();
                } else {
                    $('.assignment-item').hide();
                    $('.assignment-item[data-subject-id="' + subjectId + '"]').show();
                }
            });
        });
    </script>
}
