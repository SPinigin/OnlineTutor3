@model IEnumerable<OnlineTutor3.Domain.Entities.Assignment>
@{
    ViewData["Title"] = "Управление заданиями";
    var assignmentsWithTests = ViewBag.AssignmentsWithTests as Dictionary<int, OnlineTutor3.Web.ViewModels.AssignmentTestsViewModel> ?? new Dictionary<int, OnlineTutor3.Web.ViewModels.AssignmentTestsViewModel>();
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2 page-header">
    <h4 class="mb-0 d-flex align-items-center gap-2 page-header-title">
        <i class="fas fa-tasks gradient-icon-blue"></i>
        <span>Управление заданиями</span>
    </h4>
    <div>
        <a asp-action="Create" class="btn btn-modern-success" title="Создать задание">
            <i class="fas fa-plus"></i> <span class="d-none d-md-inline">Создать задание</span>
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="empty-state-large">
        <i class="fas fa-tasks empty-state-icon"></i>
        <h4 class="mt-3 empty-state-title">У вас пока нет заданий</h4>
        <p class="empty-state-text">Создайте свое первое задание для начала работы с тестами</p>
        <a asp-action="Create" class="btn btn-modern-primary" title="Создать первое задание">
            <i class="fas fa-plus"></i> <span class="d-none d-md-inline">Создать первое задание</span>
        </a>
    </div>
}
else
{
    <div class="card shadow-sm border-0 mb-3 search-filter-card">
        <div class="card-body py-2 px-3">
            <div class="row align-items-center">
                <div class="col-12 col-md-4 mb-2 mb-md-0">
                    <small class="text-muted-modern">
                        <i class="fas fa-tasks text-muted-modern me-1"></i> Всего заданий: @Model.Count()
                    </small>
                </div>
                <div class="col-12 col-md-4 mb-2 mb-md-0">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-search text-muted-modern"></i>
                        </span>
                        <input type="text" 
                               id="searchInput" 
                               class="form-control form-control-sm border-start-0 form-control-modern" 
                               placeholder="Поиск по названию..."
                               autocomplete="off">
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-filter text-muted-modern"></i>
                        </span>
                        <select id="subjectFilter" class="form-select form-select-sm border-start-0 form-control-modern">
                            <option value="">Все предметы</option>
                        @if (ViewBag.Subjects != null)
                        {
                            @foreach (var subject in (SelectList)ViewBag.Subjects)
                            {
                                <option value="@subject.Value">@subject.Text</option>
                            }
                        }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="accordion accordion-modern" id="assignmentsAccordion">
        @foreach (var assignment in Model)
        {
            var assignmentData = assignmentsWithTests.ContainsKey(assignment.Id) 
                ? assignmentsWithTests[assignment.Id] 
                : null;
            var totalTests = assignmentData?.TotalTestsCount ?? 0;
            var collapseId = $"collapseAssignment{assignment.Id}";
            var headingId = $"headingAssignment{assignment.Id}";
            
            var subjectsDict = ViewBag.SubjectsDict as Dictionary<int, string>;
            var subjectName = subjectsDict != null && subjectsDict.ContainsKey(assignment.SubjectId) 
                ? subjectsDict[assignment.SubjectId] 
                : $"Предмет #{assignment.SubjectId}";

            <div class="accordion-item mb-1 assignment-item" data-assignment-id="@assignment.Id" data-subject-id="@assignment.SubjectId">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button collapsed accordion-button-modern py-2" 
                            type="button" 
                            data-bs-toggle="collapse" 
                            data-bs-target="#@collapseId" 
                            aria-expanded="false" 
                            aria-controls="@collapseId">
                        <div class="d-flex justify-content-between align-items-center w-100 me-2">
                            <div class="d-flex align-items-center flex-grow-1">
                                <div class="me-2">
                                    <strong class="small text-dark-modern">@assignment.Title</strong>
                                </div>
                                <span class="badge badge-modern-info badge-sm me-1">@subjectName</span>
                                <span class="badge badge-modern-@(assignment.IsActive ? "success" : "secondary") badge-sm me-1">
                                    @(assignment.IsActive ? "Активно" : "Неактивно")
                                </span>
                                <span class="badge badge-modern-primary badge-sm">
                                    <i class="fas fa-clipboard-list"></i> @totalTests
                                </span>
                            </div>
                        </div>
                    </button>
                </h2>
                <div id="@collapseId" 
                     class="accordion-collapse collapse" 
                     aria-labelledby="@headingId" 
                     data-bs-parent="#assignmentsAccordion">
                    <div class="accordion-body accordion-body-modern p-2">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <small class="text-muted-modern">
                                    <i class="fas fa-book text-muted-modern"></i> @subjectName
                                    @if (assignment.DueDate.HasValue)
                                    {
                                        <span class="ms-2">
                                            <i class="fas fa-calendar text-muted-modern"></i> До: @assignment.DueDate.Value.ToString("dd.MM.yyyy HH:mm")
                                        </span>
                                    }
                                </small>
                            </div>
                            <div class="d-flex gap-1">
                                <a asp-action="Details" asp-route-id="@assignment.Id" class="btn btn-sm btn-modern-outline-info" title="Подробнее">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@assignment.Id" class="btn btn-sm btn-modern-outline-primary" title="Редактировать">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@assignment.Id" class="btn btn-sm btn-modern-outline-danger" title="Удалить">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-muted-modern">
                                <i class="fas fa-clipboard-list text-muted-modern"></i> Тесты (@totalTests)
                            </small>
                            <div class="d-flex gap-1">
                                @{
                                    var isRussianLanguage = subjectName.Equals("Русский язык", StringComparison.OrdinalIgnoreCase);
                                }
                                @if (isRussianLanguage)
                                {
                                    <a asp-controller="SpellingTest" asp-action="Create" asp-route-assignmentId="@assignment.Id" class="btn btn-sm btn-modern-outline-success" title="Орфография">
                                        <i class="fas fa-plus"></i> <i class="fas fa-spell-check"></i>
                                    </a>
                                    <a asp-controller="PunctuationTest" asp-action="Create" asp-route-assignmentId="@assignment.Id" class="btn btn-sm btn-modern-outline-info" title="Пунктуация">
                                        <i class="fas fa-plus"></i> <i class="fas fa-quote-right"></i>
                                    </a>
                                    <a asp-controller="OrthoeopyTest" asp-action="Create" asp-route-assignmentId="@assignment.Id" class="btn btn-sm btn-modern-outline-warning" title="Орфоэпия">
                                        <i class="fas fa-plus"></i> <i class="fas fa-volume-up"></i>
                                    </a>
                                    <a asp-controller="NotParticleTest" asp-action="Create" asp-route-assignmentId="@assignment.Id" class="btn btn-sm btn-modern-outline-secondary" title="Частица 'не'">
                                        <i class="fas fa-plus"></i> <i class="fas fa-link"></i>
                                    </a>
                                }
                                <a asp-controller="RegularTest" asp-action="Create" asp-route-assignmentId="@assignment.Id" class="btn btn-sm btn-modern-outline-primary" title="Классический">
                                    <i class="fas fa-plus"></i> <i class="fas fa-clipboard-check"></i>
                                </a>
                            </div>
                        </div>

                        @if (totalTests == 0)
                        {
                            <div class="empty-state-small">
                                <small class="empty-state-text">В этом задании пока нет тестов</small>
                            </div>
                        }
