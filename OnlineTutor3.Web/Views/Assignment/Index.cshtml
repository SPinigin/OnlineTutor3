@model IEnumerable<OnlineTutor3.Domain.Entities.Assignment>
@{
    ViewData["Title"] = "Управление заданиями и тестами";
    var assignmentsWithTests = ViewBag.AssignmentsWithTests as Dictionary<int, OnlineTutor3.Web.ViewModels.AssignmentTestsViewModel> ?? new Dictionary<int, OnlineTutor3.Web.ViewModels.AssignmentTestsViewModel>();
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <h4 class="mb-0 d-flex align-items-center gap-2">
        <i class="fas fa-tasks text-primary"></i>
        <span>Управление заданиями и тестами</span>
    </h4>
    <div>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Создать задание
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-tasks text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">У вас пока нет заданий</h4>
        <p class="text-muted">Создайте свое первое задание для начала работы с тестами</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Создать первое задание
        </a>
    </div>
}
else
{
    <div class="row mb-2 align-items-center">
        <div class="col-12 col-md-4 mb-2 mb-md-0">
            <small class="text-muted">
                <i class="fas fa-tasks"></i> Всего заданий: @Model.Count()
            </small>
        </div>
        <div class="col-12 col-md-4 mb-2 mb-md-0">
            <div class="input-group input-group-sm">
                <span class="input-group-text bg-white">
                    <i class="fas fa-search text-muted"></i>
                </span>
                <input type="text" 
                       id="searchInput" 
                       class="form-control form-control-sm" 
                       placeholder="Поиск по названию..."
                       autocomplete="off">
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="input-group input-group-sm">
                <span class="input-group-text bg-white">
                    <i class="fas fa-filter text-muted"></i>
                </span>
                <select id="subjectFilter" class="form-select form-select-sm">
                    <option value="">Все предметы</option>
                @if (ViewBag.Subjects != null)
                {
                    @foreach (var subject in (SelectList)ViewBag.Subjects)
                    {
                        <option value="@subject.Value">@subject.Text</option>
                    }
                }
                </select>
            </div>
        </div>
    </div>

    <div class="accordion" id="assignmentsAccordion">
        @foreach (var assignment in Model)
        {
            var assignmentData = assignmentsWithTests.ContainsKey(assignment.Id) 
                ? assignmentsWithTests[assignment.Id] 
                : null;
            var totalTests = assignmentData?.TotalTestsCount ?? 0;
            var collapseId = $"collapseAssignment{assignment.Id}";
            var headingId = $"headingAssignment{assignment.Id}";
            
            var subjectsDict = ViewBag.SubjectsDict as Dictionary<int, string>;
            var subjectName = subjectsDict != null && subjectsDict.ContainsKey(assignment.SubjectId) 
                ? subjectsDict[assignment.SubjectId] 
                : $"Предмет #{assignment.SubjectId}";

            <div class="accordion-item mb-1 assignment-item" data-assignment-id="@assignment.Id" data-subject-id="@assignment.SubjectId">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button collapsed py-2" 
                            type="button" 
                            data-bs-toggle="collapse" 
                            data-bs-target="#@collapseId" 
                            aria-expanded="false" 
                            aria-controls="@collapseId">
                        <div class="d-flex justify-content-between align-items-center w-100 me-2">
                            <div class="d-flex align-items-center flex-grow-1">
                                <div class="me-2">
                                    <strong class="small">@assignment.Title</strong>
                                </div>
                                <span class="badge bg-info badge-sm me-1">@subjectName</span>
                                <span class="badge bg-@(assignment.IsActive ? "success" : "secondary") badge-sm me-1">
                                    @(assignment.IsActive ? "Активно" : "Неактивно")
                                </span>
                                <span class="badge bg-primary badge-sm">
                                    <i class="fas fa-clipboard-list"></i> @totalTests
                                </span>
                            </div>
                        </div>
                    </button>
                </h2>
                <div id="@collapseId" 
                     class="accordion-collapse collapse" 
                     aria-labelledby="@headingId" 
                     data-bs-parent="#assignmentsAccordion">
                    <div class="accordion-body p-2">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <small class="text-muted">
                                    <i class="fas fa-book"></i> @subjectName
                                    @if (assignment.DueDate.HasValue)
                                    {
                                        <span class="ms-2">
                                            <i class="fas fa-calendar"></i> До: @assignment.DueDate.Value.ToString("dd.MM.yyyy HH:mm")
                                        </span>
                                    }
                                </small>
                            </div>
                            <div class="d-flex gap-1">
                                <a asp-action="Details" asp-route-id="@assignment.Id" class="btn btn-sm btn-outline-info" title="Подробнее">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@assignment.Id" class="btn btn-sm btn-outline-primary" title="Редактировать">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@assignment.Id" class="btn btn-sm btn-outline-danger" title="Удалить">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-muted">
                                <i class="fas fa-clipboard-list"></i> Тесты (@totalTests)
                            </small>
                            <div class="d-flex gap-1">
                                @{
                                    var isRussianLanguage = subjectName.Equals("Русский язык", StringComparison.OrdinalIgnoreCase);
                                }
                                @if (isRussianLanguage)
                                {
                                    <a asp-controller="SpellingTest" asp-action="Create" asp-route-assignmentId="@assignment.Id" class="btn btn-sm btn-outline-success" title="Орфография">
                                        <i class="fas fa-plus"></i> <i class="fas fa-spell-check"></i>
                                    </a>
                                    <a asp-controller="PunctuationTest" asp-action="Create" asp-route-assignmentId="@assignment.Id" class="btn btn-sm btn-outline-info" title="Пунктуация">
                                        <i class="fas fa-plus"></i> <i class="fas fa-quote-right"></i>
                                    </a>
                                    <a asp-controller="OrthoeopyTest" asp-action="Create" asp-route-assignmentId="@assignment.Id" class="btn btn-sm btn-outline-warning" title="Орфоэпия">
                                        <i class="fas fa-plus"></i> <i class="fas fa-volume-up"></i>
                                    </a>
                                }
                                <a asp-controller="RegularTest" asp-action="Create" asp-route-assignmentId="@assignment.Id" class="btn btn-sm btn-outline-primary" title="Классический">
                                    <i class="fas fa-plus"></i> <i class="fas fa-clipboard-check"></i>
                                </a>
                            </div>
                        </div>

                        @if (totalTests == 0)
                        {
                            <div class="text-center py-3 bg-light rounded">
                                <small class="text-muted">В этом задании пока нет тестов</small>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-sm table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 5%;">Тип</th>
                                            <th style="width: 35%;">Название</th>
                                            <th style="width: 15%;" class="text-center">Вопросов</th>
                                            <th style="width: 10%;" class="text-center">Время</th>
                                            <th style="width: 10%;" class="text-center">Статус</th>
                                            <th style="width: 25%;" class="text-center">Действия</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @* Тесты по орфографии *@
                                        @if (assignmentData?.SpellingTests != null && assignmentData.SpellingTests.Any())
                                        {
                                            @foreach (var test in assignmentData.SpellingTests)
                                            {
                                                <tr class="test-row" data-details-url="@Url.Action("Details", "SpellingTest", new { id = test.Id })" style="cursor: pointer;">
                                                    <td>
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-spell-check"></i>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <small><strong>@test.Title</strong></small>
                                                        @if (!string.IsNullOrEmpty(test.Description))
                                                        {
                                                            <br>
                                                            <small class="text-muted">@(test.Description.Length > 50 ? test.Description.Substring(0, 50) + "..." : test.Description)</small>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <small>@(assignmentData?.SpellingTestQuestionCounts?.ContainsKey(test.Id) == true ? assignmentData.SpellingTestQuestionCounts[test.Id] : 0)</small>
                                                    </td>
                                                    <td class="text-center">
                                                        <small>@test.TimeLimit мин</small>
                                                    </td>
                                                    <td class="text-center">
                                                        <span class="badge bg-@(test.IsActive ? "success" : "secondary") badge-sm">
                                                            @(test.IsActive ? "Активен" : "Неактивен")
                                                        </span>
                                                    </td>
                                                    <td class="text-center" onclick="event.stopPropagation();">
                                                        <div class="d-flex gap-1 justify-content-center">
                                                            <a asp-controller="TestAnalytics" asp-action="Spelling" asp-route-id="@test.Id" class="btn btn-sm btn-outline-warning" title="Аналитика">
                                                                <i class="fas fa-chart-bar"></i>
                                                            </a>
                                                            <a asp-controller="SpellingTest" asp-action="Details" asp-route-id="@test.Id" class="btn btn-sm btn-outline-info" title="Подробнее">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <a asp-controller="SpellingTest" asp-action="Edit" asp-route-id="@test.Id" class="btn btn-sm btn-outline-primary" title="Редактировать">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <a asp-controller="SpellingTest" asp-action="Delete" asp-route-id="@test.Id" class="btn btn-sm btn-outline-danger" title="Удалить">
                                                                <i class="fas fa-trash"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                        @* Тесты по пунктуации *@
                                        @if (assignmentData?.PunctuationTests != null && assignmentData.PunctuationTests.Any())
                                        {
                                            @foreach (var test in assignmentData.PunctuationTests)
                                            {
                                                <tr class="test-row" data-details-url="@Url.Action("Details", "PunctuationTest", new { id = test.Id })" style="cursor: pointer;">
                                                    <td>
                                                        <span class="badge bg-info">
                                                            <i class="fas fa-quote-right"></i>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <small><strong>@test.Title</strong></small>
                                                        @if (!string.IsNullOrEmpty(test.Description))
                                                        {
                                                            <br>
                                                            <small class="text-muted">@(test.Description.Length > 50 ? test.Description.Substring(0, 50) + "..." : test.Description)</small>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <small>@(assignmentData?.PunctuationTestQuestionCounts?.ContainsKey(test.Id) == true ? assignmentData.PunctuationTestQuestionCounts[test.Id] : 0)</small>
                                                    </td>
                                                    <td class="text-center">
                                                        <small>@test.TimeLimit мин</small>
                                                    </td>
                                                    <td class="text-center">
                                                        <span class="badge bg-@(test.IsActive ? "success" : "secondary") badge-sm">
                                                            @(test.IsActive ? "Активен" : "Неактивен")
                                                        </span>
                                                    </td>
                                                    <td class="text-center" onclick="event.stopPropagation();">
                                                        <div class="d-flex gap-1 justify-content-center">
                                                            <a asp-controller="TestAnalytics" asp-action="Punctuation" asp-route-id="@test.Id" class="btn btn-sm btn-outline-warning" title="Аналитика">
                                                                <i class="fas fa-chart-bar"></i>
                                                            </a>
                                                            <a asp-controller="PunctuationTest" asp-action="Details" asp-route-id="@test.Id" class="btn btn-sm btn-outline-info" title="Подробнее">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <a asp-controller="PunctuationTest" asp-action="Edit" asp-route-id="@test.Id" class="btn btn-sm btn-outline-primary" title="Редактировать">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <a asp-controller="PunctuationTest" asp-action="Delete" asp-route-id="@test.Id" class="btn btn-sm btn-outline-danger" title="Удалить">
                                                                <i class="fas fa-trash"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                        @* Тесты по орфоэпии *@
                                        @if (assignmentData?.OrthoeopyTests != null && assignmentData.OrthoeopyTests.Any())
                                        {
                                            @foreach (var test in assignmentData.OrthoeopyTests)
                                            {
                                                <tr class="test-row" data-details-url="@Url.Action("Details", "OrthoeopyTest", new { id = test.Id })" style="cursor: pointer;">
                                                    <td>
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="fas fa-volume-up"></i>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <small><strong>@test.Title</strong></small>
                                                        @if (!string.IsNullOrEmpty(test.Description))
                                                        {
                                                            <br>
                                                            <small class="text-muted">@(test.Description.Length > 50 ? test.Description.Substring(0, 50) + "..." : test.Description)</small>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <small>@(assignmentData?.OrthoeopyTestQuestionCounts?.ContainsKey(test.Id) == true ? assignmentData.OrthoeopyTestQuestionCounts[test.Id] : 0)</small>
                                                    </td>
                                                    <td class="text-center">
                                                        <small>@test.TimeLimit мин</small>
                                                    </td>
                                                    <td class="text-center">
                                                        <span class="badge bg-@(test.IsActive ? "success" : "secondary") badge-sm">
                                                            @(test.IsActive ? "Активен" : "Неактивен")
                                                        </span>
                                                    </td>
                                                    <td class="text-center" onclick="event.stopPropagation();">
                                                        <div class="d-flex gap-1 justify-content-center">
                                                            <a asp-controller="TestAnalytics" asp-action="Orthoeopy" asp-route-id="@test.Id" class="btn btn-sm btn-outline-warning" title="Аналитика">
                                                                <i class="fas fa-chart-bar"></i>
                                                            </a>
                                                            <a asp-controller="OrthoeopyTest" asp-action="Details" asp-route-id="@test.Id" class="btn btn-sm btn-outline-info" title="Подробнее">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <a asp-controller="OrthoeopyTest" asp-action="Edit" asp-route-id="@test.Id" class="btn btn-sm btn-outline-primary" title="Редактировать">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <a asp-controller="OrthoeopyTest" asp-action="Delete" asp-route-id="@test.Id" class="btn btn-sm btn-outline-danger" title="Удалить">
                                                                <i class="fas fa-trash"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                        @* Классические тесты *@
                                        @if (assignmentData?.RegularTests != null && assignmentData.RegularTests.Any())
                                        {
                                            @foreach (var test in assignmentData.RegularTests)
                                            {
                                                <tr class="test-row" data-details-url="@Url.Action("Details", "RegularTest", new { id = test.Id })" style="cursor: pointer;">
                                                    <td>
                                                        <span class="badge bg-primary">
                                                            <i class="fas fa-clipboard-check"></i>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <small><strong>@test.Title</strong></small>
                                                        @if (!string.IsNullOrEmpty(test.Description))
                                                        {
                                                            <br>
                                                            <small class="text-muted">@(test.Description.Length > 50 ? test.Description.Substring(0, 50) + "..." : test.Description)</small>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <small>@(assignmentData?.RegularTestQuestionCounts?.ContainsKey(test.Id) == true ? assignmentData.RegularTestQuestionCounts[test.Id] : 0)</small>
                                                    </td>
                                                    <td class="text-center">
                                                        <small>@test.TimeLimit мин</small>
                                                    </td>
                                                    <td class="text-center">
                                                        <span class="badge bg-@(test.IsActive ? "success" : "secondary") badge-sm">
                                                            @(test.IsActive ? "Активен" : "Неактивен")
                                                        </span>
                                                    </td>
                                                    <td class="text-center" onclick="event.stopPropagation();">
                                                        <div class="d-flex gap-1 justify-content-center">
                                                            <a asp-controller="TestAnalytics" asp-action="Regular" asp-route-id="@test.Id" class="btn btn-sm btn-outline-warning" title="Аналитика">
                                                                <i class="fas fa-chart-bar"></i>
                                                            </a>
                                                            <a asp-controller="RegularTest" asp-action="Details" asp-route-id="@test.Id" class="btn btn-sm btn-outline-info" title="Подробнее">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <a asp-controller="RegularTest" asp-action="Edit" asp-route-id="@test.Id" class="btn btn-sm btn-outline-primary" title="Редактировать">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <a asp-controller="RegularTest" asp-action="Delete" asp-route-id="@test.Id" class="btn btn-sm btn-outline-danger" title="Удалить">
                                                                <i class="fas fa-trash"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Поиск
            $('#searchInput').on('keyup', function() {
                var searchText = $(this).val().toLowerCase();
                $('.assignment-item').each(function() {
                    var assignmentText = $(this).text().toLowerCase();
                    $(this).toggle(assignmentText.indexOf(searchText) > -1);
                });
            });

            // Фильтр по предмету
            $('#subjectFilter').on('change', function() {
                var subjectId = $(this).val();
                if (subjectId === '') {
                    $('.assignment-item').show();
                } else {
                    $('.assignment-item').hide();
                    $('.assignment-item[data-subject-id="' + subjectId + '"]').show();
                }
            });

            // Обработка клика на строку теста
            $('.test-row').on('click', function(e) {
                // Не обрабатываем клик, если кликнули на кнопку или ссылку
                if ($(e.target).closest('a, button').length > 0) {
                    return;
                }
                
                var detailsUrl = $(this).data('details-url');
                if (detailsUrl) {
                    window.location.href = detailsUrl;
                }
            });
        });
    </script>
}
