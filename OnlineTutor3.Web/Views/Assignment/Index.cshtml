                        {
                            <div class="table-responsive-md">
                                <table class="table table-hover modern-table table-sm mb-0" style="table-layout: auto; width: 100%;">
                                    <thead>
                                        <tr>
                                            <th style="width: 50px; min-width: 50px;">Тип</th>
                                            <th style="min-width: 100px;">Название</th>
                                            <th class="text-center" style="width: 70px; min-width: 60px;">Вопросов</th>
                                            <th class="text-center d-none d-md-table-cell" style="width: 70px;">Время</th>
                                            <th class="text-center" style="width: 60px; min-width: 50px;">Статус</th>
                                            <th class="text-center" style="min-width: 180px;">Действия</th>
                                        </tr>
                                    </thead>
