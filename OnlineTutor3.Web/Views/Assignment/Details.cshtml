@model OnlineTutor3.Domain.Entities.Assignment
@{
    ViewData["Title"] = $"Задание: {Model.Title}";
    var subject = ViewBag.Subject as OnlineTutor3.Domain.Entities.Subject;
    var classes = ViewBag.Classes as List<OnlineTutor3.Domain.Entities.Class> ?? new List<OnlineTutor3.Domain.Entities.Class>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>
            <i class="fas fa-tasks text-primary"></i> @Model.Title
            <span class="badge bg-@(Model.IsActive ? "success" : "secondary") ms-2">
                @(Model.IsActive ? "Активно" : "Неактивно")
            </span>
        </h2>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="text-muted">@Model.Description</p>
        }
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Назад к списку
        </a>
    </div>
</div>

<div class="row mb-4 g-2 g-md-3">
    <div class="col-6 col-md-3">
        <div class="card text-center border-primary">
            <div class="card-body">
                <i class="fas fa-book text-primary" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-0">@(subject?.Name ?? "Неизвестно")</h6>
                <p class="text-muted mb-0 small">Предмет</p>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card text-center border-info">
            <div class="card-body">
                <i class="fas fa-graduation-cap text-info" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-0">@classes.Count</h6>
                <p class="text-muted mb-0 small">Классов</p>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card text-center border-success">
            <div class="card-body">
                <i class="fas fa-calendar-plus text-success" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-0">@Model.CreatedAt.ToString("dd.MM.yyyy")</h6>
                <p class="text-muted mb-0 small">Создано</p>
            </div>
        </div>
    </div>
    @if (Model.DueDate.HasValue)
    {
        <div class="col-6 col-md-3">
            <div class="card text-center border-@(Model.DueDate.Value < DateTime.Now ? "danger" : "warning")">
                <div class="card-body">
                    <i class="fas fa-calendar-alt text-@(Model.DueDate.Value < DateTime.Now ? "danger" : "warning")" style="font-size: 2rem;"></i>
                    <h6 class="mt-2 mb-0">@Model.DueDate.Value.ToString("dd.MM.yyyy")</h6>
                    <p class="text-muted mb-0 small">Срок выполнения</p>
                </div>
            </div>
        </div>
    }
</div>

<div class="card mb-3">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-graduation-cap"></i> Назначено классам (@classes.Count)
        </h5>
    </div>
    <div class="card-body">
        @if (classes.Any())
        {
            <div class="list-group">
                @foreach (var classItem in classes)
                {
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">@classItem.Name</h6>
                                @if (!string.IsNullOrEmpty(classItem.Description))
                                {
                                    <p class="mb-1 text-muted small">@classItem.Description</p>
                                }
                            </div>
                            <span class="badge bg-@(classItem.IsActive ? "success" : "secondary")">
                                @(classItem.IsActive ? "Активен" : "Неактивен")
                            </span>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-graduation-cap text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">Задание пока не назначено ни одному классу</p>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        <i class="fas fa-edit"></i> Редактировать
    </a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
        <i class="fas fa-trash"></i> Удалить
    </a>
</div>

