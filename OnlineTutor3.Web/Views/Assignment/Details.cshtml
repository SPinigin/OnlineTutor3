                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state-small">
                <small class="empty-state-text">В этом задании пока нет тестов</small>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.test-row').on('click', function(e) {
                if ($(e.target).closest('a, button').length > 0) {
                    return;
                }
                
                var detailsUrl = $(this).data('details-url');
                if (detailsUrl) {
                    window.location.href = detailsUrl;
                }
            });
        });
    </script>
}

