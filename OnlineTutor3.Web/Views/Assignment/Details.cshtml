@model OnlineTutor3.Domain.Entities.Assignment
@{
    ViewData["Title"] = $"Задание: {Model.Title}";
    var subject = ViewBag.Subject as OnlineTutor3.Domain.Entities.Subject;
    var classes = ViewBag.Classes as List<OnlineTutor3.Domain.Entities.Class> ?? new List<OnlineTutor3.Domain.Entities.Class>();
    var spellingTests = ViewBag.SpellingTests as List<OnlineTutor3.Domain.Entities.SpellingTest> ?? new List<OnlineTutor3.Domain.Entities.SpellingTest>();
    var punctuationTests = ViewBag.PunctuationTests as List<OnlineTutor3.Domain.Entities.PunctuationTest> ?? new List<OnlineTutor3.Domain.Entities.PunctuationTest>();
    var orthoeopyTests = ViewBag.OrthoeopyTests as List<OnlineTutor3.Domain.Entities.OrthoeopyTest> ?? new List<OnlineTutor3.Domain.Entities.OrthoeopyTest>();
    var regularTests = ViewBag.RegularTests as List<OnlineTutor3.Domain.Entities.RegularTest> ?? new List<OnlineTutor3.Domain.Entities.RegularTest>();
    var spellingQuestionCounts = ViewBag.SpellingTestQuestionCounts as Dictionary<int, int> ?? new Dictionary<int, int>();
    var punctuationQuestionCounts = ViewBag.PunctuationTestQuestionCounts as Dictionary<int, int> ?? new Dictionary<int, int>();
    var orthoeopyQuestionCounts = ViewBag.OrthoeopyTestQuestionCounts as Dictionary<int, int> ?? new Dictionary<int, int>();
    var regularQuestionCounts = ViewBag.RegularTestQuestionCounts as Dictionary<int, int> ?? new Dictionary<int, int>();
    var totalTests = spellingTests.Count + punctuationTests.Count + orthoeopyTests.Count + regularTests.Count;
    var isRussianLanguage = subject?.Name?.Equals("Русский язык", StringComparison.OrdinalIgnoreCase) == true;
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2 page-header">
    <div>
        <h4 class="mb-0 d-flex align-items-center gap-2 page-header-title">
            <i class="fas fa-tasks gradient-icon-blue"></i>
            <span>@Model.Title</span>
            <span class="badge badge-modern-@(Model.IsActive ? "success" : "secondary") ms-2 badge-sm">
                @(Model.IsActive ? "Активно" : "Неактивно")
            </span>
        </h4>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="text-muted-modern mb-0 small">@Model.Description</p>
        }
    </div>
    <div>
        <a asp-action="Index" class="btn btn-sm btn-modern-outline-secondary">
            <i class="fas fa-arrow-left"></i> Назад к списку
        </a>
    </div>
</div>

<div class="row mb-3 g-1 g-md-2">
    <div class="col-6 col-md-3">
        <div class="card modern-card stat-card">
            <div class="card-body text-center py-2 px-2">
                <div class="stat-card-icon">
                    <i class="fas fa-book"></i>
                </div>
                <div class="stat-card-value" style="font-size: 0.9rem; line-height: 1.2;">@(subject?.Name ?? "Неизвестно")</div>
                <small class="stat-card-label">Предмет</small>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card modern-card stat-card">
            <div class="card-body text-center py-2 px-2">
                <div class="stat-card-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <div class="stat-card-value">@classes.Count</div>
                <small class="stat-card-label">Классов</small>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card modern-card stat-card">
            <div class="card-body text-center py-2 px-2">
                <div class="stat-card-icon">
                    <i class="fas fa-calendar-plus"></i>
                </div>
                <div class="stat-card-value" style="font-size: 0.9rem;">@Model.CreatedAt.ToString("dd.MM.yyyy")</div>
                <small class="stat-card-label">Создано</small>
            </div>
        </div>
    </div>
    @if (Model.DueDate.HasValue)
    {
        <div class="col-6 col-md-3">
            <div class="card modern-card stat-card">
                <div class="card-body text-center py-2 px-2">
                    <div class="stat-card-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div class="stat-card-value" style="font-size: 0.9rem;">@Model.DueDate.Value.ToString("dd.MM.yyyy")</div>
                    <small class="stat-card-label">Срок выполнения</small>
                </div>
            </div>
        </div>
    }
</div>

<div class="card modern-card mb-3">
    <div class="card-header modern-card-header">
        <h6 class="mb-0 modern-card-title">
            <i class="fas fa-graduation-cap gradient-icon-purple"></i> Назначено классам (@classes.Count)
        </h6>
    </div>
    <div class="card-body modern-card-body p-2">
        @if (classes.Any())
        {
            <div class="table-responsive">
                <table class="table modern-table table-sm mb-0">
                    <thead>
                        <tr>
                            <th style="width: 40%;">Название</th>
                            <th style="width: 40%;">Описание</th>
                            <th style="width: 10%;">Статус</th>
                            <th style="width: 10%;" class="text-center">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var classItem in classes)
                        {
                            <tr>
                                <td><small><strong class="text-dark-modern">@classItem.Name</strong></small></td>
                                <td><small class="text-muted-modern">@(string.IsNullOrEmpty(classItem.Description) ? "-" : (classItem.Description.Length > 50 ? classItem.Description.Substring(0, 50) + "..." : classItem.Description))</small></td>
                                <td>
                                    <span class="badge badge-modern-@(classItem.IsActive ? "success" : "secondary") badge-sm">
                                        @(classItem.IsActive ? "Активен" : "Неактивен")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a asp-controller="Class" asp-action="Details" asp-route-id="@classItem.Id" class="btn btn-sm btn-modern-outline-info" title="Подробнее">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state-small">
                <small class="empty-state-text">Задание пока не назначено ни одному классу</small>
            </div>
        }
    </div>
</div>

<div class="card modern-card mb-3">
    <div class="card-header modern-card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0 modern-card-title">
            <i class="fas fa-clipboard-list gradient-icon-blue"></i> Тесты в задании (@totalTests)
        </h6>
        <div class="d-flex gap-1">
            @if (isRussianLanguage)
            {
                <a asp-controller="SpellingTest" asp-action="Create" asp-route-assignmentId="@Model.Id" class="btn btn-sm btn-modern-outline-success" title="Орфография">
                    <i class="fas fa-plus"></i> <i class="fas fa-spell-check"></i>
                </a>
                <a asp-controller="PunctuationTest" asp-action="Create" asp-route-assignmentId="@Model.Id" class="btn btn-sm btn-modern-outline-info" title="Пунктуация">
                    <i class="fas fa-plus"></i> <i class="fas fa-quote-right"></i>
                </a>
                <a asp-controller="OrthoeopyTest" asp-action="Create" asp-route-assignmentId="@Model.Id" class="btn btn-sm btn-modern-outline-warning" title="Орфоэпия">
                    <i class="fas fa-plus"></i> <i class="fas fa-volume-up"></i>
                </a>
            }
            <a asp-controller="RegularTest" asp-action="Create" asp-route-assignmentId="@Model.Id" class="btn btn-sm btn-modern-outline-primary" title="Классический">
                <i class="fas fa-plus"></i> <i class="fas fa-clipboard-check"></i>
            </a>
        </div>
    </div>
    <div class="card-body modern-card-body p-2">
        @if (totalTests > 0)
        {
            <div class="table-responsive">
                <table class="table modern-table table-sm mb-0">
                    <thead>
                        <tr>
                            <th style="min-width: 40px;">Тип</th>
                            <th>Название</th>
                            <th style="min-width: 60px;" class="text-center">Вопросов</th>
                            <th style="min-width: 50px;" class="text-center">Время</th>
                            <th style="min-width: 50px;" class="text-center">Статус</th>
                            <th style="min-width: 120px;" class="text-center">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var test in spellingTests)
                        {
                            <tr>
                                <td>
                                    <span class="badge badge-modern-success">
                                        <i class="fas fa-spell-check"></i>
                                    </span>
                                </td>
                                <td>
                                    <small><strong class="text-dark-modern">@test.Title</strong></small>
                                    @if (!string.IsNullOrEmpty(test.Description))
                                    {
                                        <br>
                                        <small class="text-muted-modern">@(test.Description.Length > 50 ? test.Description.Substring(0, 50) + "..." : test.Description)</small>
                                    }
                                </td>
                                <td class="text-center">
                                    <small class="text-muted-modern">@(spellingQuestionCounts.ContainsKey(test.Id) ? spellingQuestionCounts[test.Id] : 0)</small>
                                </td>
                                <td class="text-center"><small class="text-muted-modern">@test.TimeLimit мин</small></td>
                                <td class="text-center">
                                    <span class="badge badge-modern-@(test.IsActive ? "success" : "secondary") badge-sm d-none d-md-inline">
                                        @(test.IsActive ? "Активен" : "Неактивен")
                                    </span>
                                    <i class="fas @(test.IsActive ? "fa-check-circle text-success" : "fa-pause-circle text-secondary") d-md-none" title="@(test.IsActive ? "Активен" : "Неактивен")"></i>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex gap-1 justify-content-center">
                                        <a asp-controller="SpellingTest" asp-action="Details" asp-route-id="@test.Id" class="btn btn-sm btn-modern-outline-info" title="Подробнее">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="SpellingTest" asp-action="Edit" asp-route-id="@test.Id" class="btn btn-sm btn-modern-outline-primary" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="SpellingTest" asp-action="Delete" asp-route-id="@test.Id" class="btn btn-sm btn-modern-outline-danger" title="Удалить">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }

                        @foreach (var test in punctuationTests)
                        {
                            <tr>
                                <td>
                                    <span class="badge badge-modern-info">
                                        <i class="fas fa-quote-right"></i>
                                    </span>
                                </td>
                                <td>
                                    <small><strong class="text-dark-modern">@test.Title</strong></small>
                                    @if (!string.IsNullOrEmpty(test.Description))
                                    {
                                        <br>
                                        <small class="text-muted-modern">@(test.Description.Length > 50 ? test.Description.Substring(0, 50) + "..." : test.Description)</small>
                                    }
                                </td>
                                <td class="text-center">
                                    <small class="text-muted-modern">@(punctuationQuestionCounts.ContainsKey(test.Id) ? punctuationQuestionCounts[test.Id] : 0)</small>
                                </td>
                                <td class="text-center"><small class="text-muted-modern">@test.TimeLimit мин</small></td>
                                <td class="text-center">
                                    <span class="badge badge-modern-@(test.IsActive ? "success" : "secondary") badge-sm d-none d-md-inline">
                                        @(test.IsActive ? "Активен" : "Неактивен")
                                    </span>
                                    <i class="fas @(test.IsActive ? "fa-check-circle text-success" : "fa-pause-circle text-secondary") d-md-none" title="@(test.IsActive ? "Активен" : "Неактивен")"></i>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex gap-1 justify-content-center">
                                        <a asp-controller="PunctuationTest" asp-action="Details" asp-route-id="@test.Id" class="btn btn-sm btn-modern-outline-info" title="Подробнее">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="PunctuationTest" asp-action="Edit" asp-route-id="@test.Id" class="btn btn-sm btn-modern-outline-primary" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="PunctuationTest" asp-action="Delete" asp-route-id="@test.Id" class="btn btn-sm btn-modern-outline-danger" title="Удалить">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }

                        @foreach (var test in orthoeopyTests)
                        {
                            <tr>
                                <td>
                                    <span class="badge badge-modern-warning">
                                        <i class="fas fa-volume-up"></i>
                                    </span>
                                </td>
                                <td>
                                    <small><strong class="text-dark-modern">@test.Title</strong></small>
                                    @if (!string.IsNullOrEmpty(test.Description))
                                    {
                                        <br>
                                        <small class="text-muted-modern">@(test.Description.Length > 50 ? test.Description.Substring(0, 50) + "..." : test.Description)</small>
                                    }
                                </td>
                                <td class="text-center">
                                    <small class="text-muted-modern">@(orthoeopyQuestionCounts.ContainsKey(test.Id) ? orthoeopyQuestionCounts[test.Id] : 0)</small>
                                </td>
                                <td class="text-center"><small class="text-muted-modern">@test.TimeLimit мин</small></td>
                                <td class="text-center">
                                    <span class="badge badge-modern-@(test.IsActive ? "success" : "secondary") badge-sm d-none d-md-inline">
                                        @(test.IsActive ? "Активен" : "Неактивен")
                                    </span>
                                    <i class="fas @(test.IsActive ? "fa-check-circle text-success" : "fa-pause-circle text-secondary") d-md-none" title="@(test.IsActive ? "Активен" : "Неактивен")"></i>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex gap-1 justify-content-center">
                                        <a asp-controller="OrthoeopyTest" asp-action="Details" asp-route-id="@test.Id" class="btn btn-sm btn-modern-outline-info" title="Подробнее">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="OrthoeopyTest" asp-action="Edit" asp-route-id="@test.Id" class="btn btn-sm btn-modern-outline-primary" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="OrthoeopyTest" asp-action="Delete" asp-route-id="@test.Id" class="btn btn-sm btn-modern-outline-danger" title="Удалить">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }

                        @foreach (var test in regularTests)
                        {
                            <tr>
                                <td>
                                    <span class="badge badge-modern-primary">
                                        <i class="fas fa-clipboard-check"></i>
                                    </span>
                                </td>
                                <td>
                                    <small><strong class="text-dark-modern">@test.Title</strong></small>
                                    @if (!string.IsNullOrEmpty(test.Description))
                                    {
                                        <br>
                                        <small class="text-muted-modern">@(test.Description.Length > 50 ? test.Description.Substring(0, 50) + "..." : test.Description)</small>
                                    }
                                </td>
                                <td class="text-center">
                                    <small class="text-muted-modern">@(regularQuestionCounts.ContainsKey(test.Id) ? regularQuestionCounts[test.Id] : 0)</small>
                                </td>
                                <td class="text-center"><small class="text-muted-modern">@test.TimeLimit мин</small></td>
                                <td class="text-center">
                                    <span class="badge badge-modern-@(test.IsActive ? "success" : "secondary") badge-sm d-none d-md-inline">
                                        @(test.IsActive ? "Активен" : "Неактивен")
                                    </span>
                                    <i class="fas @(test.IsActive ? "fa-check-circle text-success" : "fa-pause-circle text-secondary") d-md-none" title="@(test.IsActive ? "Активен" : "Неактивен")"></i>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex gap-1 justify-content-center">
                                        <a asp-controller="RegularTest" asp-action="Details" asp-route-id="@test.Id" class="btn btn-sm btn-modern-outline-info" title="Подробнее">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="RegularTest" asp-action="Edit" asp-route-id="@test.Id" class="btn btn-sm btn-modern-outline-primary" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="RegularTest" asp-action="Delete" asp-route-id="@test.Id" class="btn btn-sm btn-modern-outline-danger" title="Удалить">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state-small">
                <small class="empty-state-text">В этом задании пока нет тестов</small>
            </div>
        }
    </div>
</div>

