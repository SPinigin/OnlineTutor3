@model OnlineTutor3.Domain.Entities.Assignment
@{
    ViewData["Title"] = "Удаление задания";
    var subject = ViewBag.Subject as OnlineTutor3.Domain.Entities.Subject;
    var classes = ViewBag.Classes as List<OnlineTutor3.Domain.Entities.Class> ?? new List<OnlineTutor3.Domain.Entities.Class>();
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle"></i> Подтверждение удаления
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-warning"></i>
                    <strong>Внимание!</strong> Это действие нельзя отменить. Все тесты, связанные с этим заданием, также будут удалены.
                </div>

                <h5>Вы действительно хотите удалить это задание?</h5>

                <div class="card mt-3">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-tasks"></i> @Model.Title
                        </h6>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="card-text">@Model.Description</p>
                        }
                        <div class="row text-center mt-3">
                            <div class="col">
                                <strong>@(subject?.Name ?? "Неизвестно")</strong><br>
                                <small class="text-muted">предмет</small>
                            </div>
                            <div class="col">
                                <strong>@classes.Count</strong><br>
                                <small class="text-muted">классов</small>
                            </div>
                        </div>
                        <small class="text-muted">Создано: @Model.CreatedAt.ToString("dd.MM.yyyy")</small>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post" class="d-inline">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Отмена
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Удалить
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

