@model OnlineTutor3.Domain.Entities.Student
@{
    var user = ViewBag.User as OnlineTutor3.Domain.Entities.ApplicationUser;
    var studentName = user != null ? user.FullName : "Неизвестно";
    ViewData["Title"] = $"Ученик: {studentName}";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>
            <i class="fas fa-user-graduate text-primary"></i> @(user != null ? user.FullName : "Ученик")
        </h2>
        @if (!string.IsNullOrEmpty(Model.StudentNumber))
        {
            <p class="text-muted mb-0">Номер ученика: @Model.StudentNumber</p>
        }
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Назад к списку
        </a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-user"></i> Личная информация
                </h5>
            </div>
            <div class="card-body">
                @if (user != null)
                {
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Имя:</dt>
                        <dd class="col-sm-8">@user.FirstName</dd>

                        <dt class="col-sm-4">Фамилия:</dt>
                        <dd class="col-sm-8">@user.LastName</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@user.Email</dd>

                        @if (!string.IsNullOrEmpty(user.PhoneNumber))
                        {
                            <dt class="col-sm-4">Телефон:</dt>
                            <dd class="col-sm-8">@user.PhoneNumber</dd>
                        }

                        <dt class="col-sm-4">Дата рождения:</dt>
                        <dd class="col-sm-8">@user.DateOfBirth.ToString("dd.MM.yyyy")</dd>

                        <dt class="col-sm-4">Возраст:</dt>
                        <dd class="col-sm-8">
                            @{
                                var age = DateTime.Now.Year - user.DateOfBirth.Year;
                                if (DateTime.Now.DayOfYear < user.DateOfBirth.DayOfYear) age--;
                            }
                            @age лет
                        </dd>
                    </dl>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-school"></i> Учебная информация
                </h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    @if (!string.IsNullOrEmpty(Model.School))
                    {
                        <dt class="col-sm-4">Школа:</dt>
                        <dd class="col-sm-8">@Model.School</dd>
                    }

                    @if (Model.Grade.HasValue)
                    {
                        <dt class="col-sm-4">Класс:</dt>
                        <dd class="col-sm-8">@Model.Grade класс</dd>
                    }

                    <dt class="col-sm-4">Онлайн-класс:</dt>
                    <dd class="col-sm-8">
                        @if (Model.ClassId.HasValue)
                        {
                            <span class="badge bg-primary">Класс #@Model.ClassId</span>
                        }
                        else
                        {
                            <span class="text-muted">Не назначен</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Дата добавления:</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("dd.MM.yyyy")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        <i class="fas fa-edit"></i> Редактировать
    </a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
        <i class="fas fa-trash"></i> Удалить
    </a>
</div>

