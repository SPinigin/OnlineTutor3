@model IEnumerable<OnlineTutor3.Domain.Entities.Student>
@{
    ViewData["Title"] = "Управление учениками";
    var studentsWithUsers = ViewBag.StudentsWithUsers as List<(OnlineTutor3.Domain.Entities.Student Student, OnlineTutor3.Domain.Entities.ApplicationUser? User)> ?? new List<(OnlineTutor3.Domain.Entities.Student, OnlineTutor3.Domain.Entities.ApplicationUser?)>();
}

<div class="page-header">
    <h4 class="page-header-title">
        <i class="fas fa-user-graduate page-header-icon"></i>
        <span>Управление учениками</span>
    </h4>
    <div>
        <a asp-action="Create" class="btn btn-modern-success">
            <i class="fas fa-plus"></i> Создать ученика
        </a>
    </div>
</div>

<div class="card border-0 shadow-sm mb-3 search-filter-card">
    <div class="card-body py-2 px-3">
        <form method="get" class="row g-2">
            <div class="col-12 col-md-4">
                <label for="searchString" class="form-label small mb-1">
                    <i class="fas fa-search"></i> Поиск
                </label>
                <input type="text" class="form-control form-control-sm" name="searchString" value="@ViewBag.CurrentFilter"
                       placeholder="Имя, фамилия, email, школа..." />
            </div>
            <div class="col-6 col-md-3">
                <label for="classFilter" class="form-label small mb-1">
                    <i class="fas fa-filter"></i> Класс
                </label>
                <select class="form-select form-select-sm" name="classFilter">
                    <option value="">Все ученики</option>
                    <option value="0" selected="@(ViewBag.ClassFilter == 0)">Без класса</option>
                    @if (ViewBag.Classes != null)
                    {
                        @foreach (var item in (SelectList)ViewBag.Classes)
                        {
                            <option value="@item.Value" selected="@(ViewBag.ClassFilter?.ToString() == item.Value)">@item.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="col-12 col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary btn-sm w-100">
                    <i class="fas fa-search"></i> Найти
                </button>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="empty-state-large">
        <div class="empty-state-large-icon">
            <i class="fas fa-user-graduate"></i>
        </div>
        <h4 class="empty-state-large-title">Учеников не найдено</h4>
        <p class="empty-state-large-text">
            @if (!string.IsNullOrEmpty(ViewBag.CurrentFilter as string))
            {
                <span>По вашему запросу учеников не найдено. Попробуйте изменить критерии поиска.</span>
            }
            else
            {
                <span>Добавьте первого ученика для начала работы</span>
            }
        </p>
        <a asp-action="Create" class="btn btn-modern-primary">
            <i class="fas fa-plus"></i> Добавить ученика
        </a>
    </div>
}
else
{
    <div class="card border-0 shadow-sm modern-card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 modern-table">
                    <thead>
                        <tr>
                            <th>Ученик</th>
                            <th class="d-none d-md-table-cell">Контакты</th>
                            <th class="d-none d-md-table-cell">Школа/Класс</th>
                            <th>Онлайн-класс</th>
                            <th class="d-none d-md-table-cell">Дата добавления</th>
                            <th class="text-center" style="min-width: 180px;">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var userInfo = studentsWithUsers.FirstOrDefault(s => s.Student.Id == item.Id);
                            var user = userInfo.User;
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user-graduate me-2" style="color: #667eea;"></i>
                                        <div>
                                            <strong class="text-dark-modern">@(user != null ? user.FullName : "Неизвестно")</strong>
                                            @if (!string.IsNullOrEmpty(item.StudentNumber))
                                            {
                                                <br><small class="text-muted-modern">№ @item.StudentNumber</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="d-none d-md-table-cell">
                                    @if (user != null)
                                    {
                                        <div>
                                            <i class="fas fa-envelope me-1" style="color: #6c757d;"></i>
                                            <small class="text-muted-modern">@user.Email</small>
                                        </div>
                                        @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                        {
                                            <div>
                                                <i class="fas fa-phone me-1" style="color: #6c757d;"></i>
                                                <small class="text-muted-modern">@user.PhoneNumber</small>
                                            </div>
                                        }
                                    }
                                </td>
                                <td class="d-none d-md-table-cell">
                                    @if (!string.IsNullOrEmpty(item.School))
                                    {
                                        <div>
                                            <i class="fas fa-school me-1" style="color: #6c757d;"></i>
                                            <small class="text-muted-modern">@item.School</small>
                                        </div>
                                    }
                                    @if (item.Grade.HasValue)
                                    {
                                        <div>
                                            <i class="fas fa-graduation-cap me-1" style="color: #6c757d;"></i>
                                            <small class="text-muted-modern">@item.Grade класс</small>
                                        </div>
                                    }
                                </td>
                                <td>
                                    @if (item.ClassId.HasValue)
                                    {
                                        var classesDict = ViewBag.ClassesDict as Dictionary<int, string> ?? new Dictionary<int, string>();
                                        var className = classesDict.ContainsKey(item.ClassId.Value) ? classesDict[item.ClassId.Value] : $"Класс #{item.ClassId}";
                                        <span class="badge badge-modern-primary">@className</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted-modern">Не назначен</span>
                                    }
                                </td>
                                <td class="d-none d-md-table-cell">
                                    <small class="text-muted-modern">
                                        <i class="fas fa-calendar"></i>
                                        @item.CreatedAt.ToString("dd.MM.yyyy")
                                    </small>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex gap-1 justify-content-center">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-modern-outline-info" title="Детали">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-modern-outline-primary" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-sm btn-modern-outline-success assign-to-class-btn" 
                                                data-student-id="@item.Id"
                                                title="Назначить в класс">
                                            <i class="fas fa-users"></i>
                                        </button>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-modern-outline-danger" title="Удалить">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<div class="modal fade" id="assignToClassModal" tabindex="-1" aria-labelledby="assignToClassModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assignToClassModalLabel">Назначить ученика в класс</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <div class="modal-body" id="assignToClassModalBody">
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Загрузка...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.assign-to-class-btn').on('click', function(e) {
                e.preventDefault();
                var studentId = $(this).data('student-id');
                
                var modal = new bootstrap.Modal(document.getElementById('assignToClassModal'));
                modal.show();
                
                $('#assignToClassModalBody').html('<div class="text-center"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Загрузка...</span></div></div>');
                
                $.get('/StudentManagement/AssignToClass', { id: studentId })
                    .done(function(data) {
                        $('#assignToClassModalBody').html(data);
                    })
                    .fail(function() {
                        $('#assignToClassModalBody').html('<div class="alert alert-danger">Ошибка при загрузке данных.</div>');
                    });
            });
        });
    </script>
}

