@model IEnumerable<OnlineTutor3.Domain.Entities.Student>
@{
    ViewData["Title"] = "Управление учениками";
    var studentsWithUsers = ViewBag.StudentsWithUsers as List<(OnlineTutor3.Domain.Entities.Student Student, OnlineTutor3.Domain.Entities.ApplicationUser? User)> ?? new List<(OnlineTutor3.Domain.Entities.Student, OnlineTutor3.Domain.Entities.ApplicationUser?)>();
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <h4 class="mb-0 d-flex align-items-center gap-2">
        <i class="fas fa-user-graduate text-primary"></i>
        <span>Управление учениками</span>
    </h4>
    <div>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Создать ученика
        </a>
    </div>
</div>

<div class="card border-0 shadow-sm mb-3">
    <div class="card-body py-2 px-3">
        <form method="get" class="row g-2">
            <div class="col-12 col-md-4">
                <label for="searchString" class="form-label small mb-1">
                    <i class="fas fa-search"></i> Поиск
                </label>
                <input type="text" class="form-control form-control-sm" name="searchString" value="@ViewBag.CurrentFilter"
                       placeholder="Имя, фамилия, email, школа..." />
            </div>
            <div class="col-6 col-md-3">
                <label for="classFilter" class="form-label small mb-1">
                    <i class="fas fa-filter"></i> Класс
                </label>
                <select class="form-select form-select-sm" name="classFilter">
                    <option value="">Все ученики</option>
                    <option value="0" selected="@(ViewBag.ClassFilter == 0)">Без класса</option>
                    @if (ViewBag.Classes != null)
                    {
                        @foreach (var item in (SelectList)ViewBag.Classes)
                        {
                            <option value="@item.Value" selected="@(ViewBag.ClassFilter?.ToString() == item.Value)">@item.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="col-12 col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary btn-sm w-100">
                    <i class="fas fa-search"></i> Найти
                </button>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-user-graduate text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">Учеников не найдено</h4>
        <p class="text-muted">
            @if (!string.IsNullOrEmpty(ViewBag.CurrentFilter as string))
            {
                <span>По вашему запросу учеников не найдено. Попробуйте изменить критерии поиска.</span>
            }
            else
            {
                <span>Добавьте первого ученика для начала работы</span>
            }
        </p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Добавить ученика
        </a>
    </div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-compact mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Ученик</th>
                            <th class="d-none d-md-table-cell">Контакты</th>
                            <th class="d-none d-md-table-cell">Школа/Класс</th>
                            <th>Онлайн-класс</th>
                            <th class="d-none d-md-table-cell">Дата добавления</th>
                            <th class="text-center" style="width: 150px;">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var userInfo = studentsWithUsers.FirstOrDefault(s => s.Student.Id == item.Id);
                            var user = userInfo.User;
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user-graduate text-primary me-2"></i>
                                        <div>
                                            <strong>@(user != null ? user.FullName : "Неизвестно")</strong>
                                            @if (!string.IsNullOrEmpty(item.StudentNumber))
                                            {
                                                <br><small class="text-muted">№ @item.StudentNumber</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="d-none d-md-table-cell">
                                    @if (user != null)
                                    {
                                        <div>
                                            <i class="fas fa-envelope text-muted me-1"></i>
                                            <small>@user.Email</small>
                                        </div>
                                        @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                        {
                                            <div>
                                                <i class="fas fa-phone text-muted me-1"></i>
                                                <small>@user.PhoneNumber</small>
                                            </div>
                                        }
                                    }
                                </td>
                                <td class="d-none d-md-table-cell">
                                    @if (!string.IsNullOrEmpty(item.School))
                                    {
                                        <div>
                                            <i class="fas fa-school text-muted me-1"></i>
                                            <small>@item.School</small>
                                        </div>
                                    }
                                    @if (item.Grade.HasValue)
                                    {
                                        <div>
                                            <i class="fas fa-graduation-cap text-muted me-1"></i>
                                            <small>@item.Grade класс</small>
                                        </div>
                                    }
                                </td>
                                <td>
                                    @if (item.ClassId.HasValue)
                                    {
                                        var classesDict = ViewBag.ClassesDict as Dictionary<int, string> ?? new Dictionary<int, string>();
                                        var className = classesDict.ContainsKey(item.ClassId.Value) ? classesDict[item.ClassId.Value] : $"Класс #{item.ClassId}";
                                        <span class="badge bg-primary">@className</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Не назначен</span>
                                    }
                                </td>
                                <td class="d-none d-md-table-cell">
                                    <small>
                                        <i class="fas fa-calendar text-muted"></i>
                                        @item.CreatedAt.ToString("dd.MM.yyyy")
                                    </small>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex gap-1 justify-content-center">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Детали">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Удалить">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

