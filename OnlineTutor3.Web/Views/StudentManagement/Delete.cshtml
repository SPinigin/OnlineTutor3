@model OnlineTutor3.Domain.Entities.Student
@{
    ViewData["Title"] = "Удаление ученика";
    var user = ViewBag.User as OnlineTutor3.Domain.Entities.ApplicationUser;
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle"></i> Подтверждение удаления
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-warning"></i>
                    <strong>Внимание!</strong> Это действие нельзя отменить. Будет удален ученик и его аккаунт.
                </div>

                <h5>Вы действительно хотите удалить этого ученика?</h5>

                <div class="card mt-3">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-user-graduate"></i> @(user != null ? user.FullName : "Ученик")
                        </h6>
                        @if (user != null)
                        {
                            <p class="card-text">
                                <strong>Email:</strong> @user.Email<br>
                                @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                {
                                    <strong>Телефон:</strong> @user.PhoneNumber<br>
                                }
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(Model.School))
                        {
                            <p class="card-text">
                                <strong>Школа:</strong> @Model.School
                                @if (Model.Grade.HasValue)
                                {
                                    <span>, @Model.Grade класс</span>
                                }
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(Model.StudentNumber))
                        {
                            <p class="card-text">
                                <strong>Номер ученика:</strong> @Model.StudentNumber
                            </p>
                        }
                        <small class="text-muted">Добавлен: @Model.CreatedAt.ToString("dd.MM.yyyy")</small>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post" class="d-inline">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Отмена
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Удалить
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

