@model OnlineTutor3.Domain.Entities.CalendarEvent
@{
    ViewData["Title"] = "Удаление занятия";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow modern-card" style="border-left: 4px solid #dc3545;">
            <div class="card-header auth-card-header" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle"></i> Подтверждение удаления
                </h4>
            </div>
            <div class="card-body auth-card-body">
                <div class="alert alert-danger">
                    <i class="fas fa-warning"></i>
                    <strong>Внимание!</strong> Вы собираетесь удалить занятие из календаря.
                    Это действие нельзя отменить.
                </div>

                <h5 class="text-dark-modern">Вы действительно хотите удалить это занятие?</h5>

                <div class="card mt-3 modern-card">
                    <div class="card-header auth-card-header" style="background: linear-gradient(135deg, @Model.Color 0%, @Model.Color 100%);">
                        <h6 class="mb-0">@Model.Title</h6>
                    </div>
                    <div class="card-body modern-card-body">
                        <dl class="row mb-0">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <dt class="col-sm-4 text-muted-modern">Описание:</dt>
                                <dd class="col-sm-8 text-dark-modern">@Model.Description</dd>
                            }

                            <dt class="col-sm-4 text-muted-modern">Начало:</dt>
                            <dd class="col-sm-8 text-dark-modern">@Model.StartDateTime.ToString("dd.MM.yyyy HH:mm")</dd>

                            <dt class="col-sm-4 text-muted-modern">Окончание:</dt>
                            <dd class="col-sm-8 text-dark-modern">@Model.EndDateTime.ToString("dd.MM.yyyy HH:mm")</dd>

                            @if (!string.IsNullOrEmpty(ViewBag.ClassName))
                            {
                                <dt class="col-sm-4 text-muted-modern">Класс:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge badge-modern-success">@ViewBag.ClassName</span>
                                </dd>
                            }

                            @if (!string.IsNullOrEmpty(ViewBag.StudentName))
                            {
                                <dt class="col-sm-4 text-muted-modern">Ученик:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge badge-modern-info">@ViewBag.StudentName</span>
                                </dd>
                            }

                            @if (!string.IsNullOrEmpty(Model.Location))
                            {
                                <dt class="col-sm-4 text-muted-modern">Место:</dt>
                                <dd class="col-sm-8 text-dark-modern">@Model.Location</dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>
            <div class="card-footer auth-card-footer">
                <form asp-action="Delete" method="post">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-modern-outline-info">
                            <i class="fas fa-eye"></i> Просмотр
                        </a>
                        <a asp-action="Index" class="btn btn-modern-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Отмена
                        </a>
                        <button type="submit" class="btn btn-modern-outline-danger">
                            <i class="fas fa-trash"></i> Да, удалить занятие
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

