@model OnlineTutor3.Web.ViewModels.StudentMaterialIndexViewModel
@{
    ViewData["Title"] = "Материалы";
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <h4 class="mb-0 d-flex align-items-center gap-2">
        <i class="fas fa-book text-primary"></i>
        <span>Материалы</span>
    </h4>
</div>


@if (!Model.MaterialsByAssignment.Any() && !Model.MaterialsWithoutAssignment.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-book text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">Нет доступных материалов</h4>
        <p class="text-muted">В данный момент нет материалов, доступных для просмотра</p>
    </div>
}
else
{
    <div class="row mb-2 align-items-center">
        <div class="col-12 col-md-4 mb-2 mb-md-0">
            <small class="text-muted">
                <i class="fas fa-book"></i> Всего заданий: @Model.MaterialsByAssignment.Count
            </small>
        </div>
        <div class="col-12 col-md-8">
            <form method="get" class="input-group input-group-sm">
                <span class="input-group-text bg-white">
                    <i class="fas fa-search text-muted"></i>
                </span>
                <input type="text" 
                       name="search" 
                       class="form-control form-control-sm" 
                       placeholder="Поиск по названию..."
                       value="@Model.SearchQuery"
                       autocomplete="off">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
    </div>

    <div class="accordion" id="materialsAccordion">
        @foreach (var kvp in Model.MaterialsByAssignment.OrderBy(a => a.Value.First().AssignmentId))
        {
            var assignmentId = kvp.Key;
            var materials = kvp.Value;
            var assignment = Model.AssignmentsDict.ContainsKey(assignmentId) ? Model.AssignmentsDict[assignmentId] : null;
            
            if (assignment == null) continue;

            var collapseId = $"collapseAssignment{assignmentId}";
            var headingId = $"headingAssignment{assignmentId}";
            
            var subjectName = Model.SubjectsDict.ContainsKey(assignment.SubjectId) 
                ? Model.SubjectsDict[assignment.SubjectId] 
                : $"Предмет #{assignment.SubjectId}";

            <div class="accordion-item mb-1">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button collapsed py-2" 
                            type="button" 
                            data-bs-toggle="collapse" 
                            data-bs-target="#@collapseId" 
                            aria-expanded="false" 
                            aria-controls="@collapseId">
                        <div class="d-flex justify-content-between align-items-center w-100 me-2">
                            <div class="d-flex align-items-center flex-grow-1 flex-wrap gap-1">
                                <div class="me-2">
                                    <strong class="small">@assignment.Title</strong>
                                </div>
                                <span class="badge bg-info badge-sm">@subjectName</span>
                                <span class="badge bg-primary badge-sm">@materials.Count материалов</span>
                            </div>
                        </div>
                    </button>
                </h2>
                <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId" data-bs-parent="#materialsAccordion">
                    <div class="accordion-body p-2">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Название</th>
                                        <th class="text-center">Тип</th>
                                        <th class="text-center">Размер</th>
                                        <th class="text-center">Дата</th>
                                        <th class="text-center">Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var material in materials.OrderBy(m => m.Title))
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @switch (material.Type)
                                                    {
                                                        case MaterialType.Document:
                                                            <i class="fas fa-file-alt text-danger me-2"></i>
                                                            break;
                                                        case MaterialType.Presentation:
                                                            <i class="fas fa-file-powerpoint text-warning me-2"></i>
                                                            break;
                                                        case MaterialType.Image:
                                                            <i class="fas fa-file-image text-info me-2"></i>
                                                            break;
                                                        case MaterialType.Audio:
                                                            <i class="fas fa-file-audio text-success me-2"></i>
                                                            break;
                                                        case MaterialType.Video:
                                                            <i class="fas fa-file-video text-primary me-2"></i>
                                                            break;
                                                        default:
                                                            <i class="fas fa-file text-secondary me-2"></i>
                                                            break;
                                                    }
                                                    <div>
                                                        <strong>@material.Title</strong>
                                                        @if (!string.IsNullOrEmpty(material.Description))
                                                        {
                                                            <br>
                                                            <small class="text-muted">@material.Description</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">@GetMaterialTypeDisplayName(material.Type)</span>
                                            </td>
                                            <td class="text-center">
                                                <small>@FormatFileSize(material.FileSize)</small>
                                            </td>
                                            <td class="text-center">
                                                <small>@material.UploadedAt.ToString("dd.MM.yyyy")</small>
                                            </td>
                                            <td class="text-center">
                                                <a asp-action="Download" asp-route-id="@material.Id" class="btn btn-sm btn-success">
                                                    <i class="fas fa-download"></i> Скачать
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (Model.MaterialsWithoutAssignment.Any())
        {
            var collapseId = "collapseWithoutAssignment";
            var headingId = "headingWithoutAssignment";

            <div class="accordion-item mb-1">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button collapsed py-2" 
                            type="button" 
                            data-bs-toggle="collapse" 
                            data-bs-target="#@collapseId" 
                            aria-expanded="false" 
                            aria-controls="@collapseId">
                        <div class="d-flex justify-content-between align-items-center w-100 me-2">
                            <div class="d-flex align-items-center flex-grow-1 flex-wrap gap-1">
                                <div class="me-2">
                                    <strong class="small">Материалы без задания</strong>
                                </div>
                                <span class="badge bg-primary badge-sm">@Model.MaterialsWithoutAssignment.Count материалов</span>
                            </div>
                        </div>
                    </button>
                </h2>
                <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId" data-bs-parent="#materialsAccordion">
                    <div class="accordion-body p-2">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Название</th>
                                        <th class="text-center">Тип</th>
                                        <th class="text-center">Размер</th>
                                        <th class="text-center">Дата</th>
                                        <th class="text-center">Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var material in Model.MaterialsWithoutAssignment.OrderBy(m => m.Title))
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @switch (material.Type)
                                                    {
                                                        case MaterialType.Document:
                                                            <i class="fas fa-file-alt text-danger me-2"></i>
                                                            break;
                                                        case MaterialType.Presentation:
                                                            <i class="fas fa-file-powerpoint text-warning me-2"></i>
                                                            break;
                                                        case MaterialType.Image:
                                                            <i class="fas fa-file-image text-info me-2"></i>
                                                            break;
                                                        case MaterialType.Audio:
                                                            <i class="fas fa-file-audio text-success me-2"></i>
                                                            break;
                                                        case MaterialType.Video:
                                                            <i class="fas fa-file-video text-primary me-2"></i>
                                                            break;
                                                        default:
                                                            <i class="fas fa-file text-secondary me-2"></i>
                                                            break;
                                                    }
                                                    <div>
                                                        <strong>@material.Title</strong>
                                                        @if (!string.IsNullOrEmpty(material.Description))
                                                        {
                                                            <br>
                                                            <small class="text-muted">@material.Description</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">@GetMaterialTypeDisplayName(material.Type)</span>
                                            </td>
                                            <td class="text-center">
                                                <small>@FormatFileSize(material.FileSize)</small>
                                            </td>
                                            <td class="text-center">
                                                <small>@material.UploadedAt.ToString("dd.MM.yyyy")</small>
                                            </td>
                                            <td class="text-center">
                                                <a asp-action="Download" asp-route-id="@material.Id" class="btn btn-sm btn-success">
                                                    <i class="fas fa-download"></i> Скачать
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@functions {
    private string GetMaterialTypeDisplayName(MaterialType type)
    {
        return type switch
        {
            MaterialType.Document => "Документ",
            MaterialType.Presentation => "Презентация",
            MaterialType.Image => "Изображение",
            MaterialType.Audio => "Аудио",
            MaterialType.Video => "Видео",
            MaterialType.Other => "Другое",
            _ => type.ToString()
        };
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "Б", "КБ", "МБ", "ГБ" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}

