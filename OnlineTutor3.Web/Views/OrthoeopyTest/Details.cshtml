@model OnlineTutor3.Domain.Entities.OrthoeopyTest
@{
    ViewData["Title"] = $"Тест: {Model.Title}";
    var assignment = ViewBag.Assignment as OnlineTutor3.Domain.Entities.Assignment;
    var questions = ViewBag.Questions as List<OnlineTutor3.Domain.Entities.OrthoeopyQuestion> ?? new List<OnlineTutor3.Domain.Entities.OrthoeopyQuestion>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>
            <i class="fas fa-volume-up text-warning"></i> @Model.Title
            <span class="badge bg-@(Model.IsActive ? "success" : "secondary") ms-2">
                @(Model.IsActive ? "Активен" : "Неактивен")
            </span>
        </h2>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="text-muted">@Model.Description</p>
        }
        @if (assignment != null)
        {
            <p class="text-muted">
                <i class="fas fa-tasks"></i> 
                <a asp-controller="Assignment" asp-action="Details" asp-route-id="@assignment.Id">@assignment.Title</a>
            </p>
        }
    </div>
    <div>
        <a asp-controller="Assignment" asp-action="Details" asp-route-id="@Model.AssignmentId" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Назад к заданию
        </a>
    </div>
</div>

<div class="row mb-4 g-2 g-md-3">
    <div class="col-6 col-md-3">
        <div class="card text-center border-primary">
            <div class="card-body">
                <i class="fas fa-question-circle text-primary" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-0">@questions.Count</h6>
                <p class="text-muted mb-0 small">Вопросов</p>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card text-center border-info">
            <div class="card-body">
                <i class="fas fa-clock text-info" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-0">@Model.TimeLimit</h6>
                <p class="text-muted mb-0 small">Минут</p>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card text-center border-success">
            <div class="card-body">
                <i class="fas fa-redo text-success" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-0">@Model.MaxAttempts</h6>
                <p class="text-muted mb-0 small">Попыток</p>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card text-center border-warning">
            <div class="card-body">
                <i class="fas fa-calendar-plus text-warning" style="font-size: 2rem;"></i>
                <h6 class="mt-2 mb-0">@Model.CreatedAt.ToString("dd.MM.yyyy")</h6>
                <p class="text-muted mb-0 small">Создан</p>
            </div>
        </div>
    </div>
</div>

<div class="card mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-question-circle"></i> Вопросы (@questions.Count)
        </h5>
        <a asp-controller="OrthoeopyQuestion" asp-action="Create" asp-route-testId="@Model.Id" class="btn btn-sm btn-success">
            <i class="fas fa-plus"></i> Добавить вопрос
        </a>
    </div>
    <div class="card-body">
        @if (questions.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-sm">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 5%;" class="small">#</th>
                            <th style="width: 30%;" class="small">Слово</th>
                            <th style="width: 20%;" class="small">Позиция ударения</th>
                            <th style="width: 30%;" class="small">Слово с ударением</th>
                            <th style="width: 10%;" class="small">Баллы</th>
                            <th style="width: 5%;" class="small text-center">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var question in questions.OrderBy(q => q.OrderIndex))
                        {
                            <tr>
                                <td class="small">@question.OrderIndex</td>
                                <td class="small">@question.Word</td>
                                <td class="small"><strong>@question.StressPosition</strong></td>
                                <td class="small">@question.WordWithStress</td>
                                <td class="small">@question.Points</td>
                                <td class="text-center">
                                    <div class="d-flex gap-1 justify-content-center">
                                        <a asp-controller="OrthoeopyQuestion" asp-action="Edit" asp-route-id="@question.Id" class="btn btn-sm btn-outline-primary" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="OrthoeopyQuestion" asp-action="Delete" asp-route-id="@question.Id" class="btn btn-sm btn-outline-danger" title="Удалить">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-question-circle text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">В этом тесте пока нет вопросов</p>
                <a asp-controller="OrthoeopyQuestion" asp-action="Create" asp-route-testId="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Добавить первый вопрос
                </a>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="fas fa-edit"></i> Редактировать тест
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
            <i class="fas fa-trash"></i> Удалить тест
        </a>
    </div>
</div>

