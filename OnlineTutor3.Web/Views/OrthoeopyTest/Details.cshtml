@model OnlineTutor3.Domain.Entities.OrthoeopyTest
@{
    ViewData["Title"] = $"Тест: {Model.Title}";
    var assignment = ViewBag.Assignment as OnlineTutor3.Domain.Entities.Assignment;
    var questions = ViewBag.Questions as List<OnlineTutor3.Domain.Entities.OrthoeopyQuestion> ?? new List<OnlineTutor3.Domain.Entities.OrthoeopyQuestion>();
}

<div class="page-header">
    <div>
        <h4 class="page-header-title">
            <i class="fas fa-volume-up page-header-icon" style="color: #fa709a;"></i> @Model.Title
            <span class="badge badge-modern-@(Model.IsActive ? "success" : "secondary") ms-2 badge-sm">
                @(Model.IsActive ? "Активен" : "Неактивен")
            </span>
        </h4>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="text-muted-modern mb-0 small">@Model.Description</p>
        }
        @if (assignment != null)
        {
            <p class="text-muted-modern mb-0 small">
                <i class="fas fa-tasks"></i> 
                <a asp-controller="Assignment" asp-action="Details" asp-route-id="@assignment.Id" class="text-link-modern">@assignment.Title</a>
            </p>
        }
    </div>
    <div>
        <a asp-controller="Assignment" asp-action="Details" asp-route-id="@Model.AssignmentId" class="btn btn-sm btn-modern-outline-secondary">
            <i class="fas fa-arrow-left"></i> Назад к заданию
        </a>
    </div>
</div>

<div class="row mb-3 g-3">
    <div class="col-6 col-md-3">
        <div class="card border-0 shadow-sm stat-card">
            <div class="card-body text-center py-1 px-2">
                <div class="stat-card-icon">
                    <i class="fas fa-question-circle"></i>
                </div>
                <div class="stat-card-value">@questions.Count</div>
                <small class="stat-card-label">Вопросов</small>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card border-0 shadow-sm stat-card stat-card-blue">
            <div class="card-body text-center py-1 px-2">
                <div class="stat-card-icon stat-icon-blue">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-card-value">@Model.TimeLimit</div>
                <small class="stat-card-label">Минут</small>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card border-0 shadow-sm stat-card stat-card-green">
            <div class="card-body text-center py-1 px-2">
                <div class="stat-card-icon stat-icon-green">
                    <i class="fas fa-redo"></i>
                </div>
                <div class="stat-card-value">@Model.MaxAttempts</div>
                <small class="stat-card-label">Попыток</small>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card border-0 shadow-sm stat-card stat-card-yellow">
            <div class="card-body text-center py-1 px-2">
                <div class="stat-card-icon stat-icon-yellow">
                    <i class="fas fa-calendar-plus"></i>
                </div>
                <div class="stat-card-value" style="font-size: 1rem;">@Model.CreatedAt.ToString("dd.MM.yyyy")</div>
                <small class="stat-card-label">Создан</small>
            </div>
        </div>
    </div>
</div>

<div class="card mb-3 modern-card">
    <div class="card-header modern-card-header d-flex justify-content-between align-items-center">
        <h5 class="modern-card-title mb-0">
            <i class="fas fa-question-circle"></i> Вопросы (@questions.Count)
        </h5>
        <div class="d-flex gap-1">
            <a asp-controller="OrthoeopyQuestion" asp-action="Create" asp-route-testId="@Model.Id" class="btn btn-sm btn-modern-success">
                <i class="fas fa-plus"></i> Добавить вопрос
            </a>
            <a asp-action="ImportQuestions" asp-route-id="@Model.Id" class="btn btn-sm btn-modern-outline-info">
                <i class="fas fa-file-import"></i> Импорт из Excel
            </a>
        </div>
    </div>
    <div class="card-body modern-card-body">
        @if (questions.Any())
        {
            <div class="table-responsive">
                <table class="table modern-table mb-0">
                    <thead>
                        <tr>
                            <th style="width: 5%;" class="small">#</th>
                            <th style="width: 30%;" class="small">Слово</th>
                            <th style="width: 20%;" class="small">Позиция ударения</th>
                            <th style="width: 30%;" class="small">Слово с ударением</th>
                            <th style="width: 10%;" class="small">Баллы</th>
                            <th style="width: 5%;" class="small text-center">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var question in questions.OrderBy(q => q.OrderIndex))
                        {
                            <tr>
                                <td class="small text-muted-modern">@question.OrderIndex</td>
                                <td class="small text-dark-modern">@question.Word</td>
                                <td class="small text-dark-modern"><strong>@question.StressPosition</strong></td>
                                <td class="small text-muted-modern">@question.WordWithStress</td>
                                <td class="small text-muted-modern">@question.Points</td>
                                <td class="text-center">
                                    <div class="d-flex gap-1 justify-content-center">
                                        <a asp-controller="OrthoeopyQuestion" asp-action="Edit" asp-route-id="@question.Id" class="btn btn-sm btn-modern-outline-primary" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="OrthoeopyQuestion" asp-action="Delete" asp-route-id="@question.Id" class="btn btn-sm btn-modern-outline-danger" title="Удалить">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-question-circle"></i>
                </div>
                <p class="empty-state-text">В этом тесте пока нет вопросов</p>
                <a asp-controller="OrthoeopyQuestion" asp-action="Create" asp-route-testId="@Model.Id" class="btn btn-modern-primary">
                    <i class="fas fa-plus"></i> Добавить первый вопрос
                </a>
            </div>
        }
    </div>
</div>

