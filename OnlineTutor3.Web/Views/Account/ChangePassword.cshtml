@model OnlineTutor3.Web.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Смена пароля";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm modern-card">
                <div class="card-header modern-card-header">
                    <h5 class="modern-card-title">
                        <i class="fas fa-key" style="color: #667eea;"></i> Смена пароля
                    </h5>
                </div>
                <div class="card-body modern-card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                        </div>
                    }

                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label form-label-modern">
                                <i class="fas fa-lock me-1"></i> @Html.DisplayNameFor(m => m.CurrentPassword)
                            </label>
                            <div class="input-group">
                                <input asp-for="CurrentPassword" class="form-control form-control-modern" autocomplete="current-password" id="currentPassword" />
                                <button class="btn modern-btn-outline" type="button" id="toggleCurrentPassword">
                                    <i class="fas fa-eye" id="currentPasswordIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label form-label-modern">
                                <i class="fas fa-key me-1"></i> @Html.DisplayNameFor(m => m.NewPassword)
                            </label>
                            <div class="input-group">
                                <input asp-for="NewPassword" class="form-control form-control-modern" autocomplete="new-password" id="newPassword" />
                                <button class="btn modern-btn-outline" type="button" id="toggleNewPassword">
                                    <i class="fas fa-eye" id="newPasswordIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <small class="form-text text-muted-modern">
                                Пароль должен содержать минимум 6 символов
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label form-label-modern">
                                <i class="fas fa-check-circle me-1"></i> @Html.DisplayNameFor(m => m.ConfirmPassword)
                            </label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" class="form-control form-control-modern" autocomplete="new-password" id="confirmPassword" />
                                <button class="btn modern-btn-outline" type="button" id="toggleConfirmPassword">
                                    <i class="fas fa-eye" id="confirmPasswordIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Profile" class="btn modern-btn-outline">
                                <i class="fas fa-times"></i> Отмена
                            </a>
                            <button type="submit" class="btn btn-modern-primary">
                                <i class="fas fa-save"></i> Изменить пароль
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Profile" class="text-decoration-none">
                    <i class="fas fa-arrow-left me-1"></i> Вернуться к профилю
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Текущий пароль
            $('#toggleCurrentPassword').on('click', function() {
                var passwordField = $('#currentPassword');
                var icon = $('#currentPasswordIcon');
                
                if (passwordField.attr('type') === 'password') {
                    passwordField.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordField.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Новый пароль
            $('#toggleNewPassword').on('click', function() {
                var passwordField = $('#newPassword');
                var icon = $('#newPasswordIcon');
                
                if (passwordField.attr('type') === 'password') {
                    passwordField.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordField.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Подтверждение пароля
            $('#toggleConfirmPassword').on('click', function() {
                var passwordField = $('#confirmPassword');
                var icon = $('#confirmPasswordIcon');
                
                if (passwordField.attr('type') === 'password') {
                    passwordField.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordField.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });
        });
    </script>
}

