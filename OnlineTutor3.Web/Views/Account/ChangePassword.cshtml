@model OnlineTutor3.Web.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Смена пароля";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-key text-primary"></i> Смена пароля
                    </h5>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                        </div>
                    }

                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label">
                                <i class="fas fa-lock me-1"></i> @Html.DisplayNameFor(m => m.CurrentPassword)
                            </label>
                            <input asp-for="CurrentPassword" class="form-control" autocomplete="current-password" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">
                                <i class="fas fa-key me-1"></i> @Html.DisplayNameFor(m => m.NewPassword)
                            </label>
                            <input asp-for="NewPassword" class="form-control" autocomplete="new-password" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Пароль должен содержать минимум 6 символов
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-check-circle me-1"></i> @Html.DisplayNameFor(m => m.ConfirmPassword)
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Profile" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Отмена
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Изменить пароль
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Profile" class="text-decoration-none">
                    <i class="fas fa-arrow-left me-1"></i> Вернуться к профилю
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

