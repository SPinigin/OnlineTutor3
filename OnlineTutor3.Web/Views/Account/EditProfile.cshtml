@model OnlineTutor3.Web.ViewModels.EditProfileViewModel
@{
    ViewData["Title"] = "Редактирование профиля";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm modern-card">
                <div class="card-header modern-card-header">
                    <h5 class="modern-card-title">
                        <i class="fas fa-edit" style="color: #667eea;"></i> Редактирование профиля
                    </h5>
                </div>
                <div class="card-body modern-card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрыть"></button>
                        </div>
                    }

                    <form asp-action="EditProfile" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label form-label-modern">
                                    <i class="fas fa-user me-1"></i> @Html.DisplayNameFor(m => m.FirstName) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="FirstName" class="form-control form-control-modern" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label form-label-modern">
                                    <i class="fas fa-user me-1"></i> @Html.DisplayNameFor(m => m.LastName) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="LastName" class="form-control form-control-modern" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label form-label-modern">
                                <i class="fas fa-phone me-1"></i> @Html.DisplayNameFor(m => m.PhoneNumber)
                            </label>
                            <input asp-for="PhoneNumber" class="form-control form-control-modern" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label form-label-modern">
                                <i class="fas fa-calendar-alt me-1"></i> @Html.DisplayNameFor(m => m.DateOfBirth) <span class="text-danger">*</span>
                            </label>
                            <input asp-for="DateOfBirth" type="date" class="form-control form-control-modern" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Profile" class="btn modern-btn-outline">
                                <i class="fas fa-times"></i> Отмена
                            </a>
                            <button type="submit" class="btn btn-modern-primary">
                                <i class="fas fa-save"></i> Сохранить изменения
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Profile" class="text-decoration-none">
                    <i class="fas fa-arrow-left me-1"></i> Вернуться к профилю
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

