@model OnlineTutor3.Domain.Entities.ApplicationUser
@{
    ViewData["Title"] = "Профиль";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="mb-0">
                    <i class="fas fa-user-circle text-primary"></i> Мой профиль
                </h4>
                <a asp-controller="Account" asp-action="EditProfile" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-edit"></i> Редактировать
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center text-white"
                             style="width: 120px; height: 120px; font-size: 2.5rem;">
                            @Model.FirstName.Substring(0, 1)@Model.LastName.Substring(0, 1)
                        </div>
                    </div>

                    <h5 class="mb-1">@Model.FullName</h5>
                    <p class="text-muted mb-2">@Model.Age лет</p>
                    <p class="text-muted mb-3">
                        @if (User.IsInRole("Admin"))
                        {
                            <span class="badge bg-danger">
                                <i class="fas fa-shield-alt"></i> Администратор
                            </span>
                        }
                        else if (User.IsInRole("Teacher"))
                        {
                            <span class="badge bg-primary">
                                <i class="fas fa-chalkboard-teacher"></i> Преподаватель
                            </span>
                        }
                        else if (User.IsInRole("Student"))
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-user-graduate"></i> Ученик
                            </span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle text-primary"></i> Личная информация
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Имя:</strong>
                        </div>
                        <div class="col-sm-8">
                            @Model.FirstName
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Фамилия:</strong>
                        </div>
                        <div class="col-sm-8">
                            @Model.LastName
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-sm-8">
                            @Model.Email
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Телефон:</strong>
                        </div>
                        <div class="col-sm-8">
                            @(Model.PhoneNumber ?? "Не указан")
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Дата рождения:</strong>
                        </div>
                        <div class="col-sm-8">
                            @Model.DateOfBirth.ToString("dd.MM.yyyy")
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>Дата регистрации:</strong>
                        </div>
                        <div class="col-sm-8">
                            @Model.CreatedAt.ToString("dd.MM.yyyy")
                        </div>
                    </div>
                    @if (Model.LastLoginAt.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong>Последний вход:</strong>
                            </div>
                            <div class="col-sm-8">
                                @Model.LastLoginAt.Value.ToString("dd.MM.yyyy HH:mm")
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-white">
                    <h6 class="mb-0">
                        <i class="fas fa-cog text-primary"></i> Действия
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-outline-primary">
                            <i class="fas fa-key"></i> Изменить пароль
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

