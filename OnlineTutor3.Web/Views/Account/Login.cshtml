@model OnlineTutor3.Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Вход в систему";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow auth-card">
            <div class="card-header auth-card-header">
                <h4><i class="fas fa-sign-in-alt"></i> Вход в систему</h4>
            </div>
            <div class="card-body auth-card-body">
                <form asp-action="Login" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label form-label-modern">
                            <i class="fas fa-envelope"></i> Email
                        </label>
                        <input asp-for="Email" class="form-control form-control-modern" placeholder="Введите ваш email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label form-label-modern">
                            <i class="fas fa-lock"></i> Пароль
                        </label>
                        <input asp-for="Password" type="password" class="form-control form-control-modern" placeholder="Введите пароль" id="LoginPassword" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label text-dark-modern">
                            Запомнить меня
                        </label>
                    </div>

                    <div class="d-grid mb-3 mb-md-0">
                        <button type="submit" class="btn btn-modern-primary">
                            <i class="fas fa-sign-in-alt"></i> Войти
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer auth-card-footer">
                <p class="mb-0 text-muted-modern">
                    Нет аккаунта?
                    <a asp-action="Register" class="text-decoration-none" style="color: #667eea; font-weight: 500;">
                        <i class="fas fa-user-plus"></i> Зарегистрироваться
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/registration.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/password-toggle.css" asp-append-version="true" />
}

