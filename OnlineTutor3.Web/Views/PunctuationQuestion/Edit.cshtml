@model OnlineTutor3.Web.ViewModels.EditPunctuationQuestionViewModel
@{
    ViewData["Title"] = "Редактирование вопроса по пунктуации";
    var test = ViewBag.Test as OnlineTutor3.Domain.Entities.PunctuationTest;
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white py-2">
                <h5 class="mb-0">
                    <i class="fas fa-edit"></i> Редактирование вопроса по пунктуации
                </h5>
            </div>
            <div class="card-body p-2">
                @if (test != null)
                {
                    <div class="alert alert-info alert-sm py-2 mb-2">
                        <i class="fas fa-info-circle"></i> 
                        <strong>Тест:</strong> @test.Title
                    </div>
                }

                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="PunctuationTestId" type="hidden" />
                    <div asp-validation-summary="All" class="text-danger mb-2 small"></div>

                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label asp-for="OrderIndex" class="form-label small">
                                <i class="fas fa-sort-numeric-down"></i> Порядковый номер <span class="text-danger">*</span>
                            </label>
                            <input asp-for="OrderIndex" type="number" class="form-control form-control-sm" min="1" />
                            <span asp-validation-for="OrderIndex" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-2">
                            <label asp-for="Points" class="form-label small">
                                <i class="fas fa-star"></i> Баллы <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Points" type="number" class="form-control form-control-sm" min="1" max="100" />
                            <span asp-validation-for="Points" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-2">
                        <label asp-for="SentenceWithNumbers" class="form-label small">
                            <i class="fas fa-quote-right"></i> Предложение с номерами <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="SentenceWithNumbers" class="form-control form-control-sm" rows="3" placeholder="Например: Пришла весна(1) и зацвели цветы(2)"></textarea>
                        <span asp-validation-for="SentenceWithNumbers" class="text-danger small"></span>
                    </div>

                    <div class="mb-2">
                        <label asp-for="CorrectPositions" class="form-label small">
                            <i class="fas fa-check-circle"></i> Правильные позиции знаков <span class="text-danger">*</span>
                        </label>
                        <input asp-for="CorrectPositions" class="form-control form-control-sm" placeholder="Например: 1,2" />
                        <span asp-validation-for="CorrectPositions" class="text-danger small"></span>
                    </div>

                    <div class="mb-2">
                        <label asp-for="PlainSentence" class="form-label small">
                            <i class="fas fa-align-left"></i> Обычное предложение
                        </label>
                        <textarea asp-for="PlainSentence" class="form-control form-control-sm" rows="2" placeholder="Например: Пришла весна, и зацвели цветы"></textarea>
                        <span asp-validation-for="PlainSentence" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Hint" class="form-label small">
                            <i class="fas fa-lightbulb"></i> Подсказка
                        </label>
                        <textarea asp-for="Hint" class="form-control form-control-sm" rows="2" placeholder="Необязательная подсказка для ученика..."></textarea>
                        <span asp-validation-for="Hint" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <a asp-controller="PunctuationTest" asp-action="Details" asp-route-id="@Model.PunctuationTestId" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Отмена
                        </a>
                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="fas fa-save"></i> Сохранить изменения
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

