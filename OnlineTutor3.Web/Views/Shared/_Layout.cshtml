<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/notifications.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom navbar-fixed">
            <div class="container-fluid">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    @if (User.IsInRole("Teacher"))
                    {
                        <a class="navbar-brand fw-bold text-primary" asp-controller="Teacher" asp-action="Index">
                            <i class="fas fa-graduation-cap"></i>
                        </a>
                    }
                    else if (User.IsInRole("Student"))
                    {
                        <a class="navbar-brand fw-bold text-primary" asp-controller="Student" asp-action="Index">
                            <i class="fas fa-graduation-cap"></i>
                        </a>
                    }
                    else
                    {
                        <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-graduation-cap"></i>
                        </a>
                    }
                }
                else
                {
                    <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-graduation-cap"></i>
                    </a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Teacher"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-cogs"></i> Управление
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Class" asp-action="Index">
                                                <i class="fas fa-users"></i> Классы
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="StudentManagement" asp-action="Index">
                                                <i class="fas fa-user-graduate"></i> Ученики
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Assignment" asp-action="Index">
                                                <i class="fas fa-tasks"></i> Задания и тесты
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="TeacherDashboard" asp-action="Index">
                                                <i class="fas fa-tachometer-alt"></i> Мониторинг
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Material" asp-action="Index" class="dropdown-item">
                                                <i class="fas fa-book"></i> Материалы
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a href="#" class="dropdown-item">
                                                <i class="fas fa-chart-line"></i> Результаты
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#" class="dropdown-item">
                                                <i class="fas fa-file-alt"></i> Отчеты
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a href="#" class="dropdown-item">
                                                <i class="fas fa-calendar-alt"></i> Календарь
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            @if (User.IsInRole("Student"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-book-open"></i> Обучение
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="StudentTest" asp-action="Index">
                                                <i class="fas fa-book-reader"></i> Мои тесты
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="StudentTest" asp-action="History">
                                                <i class="fas fa-chart-line"></i> Мой прогресс
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a asp-controller="StudentMaterial" asp-action="Index" class="dropdown-item">
                                                <i class="fas fa-book"></i> Материалы
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a href="#" class="dropdown-item">
                                                <i class="fas fa-calendar-alt"></i> Расписание
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">
                                        <i class="fas fa-shield-alt"></i> Админ-панель
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @await Component.InvokeAsync("UserInfo")
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Вход
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Регистрация
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid main-content px-2 px-md-3 px-lg-4">
        <main role="main" class="pb-3" style="max-width: 1600px; margin: 0 auto;">
            @await Html.PartialAsync("_Notifications")
            @RenderBody()
        </main>
    </div>

    <footer class="footer-fixed footer-compact bg-light border-top">
        <div class="container">

            <div class="row d-none d-md-flex align-items-start">

                <div class="col-md-4 footer-column text-center">
                    <h6 class="mb-2"><i class="fas fa-graduation-cap text-primary text-center"></i> Тьюторная</h6>
                    <p class="mb-2">
                        <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">
                            <i class="fas fa-shield-alt text-center"></i> Конфиденциальность
                        </a>
                    </p>
                    <p class="mb-0">&copy; 2025</p>
                </div>

                <div class="col-md-4 footer-column text-center">
                    <h6><i class="fas fa-address-book text-success"></i> Контакты</h6>
                    <p class="mb-1">Пинигина Наталья Анатольевна</p>
                    <div class="social-links justify-content-center">
                        <a href="mailto:pn31@mail.ru" title="Email: pn31@mail.ru">
                            <i class="fas fa-envelope"></i>
                        </a>
                        <a href="tel:+79324224597" title="Телефон: +7 (932) 422-45-97">
                            <i class="fas fa-phone"></i>
                        </a>
                    </div>
                </div>


                <div class="col-md-4 footer-column text-center">
                    <h6><i class="fas fa-code text-info"></i> Тех.поддержка</h6>
                    <p class="mb-1">Пинигин Сергей</p>
                    <div class="social-links justify-content-center">
                        <a href="mailto:pinigin09@yandex.ru" title="Email: pinigin09@yandex.ru">
                            <i class="fas fa-envelope"></i>
                        </a>
                        <a href="https://t.me/SPin09" class="telegram" target="_blank" title="Telegram: @@SPin09">
                            <i class="fab fa-telegram"></i>
                        </a>
                        <a href="https://github.com/SPinigin" class="github" target="_blank" title="GitHub: github.com/SPinigin">
                            <i class="fab fa-github"></i>
                        </a>
                    </div>
                </div>
            </div>


            <div class="row d-md-none gx-2">
                <div class="col-6 footer-column-mobile">
                    <div class="text-center">
                        <h6 class="footer-mobile-title">
                            <i class="fas fa-address-book text-success"></i> Контакты
                        </h6>
                        <p class="footer-mobile-name">Пинигина Наталья Анатольевна</p>
                        <div class="footer-mobile-contacts">
                            <a href="mailto:pn31@mail.ru" class="footer-contact-icon" title="Email">
                                <i class="fas fa-envelope"></i>
                            </a>
                            <a href="tel:+79324224597" class="footer-contact-icon" title="Телефон">
                                <i class="fas fa-phone"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-6 footer-column-mobile">
                    <div class="text-center">
                        <h6 class="footer-mobile-title">
                            <i class="fas fa-code text-info"></i> Тех.поддержка
                        </h6>
                        <p class="footer-mobile-name">Пинигин Сергей</p>
                        <div class="footer-mobile-contacts">
                            <a href="mailto:pinigin09@yandex.ru" class="footer-contact-icon" title="Email">
                                <i class="fas fa-envelope"></i>
                            </a>
                            <a href="https://t.me/SPin09" class="footer-contact-icon telegram" target="_blank" title="Telegram">
                                <i class="fab fa-telegram"></i>
                            </a>
                            <a href="https://github.com/SPinigin" class="footer-contact-icon github" target="_blank" title="GitHub">
                                <i class="fab fa-github"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row d-md-none mt-1">
                <div class="col-12 text-center">
                    <small class="text-muted" style="font-weight: bold;">&copy; 2025 Тьюторная</small>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/notifications.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

