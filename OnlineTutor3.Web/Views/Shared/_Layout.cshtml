<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modern-style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/notifications.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbar-fixed navbar-modern">
            <div class="container-fluid">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    @if (User.IsInRole("Teacher"))
                    {
                        <a class="navbar-brand fw-bold navbar-brand-modern" asp-controller="Teacher" asp-action="Index">
                            <i class="fas fa-graduation-cap"></i>
                        </a>
                    }
                    else if (User.IsInRole("Student"))
                    {
                        <a class="navbar-brand fw-bold navbar-brand-modern" asp-controller="Student" asp-action="Index">
                            <i class="fas fa-graduation-cap"></i>
                        </a>
                    }
                    else
                    {
                        <a class="navbar-brand fw-bold navbar-brand-modern" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-graduation-cap"></i>
                        </a>
                    }
                }
                else
                {
                    <a class="navbar-brand fw-bold navbar-brand-modern" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-graduation-cap"></i>
                    </a>
                }
                <button class="navbar-toggler navbar-toggler-modern" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Teacher"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle nav-link-modern" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-cogs nav-link-icon"></i> Управление
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-modern">
                                        <li>
                                            <a class="dropdown-item dropdown-item-modern" asp-controller="Class" asp-action="Index">
                                                <i class="fas fa-users dropdown-item-icon"></i> Классы
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item dropdown-item-modern" asp-controller="StudentManagement" asp-action="Index">
                                                <i class="fas fa-user-graduate dropdown-item-icon-pink"></i> Ученики
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider dropdown-divider-modern"></li>
                                        <li>
                                            <a class="dropdown-item dropdown-item-modern" asp-controller="Assignment" asp-action="Index">
                                                <i class="fas fa-tasks dropdown-item-icon-blue"></i> Задания и тесты
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item dropdown-item-modern" asp-controller="TeacherDashboard" asp-action="Index">
                                                <i class="fas fa-tachometer-alt dropdown-item-icon-green"></i> Мониторинг
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Material" asp-action="Index" class="dropdown-item dropdown-item-modern">
                                                <i class="fas fa-book dropdown-item-icon-yellow"></i> Материалы
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider dropdown-divider-modern"></li>
                                        <li>
                                            <a href="#" class="dropdown-item dropdown-item-modern">
                                                <i class="fas fa-chart-line dropdown-item-icon"></i> Результаты
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#" class="dropdown-item dropdown-item-modern">
                                                <i class="fas fa-file-alt dropdown-item-icon"></i> Отчеты
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider dropdown-divider-modern"></li>
                                        <li>
                                            <a asp-controller="Calendar" asp-action="Index" class="dropdown-item dropdown-item-modern">
                                                <i class="fas fa-calendar-alt dropdown-item-icon-teal"></i> Календарь
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            @if (User.IsInRole("Student"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle nav-link-modern" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-book-open nav-link-icon"></i> Обучение
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-modern">
                                        <li>
                                            <a class="dropdown-item dropdown-item-modern" asp-controller="StudentTest" asp-action="Index">
                                                <i class="fas fa-book-reader dropdown-item-icon"></i> Мои тесты
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item dropdown-item-modern" asp-controller="StudentTest" asp-action="History">
                                                <i class="fas fa-chart-line dropdown-item-icon-pink"></i> Мой прогресс
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider dropdown-divider-modern"></li>
                                        <li>
                                            <a asp-controller="StudentMaterial" asp-action="Index" class="dropdown-item dropdown-item-modern">
                                                <i class="fas fa-book dropdown-item-icon-blue"></i> Материалы
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider dropdown-divider-modern"></li>
                                        <li>
                                            <a asp-controller="Calendar" asp-action="Index" class="dropdown-item dropdown-item-modern">
                                                <i class="fas fa-calendar-alt dropdown-item-icon-green"></i> Расписание
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link nav-link-modern" asp-controller="Admin" asp-action="Index">
                                        <i class="fas fa-shield-alt nav-link-icon"></i> Админ-панель
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @await Component.InvokeAsync("UserInfo")
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-modern" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt nav-link-icon"></i> Вход
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-modern" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus nav-link-icon"></i> Регистрация
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid main-content px-2 px-md-3 px-lg-4">
        <main role="main" class="pb-3" style="max-width: 1600px; margin: 0 auto;">
            @await Html.PartialAsync("_Notifications")
            @RenderBody()
        </main>
    </div>

    <footer class="footer-fixed footer-compact footer-modern">
        <div class="container">
            <div class="row d-none d-md-flex align-items-start">
                <div class="col-md-4 footer-column text-center">
                    <h6 class="mb-2 footer-column-title">
                        <i class="fas fa-graduation-cap gradient-icon-purple"></i> Тьюторная
                    </h6>
                    <p class="mb-2">
                        <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none footer-column-link">
                            <i class="fas fa-shield-alt"></i> Конфиденциальность
                        </a>
                    </p>
                    <p class="mb-0 text-muted" style="font-size: 0.8rem;">&copy; 2025</p>
                </div>

                <div class="col-md-4 footer-column text-center">
                    <h6 class="footer-column-title">
                        <i class="fas fa-address-book" style="color: #43e97b;"></i> Контакты
                    </h6>
                    <p class="mb-2 footer-column-text">Пинигина Наталья Анатольевна</p>
                    <div class="social-links justify-content-center">
                        <a href="mailto:pn31@mail.ru" title="Email: pn31@mail.ru" class="footer-social-link footer-social-link-email">
                            <i class="fas fa-envelope"></i>
                        </a>
                        <a href="tel:+79324224597" title="Телефон: +7 (932) 422-45-97" class="footer-social-link footer-social-link-phone">
                            <i class="fas fa-phone"></i>
                        </a>
                    </div>
                </div>

                <div class="col-md-4 footer-column text-center">
                    <h6 class="footer-column-title">
                        <i class="fas fa-code" style="color: #4facfe;"></i> Тех.поддержка
                    </h6>
                    <p class="mb-2 footer-column-text">Пинигин Сергей</p>
                    <div class="social-links justify-content-center">
                        <a href="mailto:pinigin09@yandex.ru" title="Email: pinigin09@yandex.ru" class="footer-social-link footer-social-link-tech-email">
                            <i class="fas fa-envelope"></i>
                        </a>
                        <a href="https://t.me/SPin09" class="footer-social-link footer-social-link-telegram telegram" target="_blank" title="Telegram: @@SPin09">
                            <i class="fab fa-telegram"></i>
                        </a>
                        <a href="https://github.com/SPinigin" class="footer-social-link footer-social-link-github github" target="_blank" title="GitHub: github.com/SPinigin">
                            <i class="fab fa-github"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="row d-md-none gx-2">
                <div class="col-6 footer-column-mobile">
                    <div class="text-center">
                        <h6 class="footer-mobile-title footer-mobile-title-modern">
                            <i class="fas fa-address-book" style="color: #43e97b;"></i> Контакты
                        </h6>
                        <p class="footer-mobile-name footer-mobile-name-modern">Пинигина Наталья Анатольевна</p>
                        <div class="footer-mobile-contacts">
                            <a href="mailto:pn31@mail.ru" class="footer-contact-icon footer-social-link-email" title="Email">
                                <i class="fas fa-envelope"></i>
                            </a>
                            <a href="tel:+79324224597" class="footer-contact-icon footer-social-link-phone" title="Телефон">
                                <i class="fas fa-phone"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-6 footer-column-mobile">
                    <div class="text-center">
                        <h6 class="footer-mobile-title footer-mobile-title-modern">
                            <i class="fas fa-code" style="color: #4facfe;"></i> Тех.поддержка
                        </h6>
                        <p class="footer-mobile-name footer-mobile-name-modern">Пинигин Сергей</p>
                        <div class="footer-mobile-contacts">
                            <a href="mailto:pinigin09@yandex.ru" class="footer-contact-icon footer-social-link-tech-email" title="Email">
                                <i class="fas fa-envelope"></i>
                            </a>
                            <a href="https://t.me/SPin09" class="footer-contact-icon footer-social-link-telegram telegram" target="_blank" title="Telegram">
                                <i class="fab fa-telegram"></i>
                            </a>
                            <a href="https://github.com/SPinigin" class="footer-contact-icon footer-social-link-github github" target="_blank" title="GitHub">
                                <i class="fab fa-github"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row d-md-none mt-2">
                <div class="col-12 text-center">
                    <small class="text-muted fw-bold" style="font-size: 0.75rem;">&copy; 2025 Тьюторная</small>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/notifications.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

