@model OnlineTutor3.Web.ViewModels.TestReportIndexViewModel
@{
    ViewData["Title"] = "Отчеты по тестам";
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2 page-header">
    <h4 class="mb-0 d-flex align-items-center gap-2 page-header-title">
        <i class="fas fa-file-alt gradient-icon"></i>
        <span>Отчеты по тестам</span>
    </h4>
    <div>
        <a asp-action="ExportAll" 
           asp-route-subjectId="@Model.SelectedSubjectId" 
           asp-route-classId="@Model.SelectedClassId" 
           class="btn btn-modern-success btn-sm" 
           title="Экспорт в Excel">
            <i class="fas fa-file-excel"></i> <span class="d-none d-md-inline">Экспорт в Excel</span>
        </a>
    </div>
</div>

<div class="card shadow-sm border-0 mb-3 search-filter-card">
    <div class="card-body py-2 px-3">
        <form method="get" action="@Url.Action("Index")" class="row align-items-center g-2">
            <div class="col-12 col-md-4">
                <label class="form-label small text-muted-modern mb-1">Предмет</label>
                <select name="subjectId" class="form-select form-select-sm form-control-modern">
                    <option value="">Все предметы</option>
                    @if (ViewBag.Subjects != null)
                    {
                        @foreach (var subject in (SelectList)ViewBag.Subjects)
                        {
                            <option value="@subject.Value" selected="@(subject.Value == Model.SelectedSubjectId?.ToString())">@subject.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="col-12 col-md-4">
                <label class="form-label small text-muted-modern mb-1">Класс</label>
                <select name="classId" class="form-select form-select-sm form-control-modern">
                    <option value="">Все классы</option>
                    @if (ViewBag.Classes != null)
                    {
                        @foreach (var classItem in (SelectList)ViewBag.Classes)
                        {
                            <option value="@classItem.Value" selected="@(classItem.Value == Model.SelectedClassId?.ToString())">@classItem.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="col-12 col-md-4">
                <label class="form-label small text-muted-modern mb-1">&nbsp;</label>
                <div>
                    <button type="submit" class="btn btn-sm btn-modern-primary w-100">
                        <i class="fas fa-filter"></i> Применить фильтр
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!Model.TestReports.Any())
{
    <div class="empty-state-large">
        <i class="fas fa-file-alt empty-state-icon"></i>
        <h4 class="mt-3 empty-state-title">Нет отчетов для отображения</h4>
        <p class="empty-state-text">У вас пока нет тестов или не найдено отчетов по выбранным фильтрам</p>
    </div>
}
else
{
    <div class="card shadow-sm border-0 modern-card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-modern mb-0">
                    <thead class="table-header-modern">
                        <tr>
                            <th class="ps-3 text-nowrap">Тест</th>
                            <th class="text-nowrap">Предмет</th>
                            <th class="text-nowrap">Задание</th>
                            <th class="text-center text-nowrap">Всего учеников</th>
                            <th class="text-center text-nowrap">Завершено</th>
                            <th class="text-center text-nowrap">В процессе</th>
                            <th class="text-center text-nowrap">Не начато</th>
                            <th class="text-center text-nowrap">Средний балл</th>
                            <th class="text-center text-nowrap">Последнее прохождение</th>
                            <th class="text-center pe-3 text-nowrap">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in Model.TestReports)
                        {
                            var testTypeBadge = report.TestType switch
                            {
                                "spelling" => "badge-modern-info",
                                "punctuation" => "badge-modern-warning",
                                "orthoeopy" => "badge-modern-success",
                                "regular" => "badge-modern-primary",
                                _ => "badge-modern-secondary"
                            };

                            var testTypeName = report.TestType switch
                            {
                                "spelling" => "Орфография",
                                "punctuation" => "Пунктуация",
                                "orthoeopy" => "Орфоэпия",
                                "regular" => "Классический",
                                _ => report.TestType
                            };

                            <tr>
                                <td class="ps-3">
                                    <div>
                                        <strong>@report.TestTitle</strong>
                                        <br>
                                        <span class="badge @testTypeBadge badge-sm">@testTypeName</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge badge-modern-secondary badge-sm">@report.SubjectName</span>
                                </td>
                                <td>
                                    <small class="text-muted-modern">@report.AssignmentTitle</small>
                                </td>
                                <td class="text-center">
                                    <span class="fw-bold">@report.TotalStudents</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-modern-success badge-sm">@report.CompletedCount</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-modern-warning badge-sm">@report.InProgressCount</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-modern-secondary badge-sm">@report.NotStartedCount</span>
                                </td>
                                <td class="text-center">
                                    @if (report.CompletedCount > 0)
                                    {
                                        <div>
                                            <strong>@report.AveragePercentage.ToString("F1")%</strong>
                                            @if (report.AverageGrade.HasValue)
                                            {
                                                <br>
                                                <small class="text-muted-modern">Оценка: @report.AverageGrade.Value</small>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted-modern">—</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (report.LastCompletionDate.HasValue)
                                    {
                                        <small class="text-muted-modern">
                                            @report.LastCompletionDate.Value.ToString("dd.MM.yyyy HH:mm")
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted-modern">—</span>
                                    }
                                </td>
                                <td class="text-center pe-3">
                                    <a asp-action="TestDetails" 
                                       asp-route-testType="@report.TestType" 
                                       asp-route-testId="@report.TestId" 
                                       class="btn btn-sm btn-modern-outline-primary" 
                                       title="Детальный отчет">
                                        <i class="fas fa-eye"></i> <span class="d-none d-md-inline">Отчет</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3 text-center">
        <small class="text-muted-modern">
            Всего тестов: <strong>@Model.TestReports.Count</strong>
        </small>
    </div>
}

