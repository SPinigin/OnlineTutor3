@model OnlineTutor3.Web.ViewModels.TeacherIndexViewModel
@{
    ViewData["Title"] = "Главная";
}

<div class="container-fluid">
    <!-- Приветствие -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <div>
            <h4 class="mb-0 d-flex align-items-center gap-2">
                <i class="fas fa-chalkboard-teacher text-primary"></i>
                <span>Добро пожаловать, @Model.Teacher.FirstName @Model.Teacher.LastName!</span>
            </h4>
            <p class="text-muted mb-0 mt-1">
                <i class="fas fa-user-tie"></i> Учитель
            </p>
        </div>
    </div>

    <!-- Карточки навигации -->
    <div class="row g-2 g-md-3 mb-4">
        <div class="col-6 col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users"></i> Классы
                    </h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text d-none d-md-block">Управляйте классами и учениками</p>
                    <a asp-controller="Class" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        <i class="fas fa-list"></i> Управление классами
                    </a>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user-graduate"></i> Ученики
                    </h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text d-none d-md-block">Просматривайте и управляйте учениками</p>
                    <a asp-controller="StudentManagement" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        <i class="fas fa-list"></i> Управление учениками
                    </a>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tasks"></i> Задания
                    </h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text d-none d-md-block">Создавайте и управляйте заданиями и тестами</p>
                    <a asp-controller="Assignment" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        <i class="fas fa-list"></i> Управление заданиями
                    </a>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tachometer-alt"></i> Мониторинг
                    </h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text d-none d-md-block">Отслеживайте активность учеников в реальном времени</p>
                    <a asp-controller="TeacherDashboard" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        <i class="fas fa-chart-line"></i> Панель мониторинга
                    </a>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-book"></i> Материалы
                    </h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text d-none d-md-block">Управляйте учебными материалами</p>
                    <a asp-controller="Material" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        <i class="fas fa-list"></i> Материалы
                    </a>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-calendar-alt"></i> Календарь
                    </h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text d-none d-md-block">Управляйте расписанием занятий</p>
                    <a asp-controller="Calendar" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        <i class="fas fa-calendar"></i> Календарь
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Статистика -->
    <div class="row g-2 g-md-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center p-3">
                    <i class="fas fa-users text-primary" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@Model.TotalClasses</h3>
                    <small class="text-muted">Активных классов</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center p-3">
                    <i class="fas fa-user-graduate text-success" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@Model.TotalStudents</h3>
                    <small class="text-muted">Учеников</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center p-3">
                    <i class="fas fa-tasks text-info" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@Model.TotalActiveAssignments</h3>
                    <small class="text-muted">Активных заданий</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center p-3">
                    <i class="fas fa-clipboard-list text-warning" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@Model.TotalActiveTests</h3>
                    <small class="text-muted">Активных тестов</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Последние задания -->
        <div class="col-md-12 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-clock text-primary"></i> Последние задания
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentAssignments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Название</th>
                                        <th>Предмет</th>
                                        <th class="text-center">Статус</th>
                                        <th class="text-center">Срок выполнения</th>
                                        <th class="text-center">Дата создания</th>
                                        <th class="text-center">Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var assignment in Model.RecentAssignments)
                                    {
                                        <tr>
                                            <td>
                                                <small class="fw-bold">@assignment.Title</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@(Model.SubjectsDict.ContainsKey(assignment.SubjectId) ? Model.SubjectsDict[assignment.SubjectId] : "Не указан")</span>
                                            </td>
                                            <td class="text-center">
                                                @if (assignment.IsActive)
                                                {
                                                    <span class="badge bg-success">Активно</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Неактивно</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (assignment.DueDate.HasValue)
                                                {
                                                    var daysLeft = (assignment.DueDate.Value - DateTime.Now).Days;
                                                    <span class="badge @(daysLeft <= 3 ? "bg-danger" : daysLeft <= 7 ? "bg-warning" : "bg-info")">
                                                        @assignment.DueDate.Value.ToString("dd.MM.yyyy")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">—</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <small class="text-muted">@assignment.CreatedAt.ToString("dd.MM.yyyy")</small>
                                            </td>
                                            <td class="text-center">
                                                <a asp-controller="Assignment" asp-action="Details" asp-route-id="@assignment.Id" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> Детали
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center mb-0">Пока нет заданий</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

