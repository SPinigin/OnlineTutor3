@model OnlineTutor3.Web.ViewModels.TeacherIndexViewModel
@{
    ViewData["Title"] = "Главная";
}

<div class="container-fluid">
    <div class="mb-4">
        <div class="card border-0 shadow-sm welcome-card">
            <div class="card-body p-3">
                <div class="d-flex align-items-center gap-3">
                    <div class="welcome-icon gradient-icon-purple">
                        <i class="fas fa-chalkboard-teacher"></i>
                    </div>
                    <div>
                        <h4 class="welcome-title">
                            Добро пожаловать, @Model.Teacher.FirstName @Model.Teacher.LastName!
                        </h4>
                        <p class="mb-0 welcome-subtitle">
                            <i class="fas fa-user-tie"></i> Учитель
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-6 col-md-4">
            <a asp-controller="Class" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm nav-card">
                    <div class="card-body text-center p-3 d-flex flex-column justify-content-center align-items-center" style="min-height: 100px;">
                        <div class="nav-icon-large gradient-icon-purple">
                            <i class="fas fa-users"></i>
                        </div>
                        <h6 class="mb-0 nav-title">Классы</h6>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-6 col-md-4">
            <a asp-controller="StudentManagement" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm nav-card">
                    <div class="card-body text-center p-3 d-flex flex-column justify-content-center align-items-center" style="min-height: 100px;">
                        <div class="nav-icon-large gradient-icon-pink">
                            <i class="fas fa-user-graduate"></i>
                        </div>
                        <h6 class="mb-0 nav-title">Ученики</h6>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-6 col-md-4">
            <a asp-controller="Assignment" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm nav-card">
                    <div class="card-body text-center p-3 d-flex flex-column justify-content-center align-items-center" style="min-height: 100px;">
                        <div class="nav-icon-large gradient-icon-blue">
                            <i class="fas fa-tasks"></i>
                        </div>
                        <h6 class="mb-0 nav-title">Задания</h6>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-6 col-md-4">
            <a asp-controller="TeacherDashboard" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm nav-card">
                    <div class="card-body text-center p-3 d-flex flex-column justify-content-center align-items-center" style="min-height: 100px;">
                        <div class="nav-icon-large gradient-icon-green">
                            <i class="fas fa-tachometer-alt"></i>
                        </div>
                        <h6 class="mb-0 nav-title">Мониторинг</h6>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-6 col-md-4">
            <a asp-controller="Material" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm nav-card">
                    <div class="card-body text-center p-3 d-flex flex-column justify-content-center align-items-center" style="min-height: 100px;">
                        <div class="nav-icon-large gradient-icon-yellow">
                            <i class="fas fa-book"></i>
                        </div>
                        <h6 class="mb-0 nav-title">Материалы</h6>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-6 col-md-4">
            <a asp-controller="Calendar" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm nav-card">
                    <div class="card-body text-center p-3 d-flex flex-column justify-content-center align-items-center" style="min-height: 100px;">
                        <div class="nav-icon-large gradient-icon-teal">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <h6 class="mb-0 nav-title">Календарь</h6>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm stat-card">
                <div class="card-body text-center py-1 px-2">
                    <div class="stat-card-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-card-value">@Model.TotalClasses</div>
                    <small class="stat-card-label">Классов</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm stat-card stat-card-pink">
                <div class="card-body text-center py-1 px-2">
                    <div class="stat-card-icon stat-icon-pink">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <div class="stat-card-value">@Model.TotalStudents</div>
                    <small class="stat-card-label">Учеников</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm stat-card stat-card-blue">
                <div class="card-body text-center py-1 px-2">
                    <div class="stat-card-icon stat-icon-blue">
                        <i class="fas fa-tasks"></i>
                    </div>
                    <div class="stat-card-value">@Model.TotalActiveAssignments</div>
                    <small class="stat-card-label">Заданий</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm stat-card stat-card-green">
                <div class="card-body text-center py-1 px-2">
                    <div class="stat-card-icon stat-icon-green">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <div class="stat-card-value">@Model.TotalActiveTests</div>
                    <small class="stat-card-label">Тестов</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card shadow-sm border-0 modern-card">
                <div class="card-header modern-card-header">
                    <h5 class="modern-card-title">
                        <i class="fas fa-clock text-primary"></i> Последние результаты
                    </h5>
                </div>
                <div class="card-body modern-card-body">
                    @if (Model.RecentCompletions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 modern-table">
                                <thead>
                                    <tr>
                                        <th>Ученик</th>
                                        <th class="d-none d-md-table-cell">Класс</th>
                                        <th>Тест</th>
                                        <th class="d-none d-md-table-cell">Предмет</th>
                                        <th class="text-center">Оценка</th>
                                        <th class="text-center d-none d-md-table-cell">Дата</th>
                                        <th class="text-center">Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var completion in Model.RecentCompletions)
                                    {
                                        var testTypeIcon = completion.TestType switch
                                        {
                                            "spelling" => "fa-spell-check",
                                            "punctuation" => "fa-quote-right",
                                            "orthoeopy" => "fa-volume-up",
                                            "regular" => "fa-clipboard-check",
                                            _ => "fa-question"
                                        };
                                        var testTypeName = completion.TestType switch
                                        {
                                            "spelling" => "Правописание",
                                            "punctuation" => "Пунктуация",
                                            "orthoeopy" => "Орфоэпия",
                                            "regular" => "Классический",
                                            _ => "Неизвестно"
                                        };
                                        var gradeColor = completion.Grade.HasValue ? completion.Grade.Value switch
                                        {
                                            5 => "success",
                                            4 => "info",
                                            3 => "warning",
                                            2 => "danger",
                                            _ => "secondary"
                                        } : "secondary";
                                        <tr>
                                            <td>
                                                <div>
                                                    <span class="fw-bold text-dark-modern">@completion.StudentName</span>
                                                    <small class="text-muted-modern d-md-none d-block">@(completion.ClassName ?? "—")</small>
                                                </div>
                                            </td>
                                            <td class="d-none d-md-table-cell">
                                                <span class="text-muted-modern">@(completion.ClassName ?? "—")</span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <i class="fas @testTypeIcon" style="color: #667eea;"></i>
                                                    <div>
                                                        <span class="fw-bold text-dark-modern">@completion.TestTitle</span>
                                                        <small class="badge modern-badge d-md-none ms-1">@completion.SubjectName</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="d-none d-md-table-cell">
                                                <span class="badge modern-badge">@completion.SubjectName</span>
                                            </td>
                                            <td class="text-center">
                                                @if (completion.Grade.HasValue)
                                                {
                                                    <span class="badge badge-modern-@gradeColor" style="font-size: 1rem; padding: 0.25rem 0.5rem; font-weight: 600; display: inline-flex; align-items: center; justify-content: center; min-width: 1.5rem; line-height: 1;">
                                                        @completion.Grade.Value
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted-modern">—</span>
                                                }
                                            </td>
                                            <td class="text-center d-none d-md-table-cell">
                                                <span class="text-muted-modern">@completion.CompletedAt.ToString("dd.MM.yyyy HH:mm")</span>
                                            </td>
                                            <td class="text-center">
                                                <a href="#" 
                                                   class="btn btn-sm btn-modern-outline-info view-test-result"
                                                   data-test-result-id="@completion.TestResultId"
                                                   data-test-type="@completion.TestType"
                                                   title="Детали">
                                                    <i class="fas fa-eye"></i>
                                                    <span class="d-none d-xl-inline ms-1">Детали</span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="fas fa-inbox"></i>
                            </div>
                            <p class="empty-state-text">Пока нет завершенных прохождений тестов</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="testResultModal" tabindex="-1" aria-labelledby="testResultModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="testResultModalTitle">Результат теста</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <div class="modal-body" id="testResultModalBody">
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Загрузка...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function() {
            $('.view-test-result').on('click', function(e) {
                e.preventDefault();
                var testResultId = $(this).data('test-result-id');
                var testType = $(this).data('test-type');
                
                var modal = new bootstrap.Modal(document.getElementById('testResultModal'));
                modal.show();
                
                $('#testResultModalBody').html('<div class="text-center"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Загрузка...</span></div></div>');
                
                $.get('/TeacherDashboard/GetTestResult', {
                    testResultId: testResultId,
                    testType: testType
                })
                .done(function(data) {
                    $('#testResultModalBody').html(data);
                    initializeResultFilter();
                })
                .fail(function() {
                    $('#testResultModalBody').html('<div class="alert alert-danger">Ошибка при загрузке результата теста.</div>');
                });
            });

            function initializeResultFilter() {
                var filterCheckbox = document.querySelector('#testResultModal #showErrorsOnly');
                if (filterCheckbox) {
                    function applyFilter() {
                        var questions = document.querySelectorAll('#testResultModal .question-result');
                        
                        questions.forEach(function(question) {
                            var isCorrect = question.getAttribute('data-correct') === 'true';
                            
                            if (filterCheckbox.checked) {
                                question.style.display = isCorrect ? 'none' : 'block';
                            } else {
                                question.style.display = 'block';
                            }
                        });
                    }

                    // Удаляем старый обработчик, если есть
                    filterCheckbox.removeEventListener('change', applyFilter);
                    // Добавляем новый обработчик
                    filterCheckbox.addEventListener('change', applyFilter);
                    
                    // Применяем фильтр сразу, если он включен
                    applyFilter();
                }
            }
        });
    </script>
}

