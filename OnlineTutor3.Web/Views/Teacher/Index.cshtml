@model OnlineTutor3.Web.ViewModels.TeacherIndexViewModel
@{
    ViewData["Title"] = "Главная";
}

<div class="container-fluid">
    <!-- Приветствие -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <div>
            <h4 class="mb-0 d-flex align-items-center gap-2">
                <i class="fas fa-chalkboard-teacher text-primary"></i>
                <span>Добро пожаловать, @Model.Teacher.FirstName @Model.Teacher.LastName!</span>
            </h4>
            <p class="text-muted mb-0 mt-1">
                <i class="fas fa-user-tie"></i> Учитель
            </p>
        </div>
    </div>

    <!-- Карточки навигации -->
    <div class="row g-2 g-md-3 mb-4">
        <div class="col-6 col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users"></i> Классы
                    </h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text d-none d-md-block">Управляйте классами и учениками</p>
                    <a asp-controller="Class" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        <i class="fas fa-list"></i> Управление классами
                    </a>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user-graduate"></i> Ученики
                    </h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text d-none d-md-block">Просматривайте и управляйте учениками</p>
                    <a asp-controller="StudentManagement" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        <i class="fas fa-list"></i> Управление учениками
                    </a>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tasks"></i> Задания
                    </h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text d-none d-md-block">Создавайте и управляйте заданиями и тестами</p>
                    <a asp-controller="Assignment" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        <i class="fas fa-list"></i> Управление заданиями
                    </a>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tachometer-alt"></i> Мониторинг
                    </h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text d-none d-md-block">Отслеживайте активность учеников в реальном времени</p>
                    <a asp-controller="TeacherDashboard" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        <i class="fas fa-chart-line"></i> Панель мониторинга
                    </a>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-book"></i> Материалы
                    </h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text d-none d-md-block">Управляйте учебными материалами</p>
                    <a asp-controller="Material" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        <i class="fas fa-list"></i> Материалы
                    </a>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-calendar-alt"></i> Календарь
                    </h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text d-none d-md-block">Управляйте расписанием занятий</p>
                    <a asp-controller="Calendar" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        <i class="fas fa-calendar"></i> Календарь
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Статистика -->
    <div class="row g-2 g-md-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center p-2">
                    <i class="fas fa-users text-primary" style="font-size: 1.5rem;"></i>
                    <h4 class="mt-1 mb-0" style="font-size: 1.5rem;">@Model.TotalClasses</h4>
                    <small class="text-muted" style="font-size: 0.75rem;">Активных классов</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center p-2">
                    <i class="fas fa-user-graduate text-success" style="font-size: 1.5rem;"></i>
                    <h4 class="mt-1 mb-0" style="font-size: 1.5rem;">@Model.TotalStudents</h4>
                    <small class="text-muted" style="font-size: 0.75rem;">Учеников</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center p-2">
                    <i class="fas fa-tasks text-info" style="font-size: 1.5rem;"></i>
                    <h4 class="mt-1 mb-0" style="font-size: 1.5rem;">@Model.TotalActiveAssignments</h4>
                    <small class="text-muted" style="font-size: 0.75rem;">Активных заданий</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center p-2">
                    <i class="fas fa-clipboard-list text-warning" style="font-size: 1.5rem;"></i>
                    <h4 class="mt-1 mb-0" style="font-size: 1.5rem;">@Model.TotalActiveTests</h4>
                    <small class="text-muted" style="font-size: 0.75rem;">Активных тестов</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Последние результаты -->
        <div class="col-md-12 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-clock text-primary"></i> Последние результаты
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentCompletions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Ученик</th>
                                        <th>Класс</th>
                                        <th>Тест</th>
                                        <th>Предмет</th>
                                        <th class="text-center">Оценка</th>
                                        <th class="text-center">Дата</th>
                                        <th class="text-center">Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var completion in Model.RecentCompletions)
                                    {
                                        var testTypeIcon = completion.TestType switch
                                        {
                                            "spelling" => "fa-spell-check",
                                            "punctuation" => "fa-quote-right",
                                            "orthoeopy" => "fa-volume-up",
                                            "regular" => "fa-clipboard-check",
                                            _ => "fa-question"
                                        };
                                        var testTypeName = completion.TestType switch
                                        {
                                            "spelling" => "Правописание",
                                            "punctuation" => "Пунктуация",
                                            "orthoeopy" => "Орфоэпия",
                                            "regular" => "Классический",
                                            _ => "Неизвестно"
                                        };
                                        var gradeColor = completion.Grade.HasValue ? completion.Grade.Value switch
                                        {
                                            5 => "success",
                                            4 => "info",
                                            3 => "warning",
                                            2 => "danger",
                                            _ => "secondary"
                                        } : "secondary";
                                        <tr>
                                            <td>
                                                <small class="fw-bold">@completion.StudentName</small>
                                            </td>
                                            <td>
                                                <small class="text-muted">@(completion.ClassName ?? "—")</small>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <i class="fas @testTypeIcon text-primary"></i>
                                                    <small class="fw-bold">@completion.TestTitle</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@completion.SubjectName</span>
                                            </td>
                                            <td class="text-center">
                                                @if (completion.Grade.HasValue)
                                                {
                                                    <span class="badge bg-@gradeColor rounded-pill" style="font-size: 0.9rem; min-width: 2rem;">
                                                        @completion.Grade.Value
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">—</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <small class="text-muted d-none d-md-inline">@completion.CompletedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                                <small class="text-muted d-md-none">@completion.CompletedAt.ToString("dd.MM.yyyy")</small>
                                            </td>
                                            <td class="text-center">
                                                <a href="#" 
                                                   class="btn btn-sm btn-outline-primary view-test-result"
                                                   data-test-result-id="@completion.TestResultId"
                                                   data-test-type="@completion.TestType"
                                                   title="Детали">
                                                    <i class="fas fa-eye"></i>
                                                    <span class="d-none d-xl-inline ms-1">Детали</span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center mb-0">Пока нет завершенных прохождений тестов</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно для просмотра результатов теста -->
<div class="modal fade" id="testResultModal" tabindex="-1" aria-labelledby="testResultModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="testResultModalTitle">Результат теста</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <div class="modal-body" id="testResultModalBody">
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Загрузка...</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.view-test-result').on('click', function(e) {
                e.preventDefault();
                var testResultId = $(this).data('test-result-id');
                var testType = $(this).data('test-type');
                
                var modal = new bootstrap.Modal(document.getElementById('testResultModal'));
                modal.show();
                
                $('#testResultModalBody').html('<div class="text-center"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Загрузка...</span></div></div>');
                
                $.get('/TeacherDashboard/GetTestResult', {
                    testResultId: testResultId,
                    testType: testType
                })
                .done(function(data) {
                    $('#testResultModalBody').html(data);
                    // Инициализируем фильтр "Только ошибки" после загрузки контента
                    initializeResultFilter();
                })
                .fail(function() {
                    $('#testResultModalBody').html('<div class="alert alert-danger">Ошибка при загрузке результата теста.</div>');
                });
            });

            // Функция инициализации фильтра "Только ошибки"
            function initializeResultFilter() {
                var filterCheckbox = document.querySelector('#testResultModal #showErrorsOnly');
                if (filterCheckbox) {
                    function applyFilter() {
                        var questions = document.querySelectorAll('#testResultModal .question-result');
                        
                        questions.forEach(function(question) {
                            var isCorrect = question.getAttribute('data-correct') === 'true';
                            
                            if (filterCheckbox.checked) {
                                // Показываем только неправильные ответы (скрываем правильные)
                                question.style.display = isCorrect ? 'none' : 'block';
                            } else {
                                // Показываем все ответы
                                question.style.display = 'block';
                            }
                        });
                    }

                    // Удаляем старый обработчик, если есть
                    filterCheckbox.removeEventListener('change', applyFilter);
                    // Добавляем новый обработчик
                    filterCheckbox.addEventListener('change', applyFilter);
                    
                    // Применяем фильтр сразу, если он включен
                    applyFilter();
                }
            }
        });
    </script>
}

