@model OnlineTutor3.Web.ViewModels.StudentDashboardViewModel
@{
    ViewData["Title"] = "Главная";
}

<div class="container-fluid">
    <div class="mb-4">
        <div class="card border-0 shadow-sm welcome-card">
            <div class="card-body p-3">
                <div class="d-flex align-items-center gap-3">
                    <div class="welcome-icon gradient-icon-purple">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <div>
                        <h4 class="welcome-title">
                            Добро пожаловать, @Model.User.FirstName @Model.User.LastName!
                        </h4>
                        @if (Model.Data.Class != null)
                        {
                            <p class="mb-0 welcome-subtitle">
                                <i class="fas fa-users"></i> Класс: @Model.Data.Class.Name
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <a asp-controller="StudentTest" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm nav-card">
                    <div class="card-body text-center p-3 d-flex flex-column justify-content-center align-items-center" style="min-height: 100px;">
                        <div class="nav-icon-large gradient-icon-purple">
                            <i class="fas fa-play"></i>
                        </div>
                        <h6 class="mb-0 nav-title">Мои тесты</h6>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-6 col-md-3">
            <a asp-controller="StudentTest" asp-action="History" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm nav-card">
                    <div class="card-body text-center p-3 d-flex flex-column justify-content-center align-items-center" style="min-height: 100px;">
                        <div class="nav-icon-large gradient-icon-pink">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h6 class="mb-0 nav-title">Мой прогресс</h6>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-6 col-md-3">
            <a asp-controller="StudentMaterial" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm nav-card">
                    <div class="card-body text-center p-3 d-flex flex-column justify-content-center align-items-center" style="min-height: 100px;">
                        <div class="nav-icon-large gradient-icon-blue">
                            <i class="fas fa-book"></i>
                        </div>
                        <h6 class="mb-0 nav-title">Материалы</h6>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-6 col-md-3">
            <a asp-controller="Calendar" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm nav-card">
                    <div class="card-body text-center p-3 d-flex flex-column justify-content-center align-items-center" style="min-height: 100px;">
                        <div class="nav-icon-large gradient-icon-green">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <h6 class="mb-0 nav-title">Расписание</h6>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm stat-card">
                <div class="card-body text-center py-1 px-2">
                    <div class="stat-card-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-card-value">@Model.Data.TotalTestsCompleted</div>
                    <small class="stat-card-label">Тестов пройдено</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm stat-card stat-card-pink">
                <div class="card-body text-center py-1 px-2">
                    <div class="stat-card-icon stat-icon-pink">
                        <i class="fas fa-list"></i>
                    </div>
                    <div class="stat-card-value">@Model.Data.TotalTestsAvailable</div>
                    <small class="stat-card-label">Доступно тестов</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm stat-card stat-card-blue">
                <div class="card-body text-center py-1 px-2">
                    <div class="stat-card-icon stat-icon-blue">
                        <i class="fas fa-percent"></i>
                    </div>
                    <div class="stat-card-value">@Model.Data.AveragePercentage.ToString("F1")%</div>
                    <small class="stat-card-label">Средний результат</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card border-0 shadow-sm stat-card stat-card-green">
                <div class="card-body text-center py-1 px-2">
                    <div class="stat-card-icon stat-icon-green">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="stat-card-value">@Model.Data.TotalPoints</div>
                    <small class="stat-card-label">Баллов набрано</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 modern-card">
                <div class="card-header modern-card-header">
                    <h6 class="modern-card-title" style="font-size: 1rem;">
                        <i class="fas fa-clock text-primary"></i> Последние результаты
                    </h6>
                </div>
                <div class="card-body modern-card-body">
                    @if (Model.Data.RecentResults.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 modern-table">
                                <thead>
                                    <tr>
                                        <th>Тест</th>
                                        <th>Тип</th>
                                        <th class="text-center">Оценка / Результат</th>
                                        <th class="text-center">Дата</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var result in Model.Data.RecentResults)
                                    {
                                        <tr>
                                            <td>
                                                <span class="fw-bold text-dark-modern">@result.TestTitle</span>
                                            </td>
                                            <td>
                                                <span class="badge modern-badge">@result.TestType</span>
                                            </td>
                                            <td class="text-center">
                                                @if (result.Grade.HasValue)
                                                {
                                                    var gradeColor = result.Grade.Value switch
                                                    {
                                                        5 => "success",
                                                        4 => "info",
                                                        3 => "warning",
                                                        2 => "danger",
                                                        _ => "secondary"
                                                    };
                                                    <div>
                                                        <span class="badge badge-modern-@gradeColor" style="font-size: 0.875rem; padding: 0.25rem 0.5rem; font-weight: 600; display: inline-flex; align-items: center; justify-content: center; min-width: 1.5rem;">
                                                            @result.Grade.Value
                                                        </span>
                                                        <br>
                                                        <small class="text-muted-modern d-block" style="font-size: 0.75rem; margin-top: 0.3rem;">
                                                            @result.Percentage.ToString("F1")% (@result.Score/@result.MaxScore)
                                                        </small>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="badge @(result.Percentage >= 80 ? "bg-success" : result.Percentage >= 60 ? "bg-warning" : "bg-danger") rounded-pill" style="font-size: 0.85rem; padding: 0.4rem 0.6rem; font-weight: 600;">
                                                        @result.Percentage.ToString("F1")%
                                                    </span>
                                                    <br>
                                                    <small class="text-muted-modern d-block" style="font-size: 0.75rem; margin-top: 0.3rem;">
                                                        @result.Score/@result.MaxScore
                                                    </small>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <span class="text-muted-modern">@result.CompletedAt.ToString("dd.MM.yyyy")</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="fas fa-inbox"></i>
                            </div>
                            <p class="empty-state-text">Пока нет завершенных тестов</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 modern-card">
                <div class="card-header modern-card-header">
                    <h6 class="modern-card-title" style="font-size: 1rem;">
                        <i class="fas fa-calendar-alt text-warning"></i> Ближайшие дедлайны
                    </h6>
                </div>
                <div class="card-body modern-card-body">
                    @if (Model.Data.UpcomingDeadlines.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var deadline in Model.Data.UpcomingDeadlines)
                            {
                                <div class="list-group-item px-0 py-3 border-0 border-bottom modern-list-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="modern-list-item-title">@deadline.Title</h6>
                                            <div class="mb-2">
                                                <span class="badge modern-badge" style="font-size: 0.8rem;">
                                                    <i class="fas fa-book"></i> @deadline.SubjectName
                                                </span>
                                            </div>
                                            <small class="modern-list-item-small">
                                                <i class="fas fa-tasks"></i> Тестов: @deadline.CompletedTestsCount/@deadline.TestsCount
                                            </small>
                                        </div>
                                        <div class="text-end">
                                            @if (deadline.DueDate.HasValue)
                                            {
                                                var daysLeft = (deadline.DueDate.Value - DateTime.Now).Days;
                                                <span class="badge @(daysLeft <= 3 ? "bg-danger" : daysLeft <= 7 ? "bg-warning" : "bg-info") rounded-pill" style="font-size: 0.8rem; padding: 0.4rem 0.6rem; font-weight: 600;">
                                                    @deadline.DueDate.Value.ToString("dd.MM.yyyy")
                                                </span>
                                                <br>
                                                <small class="text-muted-modern d-block mt-1" style="font-size: 0.75rem;">@daysLeft дн.</small>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="fas fa-calendar-check"></i>
                            </div>
                            <p class="empty-state-text">Нет ближайших дедлайнов</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


