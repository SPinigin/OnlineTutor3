@model List<OnlineTutor3.Web.ViewModels.ImportRegularQuestionRow>
@{
    ViewData["Title"] = "Предпросмотр импорта вопросов";
    var test = ViewBag.Test as OnlineTutor3.Domain.Entities.RegularTest;
    var pointsPerQuestion = ViewBag.PointsPerQuestion as int? ?? 1;
    
    var validQuestions = Model?.Where(q => q.IsValid).ToList() ?? new List<OnlineTutor3.Web.ViewModels.ImportRegularQuestionRow>();
    var invalidQuestions = Model?.Where(q => !q.IsValid).ToList() ?? new List<OnlineTutor3.Web.ViewModels.ImportRegularQuestionRow>();
}

<div class="row justify-content-center">
    <div class="col-12">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-primary text-white py-2">
                <h5 class="mb-0">
                    <i class="fas fa-eye"></i> Предпросмотр импорта вопросов
                </h5>
            </div>
            <div class="card-body p-2">
                @if (test != null)
                {
                    <div class="alert alert-info alert-sm py-2 mb-2">
                        <i class="fas fa-info-circle"></i> 
                        <strong>Тест:</strong> @test.Title
                    </div>
                }

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="card border-primary">
                            <div class="card-body text-center py-2">
                                <h6 class="mb-0 text-primary">@Model.Count</h6>
                                <small class="text-muted">Всего вопросов</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-success">
                            <div class="card-body text-center py-2">
                                <h6 class="mb-0 text-success">@validQuestions.Count</h6>
                                <small class="text-muted">Валидных</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-danger">
                            <div class="card-body text-center py-2">
                                <h6 class="mb-0 text-danger">@invalidQuestions.Count</h6>
                                <small class="text-muted">С ошибками</small>
                            </div>
                        </div>
                    </div>
                </div>

                @if (invalidQuestions.Any())
                {
                    <div class="alert alert-danger alert-sm py-2 mb-2">
                        <h6 class="small mb-1"><i class="fas fa-exclamation-triangle"></i> Вопросы с ошибками:</h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="small" style="width: 5%;">Строка</th>
                                        <th class="small" style="width: 40%;">Текст вопроса</th>
                                        <th class="small" style="width: 15%;">Тип</th>
                                        <th class="small" style="width: 40%;">Ошибки</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var question in invalidQuestions)
                                    {
                                        <tr>
                                            <td class="small">@question.RowNumber</td>
                                            <td class="small">@question.Text</td>
                                            <td class="small">@question.Type</td>
                                            <td class="small">
                                                <ul class="mb-0">
                                                    @foreach (var error in question.Errors)
                                                    {
                                                        <li class="text-danger">@error</li>
                                                    }
                                                </ul>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }

                @if (validQuestions.Any())
                {
                    <div class="alert alert-success alert-sm py-2 mb-2">
                        <h6 class="small mb-1"><i class="fas fa-check-circle"></i> Валидные вопросы (@validQuestions.Count):</h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="small" style="width: 5%;">#</th>
                                        <th class="small" style="width: 35%;">Текст вопроса</th>
                                        <th class="small" style="width: 15%;">Тип</th>
                                        <th class="small" style="width: 30%;">Варианты ответов</th>
                                        <th class="small" style="width: 10%;">Баллы</th>
                                        <th class="small" style="width: 5%;">Подсказка</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < validQuestions.Count; i++)
                                    {
                                        var question = validQuestions[i];
                                        var options = question.GetOptions();
                                        var typeName = question.Type switch
                                        {
                                            "1" or "Одиночный выбор" => "Одиночный выбор",
                                            "2" or "Множественный выбор" => "Множественный выбор",
                                            "3" or "Верно/Неверно" => "Верно/Неверно",
                                            _ => question.Type ?? "-"
                                        };
                                        <tr>
                                            <td class="small">@(i + 1)</td>
                                            <td class="small">@question.Text</td>
                                            <td class="small">
                                                <span class="badge bg-secondary badge-sm">@typeName</span>
                                            </td>
                                            <td class="small">
                                                @if (options != null && options.Any())
                                                {
                                                    @foreach (var option in options)
                                                    {
                                                        <div class="small">
                                                            @if (option.IsCorrect)
                                                            {
                                                                <i class="fas fa-check-circle text-success"></i>
                                                            }
                                                            else
                                                            {
                                                                <i class="fas fa-circle text-muted"></i>
                                                            }
                                                            @option.Text
                                                        </div>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="small">@pointsPerQuestion</td>
                                            <td class="small">@(string.IsNullOrEmpty(question.Hint) ? "-" : "✓")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }

                @if (!validQuestions.Any())
                {
                    <div class="alert alert-warning alert-sm py-2 mb-2">
                        <i class="fas fa-exclamation-triangle"></i> 
                        Нет валидных вопросов для импорта. Исправьте ошибки и попробуйте снова.
                    </div>
                }

                <div class="d-flex justify-content-end gap-2 mt-3">
                    <a asp-action="ImportQuestions" asp-route-id="@test!.Id" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Назад
                    </a>
                    @if (validQuestions.Any())
                    {
                        <form asp-action="ConfirmImport" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-success">
                                <i class="fas fa-check"></i> Подтвердить импорт (@validQuestions.Count вопросов)
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

