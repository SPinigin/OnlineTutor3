@model OnlineTutor3.Domain.Entities.RegularTest
@{
    ViewData["Title"] = $"Тест: {Model.Title}";
    var assignment = ViewBag.Assignment as OnlineTutor3.Domain.Entities.Assignment;
    var questions = ViewBag.Questions as List<OnlineTutor3.Domain.Entities.RegularQuestion> ?? new List<OnlineTutor3.Domain.Entities.RegularQuestion>();
}

<div class="page-header">
    <div>
        <h4 class="page-header-title">
            <i class="fas fa-clipboard-check page-header-icon"></i> @Model.Title
            <span class="badge badge-modern-@(Model.IsActive ? "success" : "secondary") ms-2 badge-sm">
                @(Model.IsActive ? "Активен" : "Неактивен")
            </span>
        </h4>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="text-muted-modern mb-0 small">@Model.Description</p>
        }
        @if (assignment != null)
        {
            <p class="text-muted-modern mb-0 small">
                <i class="fas fa-tasks"></i> 
                <a asp-controller="Assignment" asp-action="Details" asp-route-id="@assignment.Id" class="text-link-modern">@assignment.Title</a>
            </p>
        }
    </div>
    <div>
        <a asp-controller="Assignment" asp-action="Details" asp-route-id="@Model.AssignmentId" class="btn btn-sm btn-modern-outline-secondary">
            <i class="fas fa-arrow-left"></i> Назад к заданию
        </a>
    </div>
</div>

<div class="d-flex gap-2 mb-3 stat-cards-row">
    <div class="flex-fill">
        <div class="card modern-card stat-card h-100">
            <div class="card-body text-center py-2 px-2">
                <div class="stat-card-icon">
                    <i class="fas fa-question-circle"></i>
                </div>
                <div class="stat-card-value">@questions.Count</div>
                <small class="stat-card-label">Вопросов</small>
            </div>
        </div>
    </div>
    <div class="flex-fill">
        <div class="card modern-card stat-card stat-card-blue h-100">
            <div class="card-body text-center py-2 px-2">
                <div class="stat-card-icon stat-icon-blue">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-card-value">@Model.TimeLimit</div>
                <small class="stat-card-label">Минут</small>
            </div>
        </div>
    </div>
    <div class="flex-fill">
        <div class="card modern-card stat-card stat-card-green h-100">
            <div class="card-body text-center py-2 px-2">
                <div class="stat-card-icon stat-icon-green">
                    <i class="fas fa-redo"></i>
                </div>
                <div class="stat-card-value">@Model.MaxAttempts</div>
                <small class="stat-card-label">Попыток</small>
            </div>
        </div>
    </div>
    <div class="flex-fill">
        <div class="card modern-card stat-card stat-card-yellow h-100">
            <div class="card-body text-center py-2 px-2">
                <div class="stat-card-icon stat-icon-yellow">
                    <i class="fas fa-calendar-plus"></i>
                </div>
                <div class="stat-card-value stat-card-value-small">@Model.CreatedAt.ToString("dd.MM.yyyy")</div>
                <small class="stat-card-label">Создан</small>
            </div>
        </div>
    </div>
</div>

<div class="card mb-3 modern-card">
    <div class="card-header modern-card-header d-flex justify-content-between align-items-center">
        <h5 class="modern-card-title mb-0">
            <i class="fas fa-question-circle"></i> Вопросы (@questions.Count)
        </h5>
        <div class="d-flex gap-1">
            <a asp-controller="RegularQuestion" asp-action="Create" asp-route-testId="@Model.Id" class="btn btn-sm btn-modern-success" title="Добавить вопрос">
                <i class="fas fa-plus"></i> <span class="d-none d-md-inline">Добавить вопрос</span>
            </a>
            <a asp-action="ImportQuestions" asp-route-id="@Model.Id" class="btn btn-sm btn-modern-outline-info" title="Импорт из Excel">
                <i class="fas fa-file-import"></i> <span class="d-none d-md-inline">Импорт из Excel</span>
            </a>
            @if (questions.Any())
            {
                <button type="button" class="btn btn-sm btn-modern-danger" data-bs-toggle="modal" data-bs-target="#deleteAllQuestionsModal" title="Удалить все вопросы">
                    <i class="fas fa-trash-alt"></i> <span class="d-none d-md-inline">Удалить все</span>
                </button>
            }
        </div>
    </div>
    <div class="card-body modern-card-body">
        @if (questions.Any())
        {
            <div class="table-responsive-md">
                <table class="table modern-table mb-0" style="table-layout: auto; width: 100%;">
                    <thead>
                        <tr>
                            <th style="width: 5%; min-width: 40px;" class="small">#</th>
                            <th style="min-width: 150px;" class="small">Текст вопроса</th>
                            <th style="width: 15%; min-width: 100px;" class="small">Тип</th>
                            <th style="width: 10%;" class="small d-none d-md-table-cell">Баллы</th>
                            <th style="width: 10%; min-width: 100px;" class="small text-center">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var question in questions.OrderBy(q => q.OrderIndex))
                        {
                            <tr>
                                <td class="small text-muted-modern">@question.OrderIndex</td>
                                <td class="small text-dark-modern">@question.Text</td>
                                <td class="small">
                                    @{
                                        string typeName = question.Type switch
                                        {
                                            OnlineTutor3.Domain.Entities.QuestionType.SingleChoice => "Одиночный выбор",
                                            OnlineTutor3.Domain.Entities.QuestionType.MultipleChoice => "Множественный выбор",
                                            OnlineTutor3.Domain.Entities.QuestionType.TrueFalse => "Верно/Неверно",
                                            _ => question.Type.ToString()
                                        };
                                    }
                                    <span class="badge badge-modern-secondary badge-sm">@typeName</span>
                                </td>
                                <td class="small text-muted-modern d-none d-md-table-cell">@question.Points</td>
                                <td class="text-center">
                                    <div class="d-flex gap-1 justify-content-center">
                                        <a asp-controller="RegularQuestion" asp-action="Edit" asp-route-id="@question.Id" class="btn btn-sm btn-modern-outline-primary" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="RegularQuestion" asp-action="Delete" asp-route-id="@question.Id" class="btn btn-sm btn-modern-outline-danger" title="Удалить">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-question-circle"></i>
                </div>
                <p class="empty-state-text">В этом тесте пока нет вопросов</p>
                <a asp-controller="RegularQuestion" asp-action="Create" asp-route-testId="@Model.Id" class="btn btn-modern-primary">
                    <i class="fas fa-plus"></i> Добавить первый вопрос
                </a>
            </div>
        }
    </div>
</div>

@if (questions.Any())
{
    <div class="modal fade" id="deleteAllQuestionsModal" tabindex="-1" aria-labelledby="deleteAllQuestionsModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content modern-modal-content">
                <div class="modal-header modern-modal-header" style="border-left: 4px solid #dc3545;">
                    <h5 class="modal-title modern-modal-title" id="deleteAllQuestionsModalLabel">
                        <i class="fas fa-exclamation-triangle text-danger"></i> Подтверждение удаления
                    </h5>
                    <button type="button" class="btn-close modern-btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                </div>
                <div class="modal-body modern-modal-body">
                    <div class="alert alert-warning mb-3">
                        <i class="fas fa-warning"></i>
                        <strong>Внимание!</strong> Это действие нельзя отменить.
                    </div>
                    <p class="text-dark-modern">Вы действительно хотите удалить все вопросы теста <strong>"@Model.Title"</strong>?</p>
                    <p class="text-muted-modern mb-0">Будет удалено вопросов: <strong>@questions.Count</strong></p>
                </div>
                <div class="modal-footer modern-modal-footer">
                    <button type="button" class="btn btn-modern-outline-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Отмена
                    </button>
                    <form asp-action="DeleteAllQuestions" asp-route-id="@Model.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-modern-danger">
                            <i class="fas fa-trash-alt"></i> Удалить все вопросы
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

