@model OnlineTutor3.Domain.Entities.RegularTest
@{
    ViewData["Title"] = $"Тест: {Model.Title}";
    var assignment = ViewBag.Assignment as OnlineTutor3.Domain.Entities.Assignment;
    var questions = ViewBag.Questions as List<OnlineTutor3.Domain.Entities.RegularQuestion> ?? new List<OnlineTutor3.Domain.Entities.RegularQuestion>();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h4 class="mb-1">
            <i class="fas fa-clipboard-check text-primary"></i> @Model.Title
            <span class="badge bg-@(Model.IsActive ? "success" : "secondary") ms-2 badge-sm">
                @(Model.IsActive ? "Активен" : "Неактивен")
            </span>
        </h4>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="text-muted mb-0 small">@Model.Description</p>
        }
        @if (assignment != null)
        {
            <p class="text-muted mb-0 small">
                <i class="fas fa-tasks"></i> 
                <a asp-controller="Assignment" asp-action="Details" asp-route-id="@assignment.Id">@assignment.Title</a>
            </p>
        }
    </div>
    <div>
        <a asp-controller="Assignment" asp-action="Details" asp-route-id="@Model.AssignmentId" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Назад к заданию
        </a>
    </div>
</div>

<div class="row mb-3 g-1 g-md-2">
    <div class="col-6 col-md-3">
        <div class="card text-center border-primary">
            <div class="card-body py-2 px-2">
                <i class="fas fa-question-circle text-primary" style="font-size: 1.25rem;"></i>
                <div class="mt-1 mb-0 small fw-bold">@questions.Count</div>
                <p class="text-muted mb-0" style="font-size: 0.75rem;">Вопросов</p>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card text-center border-info">
            <div class="card-body py-2 px-2">
                <i class="fas fa-clock text-info" style="font-size: 1.25rem;"></i>
                <div class="mt-1 mb-0 small fw-bold">@Model.TimeLimit</div>
                <p class="text-muted mb-0" style="font-size: 0.75rem;">Минут</p>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card text-center border-success">
            <div class="card-body py-2 px-2">
                <i class="fas fa-redo text-success" style="font-size: 1.25rem;"></i>
                <div class="mt-1 mb-0 small fw-bold">@Model.MaxAttempts</div>
                <p class="text-muted mb-0" style="font-size: 0.75rem;">Попыток</p>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card text-center border-warning">
            <div class="card-body py-2 px-2">
                <i class="fas fa-calendar-plus text-warning" style="font-size: 1.25rem;"></i>
                <div class="mt-1 mb-0 small fw-bold">@Model.CreatedAt.ToString("dd.MM.yyyy")</div>
                <p class="text-muted mb-0" style="font-size: 0.75rem;">Создан</p>
            </div>
        </div>
    </div>
</div>

<div class="card mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-question-circle"></i> Вопросы (@questions.Count)
        </h5>
        <div class="d-flex gap-1">
            <a asp-controller="RegularQuestion" asp-action="Create" asp-route-testId="@Model.Id" class="btn btn-sm btn-success">
                <i class="fas fa-plus"></i> Добавить вопрос
            </a>
            <a asp-action="ImportQuestions" asp-route-id="@Model.Id" class="btn btn-sm btn-info">
                <i class="fas fa-file-import"></i> Импорт из Excel
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (questions.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-sm">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 5%;" class="small">#</th>
                            <th style="width: 50%;" class="small">Текст вопроса</th>
                            <th style="width: 15%;" class="small">Тип</th>
                            <th style="width: 10%;" class="small">Баллы</th>
                            <th style="width: 10%;" class="small text-center">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var question in questions.OrderBy(q => q.OrderIndex))
                        {
                            <tr>
                                <td class="small">@question.OrderIndex</td>
                                <td class="small">@question.Text</td>
                                <td class="small">
                                    @{
                                        string typeName = question.Type switch
                                        {
                                            OnlineTutor3.Domain.Entities.QuestionType.SingleChoice => "Одиночный выбор",
                                            OnlineTutor3.Domain.Entities.QuestionType.MultipleChoice => "Множественный выбор",
                                            OnlineTutor3.Domain.Entities.QuestionType.TrueFalse => "Верно/Неверно",
                                            _ => question.Type.ToString()
                                        };
                                    }
                                    <span class="badge bg-secondary badge-sm">@typeName</span>
                                </td>
                                <td class="small">@question.Points</td>
                                <td class="text-center">
                                    <div class="d-flex gap-1 justify-content-center">
                                        <a asp-controller="RegularQuestion" asp-action="Edit" asp-route-id="@question.Id" class="btn btn-sm btn-outline-primary" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="RegularQuestion" asp-action="Delete" asp-route-id="@question.Id" class="btn btn-sm btn-outline-danger" title="Удалить">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-question-circle text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">В этом тесте пока нет вопросов</p>
                <a asp-controller="RegularQuestion" asp-action="Create" asp-route-testId="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Добавить первый вопрос
                </a>
            </div>
        }
    </div>
</div>

