@model IEnumerable<OnlineTutor3.Domain.Entities.Material>
@{
    ViewData["Title"] = "Управление материалами";
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <h4 class="mb-0 d-flex align-items-center gap-2">
        <i class="fas fa-book text-primary"></i>
        <span>Управление материалами</span>
    </h4>
    <div>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Загрузить материал
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-book text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">У вас пока нет материалов</h4>
        <p class="text-muted">Загрузите первый учебный материал для начала работы</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Загрузить первый материал
        </a>
    </div>
}
else
{
    <div class="card mb-3">
        <div class="card-body">
            <form method="get" class="row g-2">
                <div class="col-12 col-md-3">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-white">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" 
                               class="form-control form-control-sm" 
                               name="searchString" 
                               value="@ViewBag.CurrentFilter"
                               placeholder="Поиск...">
                    </div>
                </div>
                <div class="col-12 col-md-2">
                    <select class="form-select form-select-sm" name="classFilter">
                        <option value="">Все классы</option>
                        @if (ViewBag.Classes != null)
                        {
                            @foreach (var item in (SelectList)ViewBag.Classes)
                            {
                                <option value="@item.Value" selected="@(item.Value == ViewBag.ClassFilter?.ToString())">@item.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-12 col-md-2">
                    <select class="form-select form-select-sm" name="assignmentFilter">
                        <option value="">Все задания</option>
                        @if (ViewBag.Assignments != null)
                        {
                            @foreach (var item in (SelectList)ViewBag.Assignments)
                            {
                                <option value="@item.Value" selected="@(item.Value == ViewBag.AssignmentFilter?.ToString())">@item.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-12 col-md-2">
                    <select class="form-select form-select-sm" name="typeFilter">
                        <option value="">Все типы</option>
                        @if (ViewBag.MaterialTypes != null)
                        {
                            @foreach (var type in (List<SelectListItem>)ViewBag.MaterialTypes)
                            {
                                <option value="@type.Value" selected="@(type.Value == ViewBag.TypeFilter)">@type.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-12 col-md-2">
                    <select class="form-select form-select-sm" name="sortOrder">
                        <option value="">По дате (новые)</option>
                        <option value="title_desc" selected="@(ViewBag.CurrentSort == "title_desc")">По названию (Я-А)</option>
                        <option value="Date" selected="@(ViewBag.CurrentSort == "Date")">По дате (старые)</option>
                        <option value="Size" selected="@(ViewBag.CurrentSort == "Size")">По размеру (меньше)</option>
                        <option value="size_desc" selected="@(ViewBag.CurrentSort == "size_desc")">По размеру (больше)</option>
                    </select>
                </div>
                <div class="col-12 col-md-1">
                    <button type="submit" class="btn btn-primary btn-sm w-100">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="table-light">
                <tr>
                    <th>Название</th>
                    <th class="text-center">Тип</th>
                    <th class="text-center">Класс</th>
                    <th class="text-center">Задание</th>
                    <th class="text-center">Размер</th>
                    <th class="text-center">Дата</th>
                    <th class="text-center">Статус</th>
                    <th class="text-center">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var material in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                @switch (material.Type)
                                {
                                    case MaterialType.Document:
                                        <i class="fas fa-file-alt text-danger me-2"></i>
                                        break;
                                    case MaterialType.Presentation:
                                        <i class="fas fa-file-powerpoint text-warning me-2"></i>
                                        break;
                                    case MaterialType.Image:
                                        <i class="fas fa-file-image text-info me-2"></i>
                                        break;
                                    case MaterialType.Audio:
                                        <i class="fas fa-file-audio text-success me-2"></i>
                                        break;
                                    case MaterialType.Video:
                                        <i class="fas fa-file-video text-primary me-2"></i>
                                        break;
                                    default:
                                        <i class="fas fa-file text-secondary me-2"></i>
                                        break;
                                }
                                <div>
                                    <strong>@material.Title</strong>
                                    @if (!string.IsNullOrEmpty(material.Description))
                                    {
                                        <br>
                                        <small class="text-muted">@material.Description</small>
                                    }
                                </div>
                            </div>
                        </td>
                        <td class="text-center">
                            <span class="badge bg-secondary">@GetMaterialTypeDisplayName(material.Type)</span>
                        </td>
                        <td class="text-center">
                            @if (material.ClassId.HasValue)
                            {
                                <span class="badge bg-info">Класс #@material.ClassId</span>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (material.AssignmentId.HasValue)
                            {
                                <span class="badge bg-primary">Задание #@material.AssignmentId</span>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td class="text-center">
                            <small>@FormatFileSize(material.FileSize)</small>
                        </td>
                        <td class="text-center">
                            <small>@material.UploadedAt.ToString("dd.MM.yyyy")</small>
                        </td>
                        <td class="text-center">
                            @if (material.IsActive)
                            {
                                <span class="badge bg-success">Активно</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Неактивно</span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="d-flex gap-1 justify-content-center">
                                <a asp-action="Details" asp-route-id="@material.Id" class="btn btn-sm btn-outline-primary" title="Детали">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Download" asp-route-id="@material.Id" class="btn btn-sm btn-outline-success" title="Скачать">
                                    <i class="fas fa-download"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@material.Id" class="btn btn-sm btn-outline-warning" title="Редактировать">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="ToggleStatus" asp-route-id="@material.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-@(material.IsActive ? "secondary" : "success")" title="@(material.IsActive ? "Деактивировать" : "Активировать")">
                                        <i class="fas fa-@(material.IsActive ? "eye-slash" : "eye")"></i>
                                    </button>
                                </form>
                                <form asp-action="Delete" asp-route-id="@material.Id" method="get" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Удалить" onclick="return confirm('Вы уверены, что хотите удалить этот материал?');">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@functions {
    private string GetMaterialTypeDisplayName(MaterialType type)
    {
        return type switch
        {
            MaterialType.Document => "Документ",
            MaterialType.Presentation => "Презентация",
            MaterialType.Image => "Изображение",
            MaterialType.Audio => "Аудио",
            MaterialType.Video => "Видео",
            MaterialType.Other => "Другое",
            _ => type.ToString()
        };
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "Б", "КБ", "МБ", "ГБ" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}

