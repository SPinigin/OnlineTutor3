@model OnlineTutor3.Web.ViewModels.EditSpellingQuestionViewModel
@{
    ViewData["Title"] = "Редактирование вопроса по орфографии";
    var test = ViewBag.Test as OnlineTutor3.Domain.Entities.SpellingTest;
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white py-2">
                <h5 class="mb-0">
                    <i class="fas fa-edit"></i> Редактирование вопроса по орфографии
                </h5>
            </div>
            <div class="card-body p-2">
                @if (test != null)
                {
                    <div class="alert alert-info alert-sm py-2 mb-2">
                        <i class="fas fa-info-circle"></i> 
                        <strong>Тест:</strong> @test.Title
                    </div>
                }

                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="SpellingTestId" type="hidden" />
                    <div asp-validation-summary="All" class="text-danger mb-2 small"></div>

                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label asp-for="OrderIndex" class="form-label small">
                                <i class="fas fa-sort-numeric-down"></i> Порядковый номер <span class="text-danger">*</span>
                            </label>
                            <input asp-for="OrderIndex" type="number" class="form-control form-control-sm" min="1" />
                            <span asp-validation-for="OrderIndex" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-2">
                            <label asp-for="Points" class="form-label small">
                                <i class="fas fa-star"></i> Баллы <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Points" type="number" class="form-control form-control-sm" min="1" max="100" />
                            <span asp-validation-for="Points" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-2">
                        <label asp-for="WordWithGap" class="form-label small">
                            <i class="fas fa-spell-check"></i> Слово с пропуском <span class="text-danger">*</span>
                        </label>
                        <input asp-for="WordWithGap" class="form-control form-control-sm" placeholder="Например: к_рзина" />
                        <span asp-validation-for="WordWithGap" class="text-danger small"></span>
                    </div>

                    <div class="mb-2" id="correctLetterSection">
                        <label asp-for="CorrectLetter" class="form-label small">
                            <i class="fas fa-check-circle"></i> Правильная буква <span class="text-danger" id="correctLetterRequired" style="@(Model.RequiresAnswer ? "" : "display:none;")">*</span>
                        </label>
                        @if (Model.RequiresAnswer)
                        {
                            <input asp-for="CorrectLetter" class="form-control form-control-sm" placeholder="Например: о" maxlength="10" id="correctLetterInput" required />
                        }
                        else
                        {
                            <input name="CorrectLetter" value="" class="form-control form-control-sm" placeholder="Например: о" maxlength="10" id="correctLetterInput" data-val="false" />
                        }
                        <span asp-validation-for="CorrectLetter" class="text-danger small" id="correctLetterValidation"></span>
                    </div>

                    <div class="mb-2">
                        <label asp-for="FullWord" class="form-label small">
                            <i class="fas fa-book"></i> Полное слово <span class="text-danger">*</span>
                        </label>
                        <input asp-for="FullWord" class="form-control form-control-sm" placeholder="Например: корзина" />
                        <span asp-validation-for="FullWord" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Hint" class="form-label small">
                            <i class="fas fa-lightbulb"></i> Подсказка
                        </label>
                        <textarea asp-for="Hint" class="form-control form-control-sm" rows="2" placeholder="Необязательная подсказка для ученика..."></textarea>
                        <span asp-validation-for="Hint" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="RequiresAnswer" class="form-check-input" type="checkbox" id="RequiresAnswer" />
                            <label asp-for="RequiresAnswer" class="form-check-label small" for="RequiresAnswer">
                                <i class="fas fa-keyboard"></i> Требуется ответ (если снять галочку, то пустой ответ будет считаться правильным)
                            </label>
                        </div>
                        <small class="form-text text-muted-modern d-block mt-1">
                            <i class="fas fa-info-circle"></i>
                            Для слов, в которых не нужно ставить букву вместо пропуска, снимите эту галочку.
                        </small>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <a asp-controller="SpellingTest" asp-action="Details" asp-route-id="@Model.SpellingTestId" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Отмена
                        </a>
                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="fas fa-save"></i> Сохранить изменения
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            const form = $('form');
            const correctLetterInput = $('#correctLetterInput');
            const requiresAnswerCheckbox = $('#RequiresAnswer');
            
            function disableValidationForField() {
                correctLetterInput.attr('data-val', 'false');
                correctLetterInput.removeAttr('data-val-required');
                correctLetterInput.removeAttr('required');
                correctLetterInput.removeClass('input-validation-error');
                
                if (typeof $.validator !== 'undefined' && form.length > 0) {
                    let validator = form.data('validator');
                    if (!validator) {
                        validator = form.validate();
                    }
                    if (validator) {
                        if (!validator.settings.ignore) {
                            validator.settings.ignore = '';
                        }
                        if (validator.settings.ignore.indexOf('#correctLetterInput') === -1) {
                            validator.settings.ignore = (validator.settings.ignore + ' #correctLetterInput').trim();
                        }
                        validator.resetForm();
                    }
                }
                
                $('#correctLetterValidation').text('').hide();
                $('span[data-valmsg-for="CorrectLetter"]').text('').hide();
                $('span.field-validation-error[data-valmsg-for="CorrectLetter"]').text('').hide();
            }
            
            function enableValidationForField() {
                if (typeof $.validator !== 'undefined' && form.length > 0) {
                    const validator = form.data('validator');
                    if (validator && validator.settings.ignore) {
                        validator.settings.ignore = validator.settings.ignore.replace(/#correctLetterInput/g, '').trim();
                        if (validator.settings.ignore === '') {
                            delete validator.settings.ignore;
                        }
                    }
                }
            }
            
            function toggleCorrectLetterField() {
                const requiresAnswer = requiresAnswerCheckbox.is(':checked');
                const correctLetterRequired = $('#correctLetterRequired');
                
                if (!requiresAnswer) {
                    correctLetterRequired.hide();
                    correctLetterInput.removeAttr('required');
                    correctLetterInput.attr('data-val', 'false');
                    correctLetterInput.removeAttr('data-val-required');
                    correctLetterInput.removeClass('input-validation-error');
                    correctLetterInput.val('');
                    $('span[data-valmsg-for="CorrectLetter"]').text('').hide();
                    $('span.field-validation-error[data-valmsg-for="CorrectLetter"]').text('').hide();
                    $('span.text-danger:has([data-valmsg-for="CorrectLetter"])').hide();
                    $('.field-validation-error[data-valmsg-for="CorrectLetter"]').hide();
                    disableValidationForField();
                } else {
                    correctLetterRequired.show();
                    correctLetterInput.attr('required', 'required');
                    correctLetterInput.attr('data-val', 'true');
                    correctLetterInput.attr('data-val-required', 'Правильная буква обязательна, когда требуется ответ');
                    correctLetterInput.removeClass('input-validation-error');
                    enableValidationForField();
                    
                    if (typeof $.validator !== 'undefined' && form.length > 0) {
                        const validator = form.data('validator');
                        if (validator) {
                            validator.settings.ignore = validator.settings.ignore || '';
                            validator.settings.ignore = validator.settings.ignore.replace(/#correctLetterInput/g, '').trim();
                            if (validator.settings.ignore === '') {
                                delete validator.settings.ignore;
                            }
                        }
                    }
                }
            }
            
            if (!@Model.RequiresAnswer.ToString().ToLower()) {
                disableValidationForField();
                correctLetterInput.attr('data-val', 'false');
                correctLetterInput.removeAttr('data-val-required');
            }
            
            toggleCorrectLetterField();
            
            requiresAnswerCheckbox.on('change', function() {
                toggleCorrectLetterField();
            });
            
            form.on('submit', function(e) {
                const requiresAnswer = requiresAnswerCheckbox.is(':checked');
                if (!requiresAnswer) {
                    correctLetterInput.val('');
                    correctLetterInput.attr('data-val', 'false');
                    correctLetterInput.removeAttr('data-val-required');
                    correctLetterInput.removeAttr('required');
                    correctLetterInput.removeClass('input-validation-error');
                    
                    $('#correctLetterValidation').text('').hide();
                    $('span[data-valmsg-for="CorrectLetter"]').text('').hide();
                    $('span.field-validation-error[data-valmsg-for="CorrectLetter"]').text('').hide();
                    
                    if (typeof $.validator !== 'undefined') {
                        const validator = form.data('validator');
                        if (validator) {
                            validator.settings.ignore = validator.settings.ignore || '';
                            if (validator.settings.ignore.indexOf('#correctLetterInput') === -1) {
                                validator.settings.ignore = (validator.settings.ignore + ' #correctLetterInput').trim();
                            }
                            validator.resetForm();
                        }
                    }
                }
            });
        });
    </script>
}

