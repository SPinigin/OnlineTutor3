@model OnlineTutor3.Domain.Entities.SpellingQuestion
@{
    ViewData["Title"] = "Удаление вопроса по орфографии";
    var test = ViewBag.Test as OnlineTutor3.Domain.Entities.SpellingTest;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white py-2">
                <h5 class="mb-0">
                    <i class="fas fa-exclamation-triangle"></i> Удаление вопроса
                </h5>
            </div>
            <div class="card-body p-3">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> 
                    <strong>Внимание!</strong> Вы уверены, что хотите удалить этот вопрос? Это действие нельзя отменить.
                </div>

                @if (test != null)
                {
                    <div class="mb-3">
                        <strong>Тест:</strong> @test.Title
                    </div>
                }

                <div class="mb-3">
                    <strong>Порядковый номер:</strong> @Model.OrderIndex
                </div>

                <div class="mb-3">
                    <strong>Слово с пропуском:</strong> @Model.WordWithGap
                </div>

                <div class="mb-3">
                    <strong>Правильная буква:</strong> @Model.CorrectLetter
                </div>

                <div class="mb-3">
                    <strong>Полное слово:</strong> @Model.FullWord
                </div>

                <div class="mb-3">
                    <strong>Баллы:</strong> @Model.Points
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <a asp-controller="SpellingTest" asp-action="Details" asp-route-id="@Model.SpellingTestId" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Отмена
                        </a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i> Удалить вопрос
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

