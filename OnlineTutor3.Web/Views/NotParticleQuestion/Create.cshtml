@model OnlineTutor3.Web.ViewModels.CreateNotParticleQuestionViewModel
@{
    ViewData["Title"] = "Создание вопроса на правописание частицы \"не\"";
    var test = ViewBag.Test as OnlineTutor3.Domain.Entities.NotParticleTest;
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white py-2">
                <h5 class="mb-0">
                    <i class="fas fa-plus"></i> Создание вопроса на правописание частицы "не"
                </h5>
            </div>
            <div class="card-body p-2">
                @if (test != null)
                {
                    <div class="alert alert-info alert-sm py-2 mb-2">
                        <i class="fas fa-info-circle"></i> 
                        <strong>Тест:</strong> @test.Title
                    </div>
                }

                <form asp-action="Create" method="post">
                    <input asp-for="NotParticleTestId" type="hidden" />
                    <div asp-validation-summary="All" class="text-danger mb-2 small"></div>

                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label asp-for="OrderIndex" class="form-label small">
                                <i class="fas fa-sort-numeric-down"></i> Порядковый номер <span class="text-danger">*</span>
                            </label>
                            <input asp-for="OrderIndex" type="number" class="form-control form-control-sm" min="1" />
                        </div>

                        <div class="col-md-6 mb-2">
                            <label asp-for="Points" class="form-label small">
                                <i class="fas fa-star"></i> Баллы <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Points" type="number" class="form-control form-control-sm" min="1" max="100" />
                        </div>
                    </div>

                    <div class="mb-2">
                        <label asp-for="TextWithGap" class="form-label small">
                            <i class="fas fa-spell-check"></i> Текст с (не) <span class="text-danger">*</span>
                        </label>
                        <input asp-for="TextWithGap" class="form-control form-control-sm" placeholder="Например: Пережить (не) удачу" />
                        <small class="form-text text-muted d-block mt-1 small">
                            Используйте (не) вместо частицы "не" в тексте
                        </small>
                    </div>

                    <div class="mb-2">
                        <label asp-for="CorrectAnswer" class="form-label small">
                            <i class="fas fa-check-circle"></i> Правильный ответ <span class="text-danger">*</span>
                        </label>
                        <select asp-for="CorrectAnswer" class="form-select form-control-sm">
                            <option value="слитно">Слитно</option>
                            <option value="раздельно">Раздельно</option>
                        </select>
                        <span asp-validation-for="CorrectAnswer" class="text-danger small"></span>
                    </div>

                    <div class="mb-2">
                        <label asp-for="FullText" class="form-label small">
                            <i class="fas fa-book"></i> Полный текст <span class="text-danger">*</span>
                        </label>
                        <input asp-for="FullText" class="form-control form-control-sm" placeholder="Например: Пережить неудачу или не удачу" />
                        <small class="form-text text-muted d-block mt-1 small">
                            Текст с правильным написанием (слитно или раздельно)
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Hint" class="form-label small">
                            <i class="fas fa-lightbulb"></i> Подсказка
                        </label>
                        <textarea asp-for="Hint" class="form-control form-control-sm" rows="2" placeholder="Необязательная подсказка для ученика..."></textarea>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <a asp-controller="NotParticleTest" asp-action="Details" asp-route-id="@Model.NotParticleTestId" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Отмена
                        </a>
                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="fas fa-save"></i> Создать вопрос
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

