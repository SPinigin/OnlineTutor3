@model OnlineTutor3.Web.ViewModels.RegularTestResultViewModel
@using OnlineTutor3.Domain.Entities
@{
    ViewData["Title"] = $"Результат теста: {Model.TestTitle}";
    
    var gradeColor = Model.Percentage >= 80 ? "success" :
                     Model.Percentage >= 60 ? "warning" :
                     Model.Percentage >= 40 ? "info" : "danger";
}

@if (!(ViewBag.IsModal as bool? ?? false))
{
    <div class="mb-3">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <nav aria-label="breadcrumb" class="flex-grow-1">
                <ol class="breadcrumb breadcrumb-compact mb-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="StudentTest" asp-action="History">История прохождения</a>
                    </li>
                    <li class="breadcrumb-item active text-truncate">@Model.TestTitle</li>
                </ol>
            </nav>
            <a asp-controller="StudentTest" asp-action="Index" class="btn btn-modern-outline-primary btn-sm">
                <i class="fas fa-list"></i>
                <span>К тестам</span>
            </a>
        </div>
    </div>
}

<div class="test-container">
    <div class="card modern-card mb-2">
        <div class="card-header modern-card-header" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: white;">
            <div class="d-flex justify-content-between align-items-center gap-2">
                <div class="flex-grow-1 min-w-0">
                    <h6 class="mb-0 d-flex align-items-center" style="font-size: 0.9rem; color: white;">
                        <i class="fas @Model.TestIcon me-2 flex-shrink-0"></i>
                        <span class="text-truncate">@Model.TestTitle</span>
                    </h6>
                </div>
            </div>
        </div>
    </div>

    <div class="card modern-card mb-2">
        <div class="card-body p-0">
            <div class="row text-center g-0">
                <div class="col-4">
                    <div class="d-flex flex-column align-items-center">
                        <div class="result-circle mb-0" style="width: 160px; height: 160px; position: relative;">
                            <svg viewBox="0 0 100 100" style="width: 100%; height: 100%;">
                                <circle cx="50" cy="50" r="32" fill="none" stroke="#e5e7eb" stroke-width="4" />
                                <circle cx="50" cy="50" r="32" fill="none"
                                        stroke="#6b7280"
                                        stroke-width="5"
                                        stroke-linecap="round"
                                        stroke-dasharray="@(Model.Percentage * 2.01), 201"
                                        transform="rotate(-90 50 50)" />
                                <text x="50" y="45" text-anchor="middle" dominant-baseline="middle"
                                      font-size="16" font-weight="800"
                                      fill="#6b7280">
                                    @Model.Percentage.ToString("F1")%
                                </text>
                                <text x="50" y="60" text-anchor="middle" dominant-baseline="middle"
                                      font-size="9" font-weight="600"
                                      fill="#6b7280">
                                    @Model.Score / @Model.MaxScore
                                </text>
                            </svg>
                        </div>
                        <div style="margin-top: 1px;">
                            <span style="font-size: 11px; font-weight: 600; color: #374151; text-transform: uppercase; letter-spacing: 0.5px;">Баллы</span>
                        </div>
                    </div>
                </div>
                
                <div class="col-4">
                    <div class="d-flex flex-column align-items-center">
                        <div class="result-circle mb-0" style="width: 160px; height: 160px; position: relative;">
                            <svg viewBox="0 0 100 100" style="width: 100%; height: 100%;">
                                @{
                                    var gradeCircleColor = Model.Grade switch
                                    {
                                        5 => "#43e97b",
                                        4 => "#4facfe",
                                        3 => "#ff9800",
                                        2 => "#f44336",
                                        _ => "#6c757d"
                                    };
                                }
                                <circle cx="50" cy="50" r="32" fill="none" stroke="#e5e7eb" stroke-width="4" />
                                <circle cx="50" cy="50" r="32" fill="none"
                                        stroke="@gradeCircleColor"
                                        stroke-width="5"
                                        stroke-linecap="round"
                                        stroke-dasharray="201, 201"
                                        transform="rotate(-90 50 50)" />
                                <text x="50" y="55" text-anchor="middle" dominant-baseline="middle"
                                      font-size="43" font-weight="900"
                                      fill="@gradeCircleColor">
                                    @Model.Grade
                                </text>
                            </svg>
                        </div>
                        <div style="margin-top: 1px;">
                            <span style="font-size: 11px; font-weight: 600; color: #374151; text-transform: uppercase; letter-spacing: 0.5px;">Оценка</span>
                        </div>
                    </div>
                </div>
                
                <div class="col-4">
                    <div class="d-flex flex-column align-items-center">
                        <div class="result-circle mb-0" style="width: 160px; height: 160px; position: relative;">
                            <svg viewBox="0 0 100 100" style="width: 100%; height: 100%;">
                                @{
                                    var totalSeconds = Model.Duration.TotalSeconds;
                                    var maxSeconds = 3600;
                                    var timePercentage = totalSeconds > maxSeconds ? 100 : (totalSeconds / maxSeconds) * 100;
                                }
                                <defs>
                                    <linearGradient id="grad3-@Model.TestResult.Id" x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" style="stop-color:#8b5cf6;stop-opacity:1" />
                                        <stop offset="100%" style="stop-color:#a78bfa;stop-opacity:1" />
                                    </linearGradient>
                                </defs>
                                <circle cx="50" cy="50" r="32" fill="none" stroke="#e5e7eb" stroke-width="4" />
                                <circle cx="50" cy="50" r="32" fill="none"
                                        stroke="url(#grad3-@Model.TestResult.Id)"
                                        stroke-width="5"
                                        stroke-linecap="round"
                                        stroke-dasharray="@(timePercentage * 2.01), 201"
                                        transform="rotate(-90 50 50)" />
                                <text x="50" y="55" text-anchor="middle" dominant-baseline="middle"
                                      font-size="16" font-weight="800"
                                      fill="#8b5cf6">
                                    @($"{Model.Duration.Minutes:D2}:{Model.Duration.Seconds:D2}")
                                </text>
                            </svg>
                        </div>
                        <div style="margin-top: 1px;">
                            <span style="font-size: 11px; font-weight: 600; color: #374151; text-transform: uppercase; letter-spacing: 0.5px;">Время</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.ShowCorrectAnswers)
    {
        <div class="card modern-card mb-2">
            <div class="card-header modern-card-header py-1">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <h6 class="mb-0 modern-card-title" style="font-size: 0.85rem;">
                        <i class="fas fa-list-alt nav-link-icon"></i> Детальные результаты
                    </h6>
                    
                    <div class="form-check form-switch mb-0">
                        <input class="form-check-input" type="checkbox" id="showErrorsOnly" checked style="font-size: 0.8rem;">
                        <label class="form-check-label text-dark-modern" for="showErrorsOnly" style="font-size: 0.75rem;">
                            Только ошибки
                        </label>
                    </div>
                </div>
            </div>
            <div class="card-body p-1 p-md-2">
                @for (int i = 0; i < Model.Questions.Count; i++)
                {
                    var question = Model.Questions[i];
                    var answer = Model.Answers.FirstOrDefault(a => a.RegularQuestionId == question.Id);
                    var isAnswered = answer != null;
                    var isCorrect = answer?.IsCorrect ?? false;
                    var questionOptions = Model.Options.Where(o => o.RegularQuestionId == question.Id).OrderBy(o => o.OrderIndex).ToList();

                    var selectedIds = new List<int>();
                    if (answer != null)
                    {
                        if (!string.IsNullOrEmpty(answer.StudentAnswer))
                        {
                            selectedIds = answer.StudentAnswer.Split(',', StringSplitOptions.RemoveEmptyEntries)
                                .Select(id => int.TryParse(id.Trim(), out var parsed) ? parsed : 0)
                                .Where(id => id > 0)
                                .ToList();
                        }
                        else if (answer.SelectedOptionId.HasValue)
                        {
                            selectedIds.Add(answer.SelectedOptionId.Value);
                        }
                    }

                    <div class="question-result mb-1 border rounded @(isAnswered ? (isCorrect ? "border-success" : "border-danger") : "border-secondary")"
                         data-correct="@isCorrect.ToString().ToLower()">
                        <div class="accordion" id="accordion@i">
                            <div class="accordion-item border-0">
                                <h2 class="accordion-header" id="heading@i">
                                    <button class="accordion-button @(i > 0 ? "collapsed" : "") p-1" type="button"
                                            data-bs-toggle="collapse" data-bs-target="#collapse@i" style="font-size: 0.8rem;">
                                        <div class="w-100 d-flex justify-content-between align-items-center gap-1">
                                            <div class="d-flex align-items-center gap-1 flex-grow-1 min-w-0">
                                                <span class="badge @(isAnswered ? (isCorrect ? "badge-modern-success" : "badge-modern-danger") : "badge-modern-secondary")" style="font-size: 0.7rem;">@(i + 1)</span>
                                                <span class="badge @(question.Type == QuestionType.SingleChoice ? "badge-modern-primary" : question.Type == QuestionType.MultipleChoice ? "badge-modern-success" : "badge-modern-warning")" style="font-size: 0.65rem;">
                                                    @if (question.Type == QuestionType.SingleChoice)
                                                    {
                                                        <i class="fas fa-dot-circle"></i> <text>Одиночный</text>
                                                    }
                                                    else if (question.Type == QuestionType.MultipleChoice)
                                                    {
                                                        <i class="fas fa-check-square"></i> <text>Множественный</text>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-toggle-on"></i> <text>Верно/Неверно</text>
                                                    }
                                                </span>
                                                <span class="small text-truncate" style="font-size: 0.75rem;">@question.Text</span>
                                            </div>
                                            <div class="flex-shrink-0">
                                                @if (isAnswered)
                                                {
                                                    @if (isCorrect)
                                                    {
                                                        <span class="badge badge-modern-success" style="font-size: 0.65rem;">
                                                            <i class="fas fa-check"></i> +@(answer?.Points ?? 0)
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-modern-danger" style="font-size: 0.65rem;">
                                                            <i class="fas fa-times"></i> 0
                                                        </span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="badge badge-modern-secondary" style="font-size: 0.65rem;">—</span>
                                                }
                                            </div>
                                        </div>
                                    </button>
                                </h2>
                                <div id="collapse@i" class="accordion-collapse collapse @(i == 0 ? "show" : "")"
                                     data-bs-parent="#accordion@i">
                                    <div class="accordion-body p-1">
                                        @if (!string.IsNullOrEmpty(question.Hint))
                                        {
                                            <div class="alert alert-info alert-sm py-1 mb-1" style="font-size: 0.75rem;">
                                                <small>
                                                    <i class="fas fa-lightbulb"></i>
                                                    <strong>Подсказка:</strong> @question.Hint
                                                </small>
                                            </div>
                                        }

                                        <div class="mb-1">
                                            @foreach (var option in questionOptions)
                                            {
                                                var isSelected = selectedIds.Contains(option.Id);
                                                var cardClass = "";
                                                var borderClass = "";

                                                if (option.IsCorrect)
                                                {
                                                    cardClass = "bg-success bg-opacity-10";
                                                    borderClass = "border-success";
                                                }
                                                else if (isSelected)
                                                {
                                                    cardClass = "bg-danger bg-opacity-10";
                                                    borderClass = "border-danger";
                                                }

                                                <div class="card mb-1 @cardClass @borderClass border">
                                                    <div class="card-body p-1">
                                                        <div class="d-flex justify-content-between align-items-start gap-1">
                                                            <div class="flex-grow-1">
                                                                <small style="font-size: 0.75rem;">
                                                                    @if (question.Type == QuestionType.MultipleChoice)
                                                                    {
                                                                        @if (isSelected)
                                                                        {
                                                                            <i class="fas fa-check-square text-primary me-1"></i>
                                                                        }
                                                                        else
                                                                        {
                                                                            <i class="far fa-square text-muted-modern me-1"></i>
                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        @if (isSelected)
                                                                        {
                                                                            <i class="fas fa-dot-circle text-primary me-1"></i>
                                                                        }
                                                                        else
                                                                        {
                                                                            <i class="far fa-circle text-muted-modern me-1"></i>
                                                                        }
                                                                    }
                                                                    @option.Text
                                                                </small>
                                                            </div>
                                                            <div class="flex-shrink-0">
                                                                @if (option.IsCorrect)
                                                                {
                                                                    <span class="badge badge-modern-success" style="font-size: 0.65rem;">
                                                                        <i class="fas fa-check"></i>
                                                                    </span>
                                                                }
                                                                @if (isSelected && !option.IsCorrect)
                                                                {
                                                                    <span class="badge badge-modern-danger" style="font-size: 0.65rem;">
                                                                        <i class="fas fa-times"></i>
                                                                    </span>
                                                                }
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            }
                                        </div>

                                        @if (!string.IsNullOrEmpty(question.Explanation))
                                        {
                                            <div class="alert alert-success alert-sm py-1 mb-0" style="font-size: 0.75rem;">
                                                <small>
                                                    <i class="fas fa-graduation-cap"></i>
                                                    <strong>Объяснение:</strong> @question.Explanation
                                                </small>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="card modern-card mb-2">
            <div class="card-body p-2 text-center">
                <p class="text-muted-modern mb-0" style="font-size: 0.85rem;">
                    <i class="fas fa-info-circle nav-link-icon"></i>
                    Детальные результаты недоступны. Учитель отключил показ правильных ответов.
                </p>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Применяем фильтр при загрузке страницы
            function applyFilter() {
                if ($('#showErrorsOnly').is(':checked')) {
                    $('.question-result[data-correct="true"]').hide();
                } else {
                    $('.question-result').show();
                }
            }
            
            // Применяем фильтр сразу при загрузке
            applyFilter();
            
            // Обработчик изменения переключателя
            $('#showErrorsOnly').on('change', function() {
                applyFilter();
            });
        });
    </script>
}

