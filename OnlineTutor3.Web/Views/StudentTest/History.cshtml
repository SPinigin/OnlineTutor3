@model OnlineTutor3.Web.ViewModels.StudentTestHistoryViewModel
@{
    ViewData["Title"] = "История прохождения тестов";
}

<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
    <h4 class="mb-0 d-flex align-items-center gap-2">
        <i class="fas fa-history text-primary"></i>
        <span>История прохождения</span>
    </h4>
    <div>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left"></i>
            <span class="d-none d-md-inline">К доступным тестам</span>
            <span class="d-md-none">Назад</span>
        </a>
    </div>
</div>

<!-- Поиск по тестам -->
<div class="card mb-4 shadow-sm border-0">
    <div class="card-body">
        <form asp-action="History" method="get" class="d-flex gap-2">
            <div class="flex-grow-1">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" 
                           class="form-control" 
                           name="search" 
                           placeholder="Поиск по названию теста..." 
                           value="@Model.SearchQuery" />
                    @if (!string.IsNullOrWhiteSpace(Model.SearchQuery))
                    {
                        <a asp-action="History" class="btn btn-outline-secondary" type="button" title="Очистить поиск">
                            <i class="fas fa-times"></i>
                        </a>
                    }
                </div>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search"></i>
                <span class="d-none d-md-inline ms-1">Найти</span>
            </button>
        </form>
    </div>
</div>

@if (Model.TotalTestsCompleted == 0)
{
    <div class="text-center py-5">
        <i class="fas fa-clipboard-list text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">История пуста</h4>
        <p class="text-muted">Вы еще не проходили тесты</p>
        <a asp-action="Index" class="btn btn-primary">
            <i class="fas fa-play"></i> Пройти первый тест
        </a>
    </div>
}
else
{
    <!-- Статистика -->
    <div class="row mb-4 g-3">
        <div class="col-6 col-md-3">
            <div class="card text-center h-100 shadow-sm border-0">
                <div class="card-body">
                    <h4 class="text-primary mb-1">@Model.TotalTestsCompleted</h4>
                    <small class="text-muted">Тестов пройдено</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card text-center h-100 shadow-sm border-0">
                <div class="card-body">
                    <h4 class="text-success mb-1">@Model.AveragePercentage.ToString("F1")%</h4>
                    <small class="text-muted">Средний результат</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card text-center h-100 shadow-sm border-0">
                <div class="card-body">
                    <h4 class="text-info mb-1">@Model.BestPercentage.ToString("F1")%</h4>
                    <small class="text-muted">Лучший результат</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card text-center h-100 shadow-sm border-0">
                <div class="card-body">
                    <h4 class="text-warning mb-1">@Model.TotalPoints</h4>
                    <small class="text-muted">Всего баллов</small>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.AssignmentsWithResults.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-clipboard-list text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3 text-muted">
                @if (!string.IsNullOrWhiteSpace(Model.SearchQuery))
                {
                    <text>Результаты не найдены</text>
                }
                else
                {
                    <text>Нет результатов</text>
                }
            </h4>
            <p class="text-muted">
                @if (!string.IsNullOrWhiteSpace(Model.SearchQuery))
                {
                    <text>По запросу "@Model.SearchQuery" ничего не найдено</text>
                }
                else
                {
                    <text>Результаты не найдены</text>
                }
            </p>
            @if (!string.IsNullOrWhiteSpace(Model.SearchQuery))
            {
                <a asp-action="History" class="btn btn-outline-primary">
                    <i class="fas fa-times"></i> Очистить поиск
                </a>
            }
        </div>
    }
    else
    {
        <div class="row mb-2 align-items-center">
            <div class="col-12">
                <small class="text-muted">
                    <i class="fas fa-tasks"></i> Всего заданий: @Model.AssignmentsWithResults.Count
                </small>
            </div>
        </div>

        <div class="accordion" id="assignmentsAccordion">
            @foreach (var kvp in Model.AssignmentsWithResults.OrderByDescending(a => a.Value.Assignment.CreatedAt))
            {
                var assignmentInfo = kvp.Value;
                var assignment = assignmentInfo.Assignment;
                var totalResults = assignmentInfo.TotalResultsCount;
                var collapseId = $"collapseAssignment{assignment.Id}";
                var headingId = $"headingAssignment{assignment.Id}";
                
                var subjectName = Model.SubjectsDict.ContainsKey(assignment.SubjectId) 
                    ? Model.SubjectsDict[assignment.SubjectId] 
                    : $"Предмет #{assignment.SubjectId}";

                <div class="accordion-item mb-1 assignment-item" data-assignment-id="@assignment.Id" data-subject-id="@assignment.SubjectId">
                    <h2 class="accordion-header" id="@headingId">
                        <button class="accordion-button collapsed py-2" 
                                type="button" 
                                data-bs-toggle="collapse" 
                                data-bs-target="#@collapseId" 
                                aria-expanded="false" 
                                aria-controls="@collapseId">
                            <div class="d-flex justify-content-between align-items-center w-100 me-2">
                                <div class="d-flex align-items-center flex-grow-1 flex-wrap gap-1">
                                    <div class="me-2">
                                        <strong class="small">@assignment.Title</strong>
                                    </div>
                                    <span class="badge bg-info badge-sm">@subjectName</span>
                                    <span class="badge bg-primary badge-sm">
                                        <i class="fas fa-clipboard-list"></i> @totalResults
                                    </span>
                                    @if (assignment.DueDate.HasValue)
                                    {
                                        var isOverdue = assignment.DueDate.Value < DateTime.Now;
                                        <span class="badge bg-@(isOverdue ? "danger" : "warning") badge-sm">
                                            <i class="fas fa-calendar"></i> До: @assignment.DueDate.Value.ToString("dd.MM.yyyy")
                                        </span>
                                    }
                                </div>
                            </div>
                        </button>
                    </h2>
                    <div id="@collapseId" 
                         class="accordion-collapse collapse" 
                         aria-labelledby="@headingId" 
                         data-bs-parent="#assignmentsAccordion">
                        <div class="accordion-body p-2">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <small class="text-muted">
                                        <i class="fas fa-book"></i> @subjectName
                                        @if (assignment.DueDate.HasValue)
                                        {
                                            <span class="ms-2">
                                                <i class="fas fa-calendar"></i> До: @assignment.DueDate.Value.ToString("dd.MM.yyyy HH:mm")
                                            </span>
                                        }
                                    </small>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-clipboard-list"></i> Результаты (@totalResults)
                                </small>
                            </div>

                            @if (totalResults == 0)
                            {
                                <div class="text-center py-3 bg-light rounded">
                                    <small class="text-muted">В этом задании нет результатов</small>
                                </div>
                            }
                            else
                            {
                                @await Html.PartialAsync("_HistoryTable", assignmentInfo)
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}
