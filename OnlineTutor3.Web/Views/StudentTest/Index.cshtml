@model OnlineTutor3.Web.ViewModels.StudentTestIndexViewModel
@{
    ViewData["Title"] = "Доступные тесты";
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2 page-header">
    <h4 class="mb-0 d-flex align-items-center gap-2 page-header-title">
        <i class="fas fa-tasks gradient-icon-blue"></i>
        <span>Доступные тесты</span>
    </h4>
    <div>
        <a asp-action="History" class="btn btn-modern-outline-info">
            <i class="fas fa-history"></i> 
            <span class="d-none d-md-inline">История прохождения</span>
            <span class="d-md-none">История</span>
        </a>
    </div>
</div>

@if (Model.Class != null)
{
    <div class="mb-3">
        <small class="text-muted-modern">
            <i class="fas fa-users nav-link-icon"></i> Класс: <strong class="text-dark-modern">@Model.Class.Name</strong>
        </small>
    </div>
}

@if (!Model.AssignmentsWithTests.Any())
{
    <div class="empty-state-large">
        <div class="empty-state-large-icon">
            <i class="fas fa-tasks"></i>
        </div>
        <h4 class="empty-state-large-title">Нет доступных тестов</h4>
        <p class="empty-state-large-text">В данный момент нет тестов, доступных для прохождения</p>
    </div>
}
else
{
    <div class="card shadow-sm border-0 mb-3 search-filter-card">
        <div class="card-body py-2 px-3">
            <div class="row align-items-center">
                <div class="col-12 col-md-4 mb-2 mb-md-0">
                    <h6 class="mb-0 text-dark-modern">
                        <i class="fas fa-tasks text-muted-modern me-1"></i>
                        <span>Всего заданий: @Model.AssignmentsWithTests.Count</span>
                    </h6>
                </div>
                <div class="col-12 col-md-4 mb-2 mb-md-0">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" 
                               id="searchInput" 
                               class="form-control form-control-sm border-start-0 form-control-modern" 
                               placeholder="Поиск по названию..."
                               value="@Model.SearchQuery"
                               autocomplete="off">
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-filter text-muted"></i>
                        </span>
                        <select id="subjectFilter" class="form-select form-select-sm border-start-0 form-control-modern">
                            <option value="">Все предметы</option>
                            @foreach (var subject in Model.SubjectsDict)
                            {
                                <option value="@subject.Key">@subject.Value</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="accordion accordion-modern" id="assignmentsAccordion">
        @foreach (var kvp in Model.AssignmentsWithTests.OrderBy(a => a.Value.Assignment.Title))
        {
            var assignmentInfo = kvp.Value;
            var assignment = assignmentInfo.Assignment;
            var totalTests = assignmentInfo.TotalTestsCount;
            var collapseId = $"collapseAssignment{assignment.Id}";
            var headingId = $"headingAssignment{assignment.Id}";
            
            var subjectName = Model.SubjectsDict.ContainsKey(assignment.SubjectId) 
                ? Model.SubjectsDict[assignment.SubjectId] 
                : $"Предмет #{assignment.SubjectId}";

            <div class="accordion-item mb-1 assignment-item" data-assignment-id="@assignment.Id" data-subject-id="@assignment.SubjectId">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button collapsed py-2" 
                            type="button" 
                            data-bs-toggle="collapse" 
                            data-bs-target="#@collapseId" 
                            aria-expanded="false" 
                            aria-controls="@collapseId">
                        <div class="d-flex justify-content-between align-items-center w-100 me-2">
                            <div class="d-flex align-items-center flex-grow-1 flex-wrap gap-1">
                                <div class="me-2">
                                    <strong class="small">@assignment.Title</strong>
                                </div>
                                <span class="badge badge-modern-info badge-sm">@subjectName</span>
                                <span class="badge badge-modern-primary badge-sm">
                                    <i class="fas fa-clipboard-list"></i> @totalTests
                                </span>
                                @if (assignment.DueDate.HasValue)
                                {
                                    var isOverdue = assignment.DueDate.Value < DateTime.Now;
                                    <span class="badge @(isOverdue ? "badge-modern-danger" : "badge-modern-warning") badge-sm">
                                        <i class="fas fa-calendar"></i> До: @assignment.DueDate.Value.ToString("dd.MM.yyyy")
                                    </span>
                                }
                            </div>
                        </div>
                    </button>
                </h2>
                <div id="@collapseId" 
                     class="accordion-collapse collapse" 
                     aria-labelledby="@headingId" 
                     data-bs-parent="#assignmentsAccordion">
                    <div class="accordion-body p-2">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <small class="text-muted-modern">
                                    <i class="fas fa-book nav-link-icon"></i> @subjectName
                                    @if (assignment.DueDate.HasValue)
                                    {
                                        <span class="ms-2">
                                            <i class="fas fa-calendar nav-link-icon"></i> До: @assignment.DueDate.Value.ToString("dd.MM.yyyy HH:mm")
                                        </span>
                                    }
                                </small>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-muted-modern">
                                <i class="fas fa-clipboard-list nav-link-icon"></i> Тесты (@totalTests)
                            </small>
                        </div>

                        @if (totalTests == 0)
                        {
                            <div class="empty-state-small">
                                <small class="empty-state-text">В этом задании пока нет тестов</small>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table modern-table table-sm mb-0">
                                    <thead>
                                        <tr>
                                            <th style="width: 5%;">Тип</th>
                                            <th style="width: 30%;">Название</th>
                                            <th style="width: 8%;" class="text-center">Вопросов</th>
                                            <th style="width: 8%;" class="text-center">Время</th>
                                            <th style="width: 10%;" class="text-center d-none d-md-table-cell">Попытки</th>
                                            <th style="width: 10%;" class="text-center d-none d-md-table-cell">Лучший результат</th>
                                            <th style="width: 29%;" class="text-center">Действия</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (assignmentInfo.SpellingTests.Any())
                                        {
                                            @foreach (var test in assignmentInfo.SpellingTests)
                                            {
                                                <tr class="test-row" data-test-title="@test.Title.ToLower()">
                                                    <td>
                                                        <span class="badge badge-modern-success">
                                                            <i class="fas fa-spell-check"></i>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <small class="text-dark-modern"><strong>@test.Title</strong></small>
                                                        @if (!string.IsNullOrEmpty(test.Description))
                                                        {
                                                            <br>
                                                            <small class="text-muted-modern">@(test.Description.Length > 50 ? test.Description.Substring(0, 50) + "..." : test.Description)</small>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <small class="text-muted-modern">@test.QuestionsCount</small>
                                                    </td>
                                                    <td class="text-center">
                                                        <small class="text-muted-modern">@test.TimeLimit</small>
                                                    </td>
                                                    <td class="text-center d-none d-md-table-cell">
                                                        <span class="badge @(test.AttemptsUsed >= test.MaxAttempts ? "badge-modern-danger" : "badge-modern-warning") badge-sm">
                                                            @test.AttemptsUsed/@test.MaxAttempts
                                                        </span>
                                                    </td>
                                                    <td class="text-center d-none d-md-table-cell">
                                                        @if (test.BestPercentage.HasValue)
                                                        {
                                                            <span class="badge @(test.BestPercentage >= 80 ? "badge-modern-success" : test.BestPercentage >= 60 ? "badge-modern-warning" : "badge-modern-danger") badge-sm">
                                                                @test.BestPercentage.Value.ToString("F1")%
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <small class="text-muted-modern">—</small>
                                                        }
                                                    </td>
                                                    <td class="text-center" onclick="event.stopPropagation();">
                                                        <div class="d-flex gap-1 justify-content-center">
                                                            @if (test.Status == TestStatus.Ongoing && test.OngoingTestResultId.HasValue)
                                                            {
                                                                <a asp-action="TakeSpelling" asp-route-id="@test.OngoingTestResultId.Value" 
                                                                   class="btn btn-sm btn-modern-outline-warning" title="Продолжить">
                                                                    <i class="fas fa-play"></i>
                                                                    <span class="d-none d-lg-inline ms-1">Продолжить</span>
                                                                </a>
                                                            }
                                                            else if (test.Status == TestStatus.CanStart)
                                                            {
                                                                <button type="button" class="btn btn-sm btn-modern-success"
                                                                        onclick="confirmStartTest(@test.Id, '@test.Title.Replace("'", "\\'")', @test.TimeLimit, 'spelling')" title="Начать">
                                                                    <i class="fas fa-play"></i>
                                                                    <span class="d-none d-lg-inline ms-1">Начать</span>
                                                                </button>
                                                            }
                                                            else if (test.Status == TestStatus.Exhausted)
                                                            {
                                                                <button type="button" class="btn btn-sm btn-modern-outline-secondary" disabled title="Исчерпано">
                                                                    <i class="fas fa-ban"></i>
                                                                </button>
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                        @if (assignmentInfo.PunctuationTests.Any())
                                        {
                                            @foreach (var test in assignmentInfo.PunctuationTests)
                                            {
                                                <tr class="test-row" data-test-title="@test.Title.ToLower()">
                                                    <td>
                                                        <span class="badge badge-modern-info">
                                                            <i class="fas fa-quote-right"></i>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <small class="text-dark-modern"><strong>@test.Title</strong></small>
                                                        @if (!string.IsNullOrEmpty(test.Description))
                                                        {
                                                            <br>
                                                            <small class="text-muted-modern">@(test.Description.Length > 50 ? test.Description.Substring(0, 50) + "..." : test.Description)</small>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <small class="text-muted-modern">@test.QuestionsCount</small>
                                                    </td>
                                                    <td class="text-center">
                                                        <small class="text-muted-modern">@test.TimeLimit</small>
                                                    </td>
                                                    <td class="text-center d-none d-md-table-cell">
                                                        <span class="badge @(test.AttemptsUsed >= test.MaxAttempts ? "badge-modern-danger" : "badge-modern-warning") badge-sm">
                                                            @test.AttemptsUsed/@test.MaxAttempts
                                                        </span>
                                                    </td>
                                                    <td class="text-center d-none d-md-table-cell">
                                                        @if (test.BestPercentage.HasValue)
                                                        {
                                                            <span class="badge @(test.BestPercentage >= 80 ? "badge-modern-success" : test.BestPercentage >= 60 ? "badge-modern-warning" : "badge-modern-danger") badge-sm">
                                                                @test.BestPercentage.Value.ToString("F1")%
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <small class="text-muted-modern">—</small>
                                                        }
                                                    </td>
                                                    <td class="text-center" onclick="event.stopPropagation();">
                                                        <div class="d-flex gap-1 justify-content-center">
                                                            @if (test.Status == TestStatus.Ongoing && test.OngoingTestResultId.HasValue)
                                                            {
                                                                <a asp-action="TakePunctuation" asp-route-id="@test.OngoingTestResultId.Value" 
                                                                   class="btn btn-sm btn-modern-outline-warning" title="Продолжить">
                                                                    <i class="fas fa-play"></i>
                                                                    <span class="d-none d-lg-inline ms-1">Продолжить</span>
                                                                </a>
                                                            }
                                                            else if (test.Status == TestStatus.CanStart)
                                                            {
                                                                <button type="button" class="btn btn-sm btn-modern-success"
                                                                        onclick="confirmStartTest(@test.Id, '@test.Title.Replace("'", "\\'")', @test.TimeLimit, 'punctuation')" title="Начать">
                                                                    <i class="fas fa-play"></i>
                                                                    <span class="d-none d-lg-inline ms-1">Начать</span>
                                                                </button>
                                                            }
                                                            else if (test.Status == TestStatus.Exhausted)
                                                            {
                                                                <button type="button" class="btn btn-sm btn-modern-outline-secondary" disabled title="Исчерпано">
                                                                    <i class="fas fa-ban"></i>
                                                                </button>
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                        @if (assignmentInfo.OrthoeopyTests.Any())
                                        {
                                            @foreach (var test in assignmentInfo.OrthoeopyTests)
                                            {
                                                <tr class="test-row" data-test-title="@test.Title.ToLower()">
                                                    <td>
                                                        <span class="badge badge-modern-warning">
                                                            <i class="fas fa-volume-up"></i>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <small class="text-dark-modern"><strong>@test.Title</strong></small>
                                                        @if (!string.IsNullOrEmpty(test.Description))
                                                        {
                                                            <br>
                                                            <small class="text-muted-modern">@(test.Description.Length > 50 ? test.Description.Substring(0, 50) + "..." : test.Description)</small>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <small class="text-muted-modern">@test.QuestionsCount</small>
                                                    </td>
                                                    <td class="text-center">
                                                        <small class="text-muted-modern">@test.TimeLimit</small>
                                                    </td>
                                                    <td class="text-center d-none d-md-table-cell">
                                                        <span class="badge @(test.AttemptsUsed >= test.MaxAttempts ? "badge-modern-danger" : "badge-modern-warning") badge-sm">
                                                            @test.AttemptsUsed/@test.MaxAttempts
                                                        </span>
                                                    </td>
                                                    <td class="text-center d-none d-md-table-cell">
                                                        @if (test.BestPercentage.HasValue)
                                                        {
                                                            <span class="badge @(test.BestPercentage >= 80 ? "badge-modern-success" : test.BestPercentage >= 60 ? "badge-modern-warning" : "badge-modern-danger") badge-sm">
                                                                @test.BestPercentage.Value.ToString("F1")%
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <small class="text-muted-modern">—</small>
                                                        }
                                                    </td>
                                                    <td class="text-center" onclick="event.stopPropagation();">
                                                        <div class="d-flex gap-1 justify-content-center">
                                                            @if (test.Status == TestStatus.Ongoing && test.OngoingTestResultId.HasValue)
                                                            {
                                                                <a asp-action="TakeOrthoeopy" asp-route-id="@test.OngoingTestResultId.Value" 
                                                                   class="btn btn-sm btn-modern-outline-warning" title="Продолжить">
                                                                    <i class="fas fa-play"></i>
                                                                    <span class="d-none d-lg-inline ms-1">Продолжить</span>
                                                                </a>
                                                            }
                                                            else if (test.Status == TestStatus.CanStart)
                                                            {
                                                                <button type="button" class="btn btn-sm btn-modern-success"
                                                                        onclick="confirmStartTest(@test.Id, '@test.Title.Replace("'", "\\'")', @test.TimeLimit, 'orthoepy')" title="Начать">
                                                                    <i class="fas fa-play"></i>
                                                                    <span class="d-none d-lg-inline ms-1">Начать</span>
                                                                </button>
                                                            }
                                                            else if (test.Status == TestStatus.Exhausted)
                                                            {
                                                                <button type="button" class="btn btn-sm btn-modern-outline-secondary" disabled title="Исчерпано">
                                                                    <i class="fas fa-ban"></i>
                                                                </button>
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                        @if (assignmentInfo.RegularTests.Any())
                                        {
                                            @foreach (var test in assignmentInfo.RegularTests)
                                            {
                                                <tr class="test-row" data-test-title="@test.Title.ToLower()">
                                                    <td>
                                                        <span class="badge badge-modern-primary">
                                                            <i class="fas fa-clipboard-check"></i>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <small class="text-dark-modern"><strong>@test.Title</strong></small>
                                                        @if (!string.IsNullOrEmpty(test.Description))
                                                        {
                                                            <br>
                                                            <small class="text-muted-modern">@(test.Description.Length > 50 ? test.Description.Substring(0, 50) + "..." : test.Description)</small>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <small class="text-muted-modern">@test.QuestionsCount</small>
                                                    </td>
                                                    <td class="text-center">
                                                        <small class="text-muted-modern">@test.TimeLimit</small>
                                                    </td>
                                                    <td class="text-center d-none d-md-table-cell">
                                                        <span class="badge @(test.AttemptsUsed >= test.MaxAttempts ? "badge-modern-danger" : "badge-modern-warning") badge-sm">
                                                            @test.AttemptsUsed/@test.MaxAttempts
                                                        </span>
                                                    </td>
                                                    <td class="text-center d-none d-md-table-cell">
                                                        @if (test.BestPercentage.HasValue)
                                                        {
                                                            <span class="badge @(test.BestPercentage >= 80 ? "badge-modern-success" : test.BestPercentage >= 60 ? "badge-modern-warning" : "badge-modern-danger") badge-sm">
                                                                @test.BestPercentage.Value.ToString("F1")%
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <small class="text-muted-modern">—</small>
                                                        }
                                                    </td>
                                                    <td class="text-center" onclick="event.stopPropagation();">
                                                        <div class="d-flex gap-1 justify-content-center">
                                                            @if (test.Status == TestStatus.Ongoing && test.OngoingTestResultId.HasValue)
                                                            {
                                                                <a asp-action="TakeRegular" asp-route-id="@test.OngoingTestResultId.Value" 
                                                                   class="btn btn-sm btn-modern-outline-warning" title="Продолжить">
                                                                    <i class="fas fa-play"></i>
                                                                    <span class="d-none d-lg-inline ms-1">Продолжить</span>
                                                                </a>
                                                            }
                                                            else if (test.Status == TestStatus.CanStart)
                                                            {
                                                                <button type="button" class="btn btn-sm btn-modern-success"
                                                                        onclick="confirmStartTest(@test.Id, '@test.Title.Replace("'", "\\'")', @test.TimeLimit, 'regular')" title="Начать">
                                                                    <i class="fas fa-play"></i>
                                                                    <span class="d-none d-lg-inline ms-1">Начать</span>
                                                                </button>
                                                            }
                                                            else if (test.Status == TestStatus.Exhausted)
                                                            {
                                                                <button type="button" class="btn btn-sm btn-modern-outline-secondary" disabled title="Исчерпано">
                                                                    <i class="fas fa-ban"></i>
                                                                </button>
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

<div class="modal fade" id="confirmStartModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header modern-card-header">
                <h5 class="modal-title modern-card-title">
                    <i class="fas fa-play nav-link-icon-green"></i> Начать тест
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert modern-alert-info">
                    <i class="fas fa-info-circle nav-link-icon-blue"></i>
                    <strong class="text-dark-modern">Внимание!</strong> <span class="text-dark-modern">После начала теста у вас будет ограниченное время на выполнение.</span>
                </div>
                <p class="text-dark-modern">Тест: <strong id="testTitle"></strong></p>
                <p class="text-dark-modern">Время на выполнение: <strong id="testTime"></strong> минут</p>
                
                <div id="punctuationInfo" class="alert modern-alert-info" style="display: none; background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 152, 0, 0.1) 100%); border-left: 4px solid #ff9800;">
                    <h6 class="text-dark-modern"><i class="fas fa-exclamation-triangle nav-link-icon-yellow"></i> Особенности теста по пунктуации:</h6>
                    <ul class="mb-0 text-dark-modern">
                        <li>В предложениях вместо запятых стоят номера позиций</li>
                        <li>Укажите номера без пробелов и знаков препинания, где должны быть запятые</li>
                        <li>Если запятые не нужны, оставьте поле пустым</li>
                        <li>Пример ответа: 135</li>
                    </ul>
                </div>
                
                <div id="orthoeopyInfo" class="alert modern-alert-info" style="display: none; background: linear-gradient(135deg, rgba(67, 233, 123, 0.1) 0%, rgba(56, 249, 215, 0.1) 100%); border-left: 4px solid #43e97b;">
                    <h6 class="text-dark-modern"><i class="fas fa-info-circle nav-link-icon-green"></i> Особенности теста по орфоэпии:</h6>
                    <ul class="mb-0 text-dark-modern">
                        <li>В каждом вопросе нужно выбрать правильное ударение в слове</li>
                        <li>Будут предложены варианты с ударением на разных слогах</li>
                        <li>Выберите один правильный вариант</li>
                        <li>Обратите внимание на символ ударения: ́</li>
                    </ul>
                </div>
                
                <p class="text-dark-modern mb-0">
                    <i class="fas fa-exclamation-triangle nav-link-icon-yellow"></i>
                    Убедитесь, что у вас есть стабильное интернет-соединение и достаточно времени.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-modern-outline-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Отмена
                </button>
                <a id="startTestButton" href="#" class="btn btn-modern-success">
                    <i class="fas fa-play"></i> Начать тест
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Предотвращаем перенос текста в кнопках действий */
        .test-row .btn {
            white-space: nowrap;
        }
        
        /* Дополнительная защита от переноса для контейнера с кнопками */
        .test-row .d-flex.gap-1 {
            flex-wrap: nowrap;
        }
        
        /* Адаптивное отображение текста на кнопках */
        @@media (max-width: 991.98px) {
            .test-row .btn span.d-lg-inline {
                display: none !important;
            }
        }
    </style>
}

@section Scripts {
    <script>
        function confirmStartTest(testId, testTitle, timeLimit, testType) {
            document.getElementById('testTitle').textContent = testTitle;
            document.getElementById('testTime').textContent = timeLimit;

            const punctuationInfo = document.getElementById('punctuationInfo');
            const orthoeopyInfo = document.getElementById('orthoeopyInfo');

            // Скрываем все информационные блоки
            if (punctuationInfo) punctuationInfo.style.display = 'none';
            if (orthoeopyInfo) orthoeopyInfo.style.display = 'none';

            // Формируем URL для начала теста
            let actionUrl = '';
            if (testType === 'spelling') {
                actionUrl = '@Url.Action("StartSpelling")/' + testId;
            } else if (testType === 'punctuation') {
                if (punctuationInfo) punctuationInfo.style.display = 'block';
                actionUrl = '@Url.Action("StartPunctuation")/' + testId;
            } else if (testType === 'orthoepy' || testType === 'orthoeopy') {
                if (orthoeopyInfo) orthoeopyInfo.style.display = 'block';
                actionUrl = '@Url.Action("StartOrthoeopy")/' + testId;
            } else if (testType === 'regular') {
                actionUrl = '@Url.Action("StartRegular")/' + testId;
            }

            document.getElementById('startTestButton').href = actionUrl;

            const modal = new bootstrap.Modal(document.getElementById('confirmStartModal'));
            modal.show();
        }

        // Поиск и фильтрация
        $(document).ready(function() {
            // Поиск
            $('#searchInput').on('keyup', function() {
                var searchText = $(this).val().toLowerCase();
                $('.assignment-item').each(function() {
                    var assignmentText = $(this).text().toLowerCase();
                    var hasMatch = assignmentText.indexOf(searchText) > -1;
                    
                    // Также проверяем тесты внутри
                    if (!hasMatch) {
                        $(this).find('.test-row').each(function() {
                            var testTitle = $(this).data('test-title') || '';
                            if (testTitle.indexOf(searchText) > -1) {
                                hasMatch = true;
                                return false; // break
                            }
                        });
                    }
                    
                    $(this).toggle(hasMatch);
                });
            });

            // Фильтр по предмету
            $('#subjectFilter').on('change', function() {
                var subjectId = $(this).val();
                if (subjectId === '') {
                    $('.assignment-item').show();
                } else {
                    $('.assignment-item').hide();
                    $('.assignment-item[data-subject-id="' + subjectId + '"]').show();
                }
            });
        });
    </script>
}
