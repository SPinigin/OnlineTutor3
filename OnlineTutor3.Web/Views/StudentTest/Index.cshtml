@model OnlineTutor3.Web.ViewModels.StudentTestIndexViewModel
@{
    ViewData["Title"] = "Доступные тесты";
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <h4 class="mb-0 d-flex align-items-center gap-2">
        <i class="fas fa-tasks text-primary"></i>
        <span>Доступные тесты</span>
    </h4>
    <div>
        <a asp-action="History" class="btn btn-outline-info">
            <i class="fas fa-history"></i> 
            <span class="d-none d-md-inline">История прохождения</span>
            <span class="d-md-none">История</span>
        </a>
    </div>
</div>

@if (Model.Class != null)
{
    <div class="mb-3">
        <small class="text-muted">
            <i class="fas fa-users"></i> Класс: <strong>@Model.Class.Name</strong>
        </small>
    </div>
}

@if (!Model.AssignmentsWithTests.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-tasks text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">Нет доступных тестов</h4>
        <p class="text-muted">В данный момент нет тестов, доступных для прохождения</p>
    </div>
}
else
{
    <div class="row mb-2 align-items-center">
        <div class="col-12 col-md-4 mb-2 mb-md-0">
            <small class="text-muted">
                <i class="fas fa-tasks"></i> Всего заданий: @Model.AssignmentsWithTests.Count
            </small>
        </div>
        <div class="col-12 col-md-4 mb-2 mb-md-0">
            <div class="input-group input-group-sm">
                <span class="input-group-text bg-white">
                    <i class="fas fa-search text-muted"></i>
                </span>
                <input type="text" 
                       id="searchInput" 
                       class="form-control form-control-sm" 
                       placeholder="Поиск по названию..."
                       value="@Model.SearchQuery"
                       autocomplete="off">
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="input-group input-group-sm">
                <span class="input-group-text bg-white">
                    <i class="fas fa-filter text-muted"></i>
                </span>
                <select id="subjectFilter" class="form-select form-select-sm">
                    <option value="">Все предметы</option>
                    @foreach (var subject in Model.SubjectsDict)
                    {
                        <option value="@subject.Key">@subject.Value</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="accordion" id="assignmentsAccordion">
        @foreach (var kvp in Model.AssignmentsWithTests.OrderBy(a => a.Value.Assignment.Title))
        {
            var assignmentInfo = kvp.Value;
            var assignment = assignmentInfo.Assignment;
            var totalTests = assignmentInfo.TotalTestsCount;
            var collapseId = $"collapseAssignment{assignment.Id}";
            var headingId = $"headingAssignment{assignment.Id}";
            
            var subjectName = Model.SubjectsDict.ContainsKey(assignment.SubjectId) 
                ? Model.SubjectsDict[assignment.SubjectId] 
                : $"Предмет #{assignment.SubjectId}";

            <div class="accordion-item mb-1 assignment-item" data-assignment-id="@assignment.Id" data-subject-id="@assignment.SubjectId">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button collapsed py-2" 
                            type="button" 
                            data-bs-toggle="collapse" 
                            data-bs-target="#@collapseId" 
                            aria-expanded="false" 
                            aria-controls="@collapseId">
                        <div class="d-flex justify-content-between align-items-center w-100 me-2">
                            <div class="d-flex align-items-center flex-grow-1 flex-wrap gap-1">
                                <div class="me-2">
                                    <strong class="small">@assignment.Title</strong>
                                </div>
                                <span class="badge bg-info badge-sm">@subjectName</span>
                                <span class="badge bg-primary badge-sm">
                                    <i class="fas fa-clipboard-list"></i> @totalTests
                                </span>
                                @if (assignment.DueDate.HasValue)
                                {
                                    var isOverdue = assignment.DueDate.Value < DateTime.Now;
                                    <span class="badge bg-@(isOverdue ? "danger" : "warning") badge-sm">
                                        <i class="fas fa-calendar"></i> До: @assignment.DueDate.Value.ToString("dd.MM.yyyy")
                                    </span>
                                }
                            </div>
                        </div>
                    </button>
                </h2>
                <div id="@collapseId" 
                     class="accordion-collapse collapse" 
                     aria-labelledby="@headingId" 
                     data-bs-parent="#assignmentsAccordion">
                    <div class="accordion-body p-2">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <small class="text-muted">
                                    <i class="fas fa-book"></i> @subjectName
                                    @if (assignment.DueDate.HasValue)
                                    {
                                        <span class="ms-2">
                                            <i class="fas fa-calendar"></i> До: @assignment.DueDate.Value.ToString("dd.MM.yyyy HH:mm")
                                        </span>
                                    }
                                </small>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-muted">
                                <i class="fas fa-clipboard-list"></i> Тесты (@totalTests)
                            </small>
                        </div>

                        @if (totalTests == 0)
                        {
                            <div class="text-center py-3 bg-light rounded">
                                <small class="text-muted">В этом задании пока нет тестов</small>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-sm table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 5%;">Тип</th>
                                            <th style="width: 30%;">Название</th>
                                            <th style="width: 8%;" class="text-center">Вопросов</th>
                                            <th style="width: 8%;" class="text-center">Время</th>
                                            <th style="width: 10%;" class="text-center">Попытки</th>
                                            <th style="width: 10%;" class="text-center">Лучший результат</th>
                                            <th style="width: 29%;" class="text-center">Действия</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @* Тесты по орфографии *@
                                        @if (assignmentInfo.SpellingTests.Any())
                                        {
                                            @foreach (var test in assignmentInfo.SpellingTests)
                                            {
                                                <tr class="test-row" data-test-title="@test.Title.ToLower()">
                                                    <td>
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-spell-check"></i>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <small><strong>@test.Title</strong></small>
                                                        @if (!string.IsNullOrEmpty(test.Description))
                                                        {
                                                            <br>
                                                            <small class="text-muted">@(test.Description.Length > 50 ? test.Description.Substring(0, 50) + "..." : test.Description)</small>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <small>@test.QuestionsCount</small>
                                                    </td>
                                                    <td class="text-center">
                                                        <small>@test.TimeLimit мин</small>
                                                    </td>
                                                    <td class="text-center">
                                                        <span class="badge bg-@(test.AttemptsUsed >= test.MaxAttempts ? "danger" : "warning") badge-sm">
                                                            @test.AttemptsUsed/@test.MaxAttempts
                                                        </span>
                                                    </td>
                                                    <td class="text-center">
                                                        @if (test.BestPercentage.HasValue)
                                                        {
                                                            <span class="badge bg-@(test.BestPercentage >= 80 ? "success" : test.BestPercentage >= 60 ? "warning" : "danger") badge-sm">
                                                                @test.BestPercentage.Value.ToString("F1")%
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <small class="text-muted">—</small>
                                                        }
                                                    </td>
                                                    <td class="text-center" onclick="event.stopPropagation();">
                                                        <div class="d-flex gap-1 justify-content-center">
                                                            @if (test.Status == TestStatus.Ongoing && test.OngoingTestResultId.HasValue)
                                                            {
                                                                <a asp-action="TakeSpelling" asp-route-id="@test.OngoingTestResultId.Value" 
                                                                   class="btn btn-sm btn-warning" title="Продолжить">
                                                                    <i class="fas fa-play"></i>
                                                                </a>
                                                            }
                                                            else if (test.Status == TestStatus.CanStart)
                                                            {
                                                                <button type="button" class="btn btn-sm btn-success"
                                                                        onclick="confirmStartTest(@test.Id, '@test.Title.Replace("'", "\\'")', @test.TimeLimit, 'spelling')" title="Начать">
                                                                    <i class="fas fa-play"></i>
                                                                </button>
                                                            }
                                                            else if (test.Status == TestStatus.Exhausted)
                                                            {
                                                                <button type="button" class="btn btn-sm btn-secondary" disabled title="Исчерпано">
                                                                    <i class="fas fa-ban"></i>
                                                                </button>
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }

                                        @* Тесты по пунктуации *@
                                        @if (assignmentInfo.PunctuationTests.Any())
                                        {
                                            @foreach (var test in assignmentInfo.PunctuationTests)
                                            {
                                                <tr class="test-row" data-test-title="@test.Title.ToLower()">
