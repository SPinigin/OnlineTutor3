@model OnlineTutor3.Web.ViewModels.TakeOrthoeopyTestViewModel
@{
    ViewData["Title"] = $"Прохождение теста: {Model.Test.Title}";
}

<div class="mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-compact">
            <li class="breadcrumb-item">
                <a asp-controller="StudentTest" asp-action="Index">Доступные тесты</a>
            </li>
            <li class="breadcrumb-item active">@Model.Test.Title</li>
        </ol>
    </nav>
</div>

<div class="test-container">
    <div class="card modern-card mb-3">
        <div class="card-header modern-card-header" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); color: white;">
            <div class="d-flex justify-content-between align-items-center gap-2">
                <div class="flex-grow-1 min-w-0">
                    <h6 class="mb-0 d-flex align-items-center">
                        <i class="fas fa-volume-up me-2 flex-shrink-0"></i>
                        <span class="text-truncate">@Model.Test.Title</span>
                    </h6>
                </div>
                <div class="flex-shrink-0">
                    <div id="timer" class="d-flex align-items-center">
                        <i class="fas fa-clock me-2"></i>
                        <span id="timeRemaining" class="h6 mb-0 font-monospace">
                            @($"{Model.TimeRemaining.Minutes:D2}:{Model.TimeRemaining.Seconds:D2}")
                        </span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card-body p-2 p-md-3">
            <div class="progress mb-2" style="height: 8px;">
                <div class="progress-bar" role="progressbar" style="width: 0%; background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);" id="progressBar"></div>
            </div>
            
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                <small class="text-muted-modern mb-0">
                    <i class="fas fa-redo-alt"></i>
                    Попытка @Model.TestResult.AttemptNumber из @Model.Test.MaxAttempts
                </small>
                <small class="text-muted mb-0">
                    <i class="fas fa-question-circle"></i>
                    Вопрос <span id="currentQuestion" class="fw-bold">1</span> из @Model.Questions.Count
                </small>
                <small class="text-muted mb-0" id="answeredInfo">
                    <i class="fas fa-check-circle text-success"></i>
                    Отвечено: <span id="answeredCount">0</span>
                </small>
            </div>
        </div>
    </div>

    <div id="questionsContainer">
        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            var question = Model.Questions[i];
            var existingAnswer = Model.Answers.FirstOrDefault(a => a.OrthoeopyQuestionId == question.Id);

            // Генерируем варианты ударений для слова
            var syllableCount = CountSyllables(question.Word);
            var stressVariants = GenerateStressVariants(question.Word, syllableCount, question.StressPosition);

            <div class="question-card @(i == 0 ? "active" : "d-none")" data-question-index="@i" data-question-id="@question.Id">
                <div class="card modern-card">
                    <div class="card-body p-3 p-md-4">
                        <div class="question-header mb-3">
                            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                                <h6 class="text-success mb-0">
                                    <i class="fas fa-question-circle"></i>
                                    Вопрос @(i + 1)
                                </h6>
                                <span class="badge badge-modern-info badge-sm">
                                    <i class="fas fa-star"></i> Балл: @question.Points
                                </span>
                            </div>
                        </div>

                        <div class="question-content mb-3">
                            <p class="mb-3 text-muted">
                                <i class="fas fa-volume-up"></i>
                                Выберите правильное ударение в слове:
                            </p>
                            
                            <div class="word-container text-center mb-3 p-3 bg-light rounded">
                                <span class="word-display h3 text-success fw-bold">@question.Word</span>
                            </div>
                        </div>

                        <div class="answer-options mb-4">
                            <div class="btn-group-vertical w-100" role="group">
                                @foreach (var variant in stressVariants)
                                {
                                    var isSelected = existingAnswer?.StudentAnswer == variant.Position;

                                    <button type="button"
                                            class="btn btn-outline-success text-start stress-option @(isSelected ? "active" : "")"
                                            data-question-id="@question.Id"
                                            data-stress-position="@variant.Position"
                                            onclick="selectStress(@question.Id, @variant.Position)">
                                        <div class="d-flex align-items-center">
                                            <span class="option-radio me-3">
                                                <i class="@(isSelected ? "fas fa-dot-circle" : "far fa-circle")"></i>
                                            </span>
                                            <span class="h5 mb-0">@variant.WordVariant</span>
                                        </div>
                                    </button>
                                }
                            </div>
                        </div>

                        @if (Model.Test.ShowHints && !string.IsNullOrEmpty(question.Hint))
                        {
                            <div class="mb-3">
                                <button type="button" class="btn btn-modern-outline-info btn-sm" onclick="toggleHint(@i)">
                                    <i class="fas fa-lightbulb"></i>
                                    <span class="hint-button-text">Показать подсказку</span>
                                </button>
                            </div>
                            
                            <div class="hint-container" style="display: none;">
                                <div class="alert modern-alert-info alert-sm py-2 mb-0">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-lightbulb mt-1 me-2"></i>
                                        <div>
                                            <strong class="small">Подсказка:</strong>
                                            <p class="mb-0 small">@question.Hint</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="card modern-card mt-3 navigation-card">
        <div class="card-body p-2 p-md-3">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-2">
                <div class="d-flex gap-2">
                    <button type="button" 
                            class="btn btn-modern-outline-secondary btn-sm" 
                            id="prevButton" 
                            onclick="previousQuestion()" 
                            disabled>
                        <i class="fas fa-arrow-left"></i>
                        <span class="ms-1">Предыдущий</span>
                    </button>
                    <button type="button" 
                            class="btn btn-modern-outline-secondary btn-sm" 
                            id="nextButton" 
                            onclick="nextQuestion()">
                        <span class="me-1">Следующий</span>
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
                
                <button type="button" 
                        class="btn btn-modern-outline-secondary btn-sm" 
                        id="toggleNavigatorBtn"
                        onclick="toggleQuestionNavigator()"
                        title="Показать/скрыть навигацию по вопросам">
                    <i class="fas fa-list" id="toggleNavigatorIcon"></i>
                    <span class="ms-1">Навигация</span>
                </button>
                
                <button type="button" 
                        class="btn btn-modern-primary btn-sm" 
                        id="finishButton" 
                        onclick="showFinishModal()">
                    <i class="fas fa-check"></i>
                    <span class="ms-1">Завершить тест</span>
                </button>
            </div>
            
            <div class="question-navigator-collapse" id="questionNavigatorCollapse" style="display: none;">
                <div class="question-navigator d-flex gap-1 flex-wrap justify-content-center mx-2">
                    @for (int i = 0; i < Model.Questions.Count; i++)
                    {
                        <button type="button" 
                                class="btn btn-sm btn-modern-outline-secondary question-nav-btn" 
                                data-question-index="@i"
                                onclick="goToQuestion(@i)"
                                title="Вопрос @(i + 1)">
                            @(i + 1)
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="finishTestModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header py-2 bg-light">
                <h6 class="modal-title mb-0">
                    <i class="fas fa-check-circle text-success"></i> Завершить тест
                </h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-3">
                <div class="alert modern-alert-info alert-sm py-2 mb-3">
                    <div class="d-flex align-items-start">
                        <i class="fas fa-exclamation-triangle mt-1 me-2"></i>
                        <div>
                            <strong class="small">Внимание!</strong>
                            <p class="mb-0 small">После завершения теста вы не сможете изменить ответы.</p>
                        </div>
                    </div>
                </div>
                
                <div class="mb-2">
                    <p class="mb-2 small">
                        <i class="fas fa-clipboard-check text-primary"></i>
                        Вы ответили на <strong><span id="answeredCountModal">0</span></strong> 
                        из <strong>@Model.Questions.Count</strong> вопросов.
                    </p>
                    @if (Model.Questions.Count > 1)
                    {
                        <p class="mb-2 small text-warning">
                            <i class="fas fa-exclamation-circle"></i>
                            Вы находитесь на вопросе <strong><span id="currentQuestionModal">1</span></strong> из <strong>@Model.Questions.Count</strong>.
                            <span>Неотвеченные вопросы будут засчитаны как неправильные.</span>
                        </p>
                    }
                    <p class="mb-0 small text-muted">Вы уверены, что хотите завершить тест?</p>
                </div>
            </div>
            <div class="modal-footer py-2">
                <button type="button" class="btn btn-modern-outline-secondary btn-sm" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Продолжить
                </button>
                <form asp-action="CompleteOrthoeopyTest" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.TestResult.Id" />
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-modern-success btn-sm">
                        <i class="fas fa-check"></i> Завершить
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/student-test-enhancements.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/student-test-enhancements.js" asp-append-version="true"></script>
    <style>
        .timer-warning {
            color: #ffc107 !important;
        }
        .timer-danger {
            color: #dc3545 !important;
            animation: pulse 1s infinite;
        }
        @@keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        .word-display {
            letter-spacing: 2px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .stress-option {
            padding: 1rem;
            margin-bottom: 0.5rem;
            transition: all 0.3s ease;
            border-width: 2px;
        }
        .stress-option:hover {
            background-color: #d4edda;
            border-color: #28a745;
            transform: translateX(5px);
        }
        .stress-option.active {
            background-color: #28a745;
            color: white;
            border-color: #28a745;
        }
        .stress-option.active:hover {
            background-color: #218838;
        }
        .option-radio {
            font-size: 1.2rem;
        }
    </style>
    
    <script>
        let currentQuestionIndex = 0;
        let totalQuestions = @Model.Questions.Count;
        // Используем сохраненное время или вычисляем на основе серверного времени
        let timeRemaining = @((int)Model.TimeRemaining.TotalSeconds);
        let testResultId = @Model.TestResult.Id;
        let testType = 'orthoeopy';
        let answers = {};
        let timerInterval;
        let timeSaveInterval;
        let testCompleting = false;
        let isTransitioning = false; // Флаг для предотвращения множественных кликов

        $(document).ready(function() {
            initializeTest();
            startTimer();
            loadExistingAnswers();

            // Обработчик завершения теста
            $('form[action*="CompleteOrthoeopyTest"]').on('submit', function() {
                testCompleting = true;
            });
        });

        function initializeTest() {
            updateProgress();
            updateNavigation();
        }

        function loadExistingAnswers() {
            @foreach (var answer in Model.Answers)
            {
                <text>
                answers[@answer.OrthoeopyQuestionId] = @answer.StudentAnswer;
                </text>
            }
            updateProgress();
        }

        /**
         * Сохраняет оставшееся время на сервере
         */
        function saveTimeRemaining() {
            if (testCompleting) return;
            
            $.ajax({
                url: '@Url.Action("UpdateTimeRemaining", "StudentTest")',
                type: 'POST',
                data: {
                    testResultId: testResultId,
                    timeRemainingSeconds: timeRemaining,
                    testType: testType
                },
                success: function() {
                    // Время успешно сохранено
                },
                error: function() {
                    // Ошибка при сохранении времени
                }
            });
        }

        function startTimer() {
            updateTimerDisplay();
            
            // Сохраняем время каждые 30 секунд
            timeSaveInterval = setInterval(function() {
                saveTimeRemaining();
            }, 30000);
            
            timerInterval = setInterval(function() {
                timeRemaining--;
                updateTimerDisplay();

                if (timeRemaining <= 0) {
                    clearInterval(timerInterval);
                    clearInterval(timeSaveInterval);
                    autoSubmitTest();
                }
            }, 1000);
        }

        function updateTimerDisplay() {
            const minutes = Math.floor(timeRemaining / 60);
            const seconds = timeRemaining % 60;
            const display = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;

            $('#timeRemaining').text(display);

            // Изменение цвета таймера
            const timerElement = $('#timer');
            timerElement.removeClass('timer-warning timer-danger');
            
            if (timeRemaining <= 60) {
                timerElement.addClass('timer-danger');
            } else if (timeRemaining <= 300) {
                timerElement.addClass('timer-warning');
            }
        }

        function selectStress(questionId, stressPosition) {
            // Снимаем выделение со всех вариантов текущего вопроса
            $(`.stress-option[data-question-id="${questionId}"]`).removeClass('active');
            $(`.stress-option[data-question-id="${questionId}"] .option-radio i`)
                .removeClass('fa-dot-circle').addClass('far fa-circle');

            // Выделяем выбранный вариант
            const selectedButton = $(`.stress-option[data-question-id="${questionId}"][data-stress-position="${stressPosition}"]`);
            selectedButton.addClass('active');
            selectedButton.find('.option-radio i').removeClass('far fa-circle').addClass('fas fa-dot-circle');

            // Сохраняем ответ
            saveAnswer(questionId, stressPosition);
        }

        function saveAnswer(questionId, stressPosition) {
            $.ajax({
                url: '@Url.Action("SubmitOrthoeopyAnswer")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    TestResultId: @Model.TestResult.Id,
                    QuestionId: questionId,
                    SelectedStressPosition: stressPosition
                }),
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        answers[questionId] = stressPosition;
                        updateProgress();
                    }
                },
                error: function(xhr, status, error) {
                    // Ошибка AJAX
                }
            });
        }

        function nextQuestion() {
            if (isTransitioning) return; // Предотвращаем множественные клики
            if (currentQuestionIndex < totalQuestions - 1) {
                showQuestion(currentQuestionIndex + 1);
            }
        }

        function previousQuestion() {
            if (isTransitioning) return; // Предотвращаем множественные клики
            if (currentQuestionIndex > 0) {
                showQuestion(currentQuestionIndex - 1);
            }
        }

        function goToQuestion(index) {
            if (isTransitioning) return; // Предотвращаем множественные клики
            if (index >= 0 && index < totalQuestions) {
                showQuestion(index);
            }
        }

        function showQuestion(index) {
            // Предотвращаем множественные вызовы
            if (isTransitioning) return;
            if (index === currentQuestionIndex) return; // Уже на этом вопросе
            
            isTransitioning = true; // Устанавливаем флаг
            
            const nextCard = $(`.question-card[data-question-index="${index}"]`);
            
            // Проверяем, что карточка существует
            if (nextCard.length === 0) {
                console.error('Question card not found for index:', index);
                isTransitioning = false;
                return;
            }
            
            $('.question-card').addClass('d-none').removeClass('active');
            nextCard.removeClass('d-none').addClass('active');

            // Принудительная перерисовка для надежности
            nextCard[0].offsetHeight;

            currentQuestionIndex = index;
            updateProgress();
            updateNavigation();
            
            // Сбрасываем флаг после небольшой задержки
            setTimeout(function() {
                isTransitioning = false;
            }, 100);

            if ($(window).width() < 768) {
                $('html, body').animate({
                    scrollTop: nextCard.offset().top - 100
                }, 300);
            }
        }

        function updateProgress() {
            const answeredCount = Object.keys(answers).length;
            const percentage = (answeredCount / totalQuestions) * 100;

            $('#progressBar').css('width', percentage + '%');
            $('#currentQuestion').text(currentQuestionIndex + 1);
            $('#answeredCount, #answeredCountModal').text(answeredCount);

            // Обновляем панель навигации
            $('.question-nav-btn').each(function() {
                const idx = $(this).data('question-index');
                const questionId = $(`.question-card[data-question-index="${idx}"]`).data('question-id');
                const answerValue = answers[questionId];
                const isAnswered = answerValue !== undefined && answerValue !== null;
                
                // Убираем все классы статуса
                $(this).removeClass('btn-modern-success btn-modern-primary active btn-modern-outline-secondary');
                
                // Добавляем класс в зависимости от статуса
                if (idx === currentQuestionIndex) {
                    $(this).addClass('btn-modern-primary active');
                } else if (isAnswered) {
                    $(this).addClass('btn-modern-success');
                } else {
                    $(this).addClass('btn-modern-outline-secondary');
                }
            });
        }

        function updateNavigation() {
            $('#prevButton').prop('disabled', currentQuestionIndex === 0);

            // Кнопка "Следующий" скрывается только на последнем вопросе
            if (currentQuestionIndex === totalQuestions - 1) {
                $('#nextButton').addClass('d-none');
            } else {
                $('#nextButton').removeClass('d-none');
            }
            
            // Кнопка "Завершить тест" всегда видна
            $('#finishButton').removeClass('d-none');
        }

        function toggleHint(questionIndex) {
            const hintContainer = $(`.question-card[data-question-index="${questionIndex}"] .hint-container`);
            const buttonText = $(`.question-card[data-question-index="${questionIndex}"] .hint-button-text`);

            if (hintContainer.is(':visible')) {
                hintContainer.slideUp(300);
                buttonText.text('Показать подсказку');
            } else {
                hintContainer.slideDown(300);
                buttonText.text('Скрыть подсказку');
            }
        }

        function showFinishModal() {
            $('#currentQuestionModal').text(currentQuestionIndex + 1);
            $('#answeredCountModal').text(Object.keys(answers).length);

            const modal = new bootstrap.Modal(document.getElementById('finishTestModal'));
            modal.show();
        }

        function toggleQuestionNavigator() {
            const collapse = $('#questionNavigatorCollapse');
            const icon = $('#toggleNavigatorIcon');
            
            if (collapse.is(':visible')) {
                collapse.slideUp(300);
                icon.removeClass('fa-chevron-up').addClass('fa-list');
            } else {
                collapse.slideDown(300);
                icon.removeClass('fa-list').addClass('fa-chevron-up');
            }
        }

        function autoSubmitTest() {
            if (testCompleting) return;
            
            if (timeRemaining > 0) {
                // Если время еще есть, не завершаем
                return;
            }
            
            alert('Время истекло! Тест будет автоматически завершен.');
            testCompleting = true;
            clearInterval(timerInterval);
            clearInterval(timeSaveInterval);
            $('form[action*="CompleteOrthoeopyTest"]').submit();
        }

        // Предотвращение случайного закрытия страницы и сохранение времени
        window.addEventListener('beforeunload', function(e) {
            if (testCompleting) {
                return;
            }
            
            // Сохраняем время перед закрытием (синхронный запрос)
            if (navigator.sendBeacon) {
                const formData = new FormData();
                formData.append('testResultId', testResultId);
                formData.append('timeRemainingSeconds', timeRemaining);
                formData.append('testType', testType);
                navigator.sendBeacon('@Url.Action("UpdateTimeRemaining", "StudentTest")', formData);
            } else {
                $.ajax({
                    url: '@Url.Action("UpdateTimeRemaining", "StudentTest")',
                    type: 'POST',
                    async: false,
                    data: {
                        testResultId: testResultId,
                        timeRemainingSeconds: timeRemaining,
                        testType: testType
                    }
                });
            }
            
            e.preventDefault();
            e.returnValue = '';
        });
    </script>
    @Html.AntiForgeryToken()
}

@functions {
    private int CountSyllables(string word)
    {
        // Простой подсчет гласных как слогов
        var vowels = new[] { 'а', 'е', 'ё', 'и', 'о', 'у', 'ы', 'э', 'ю', 'я',
                            'А', 'Е', 'Ё', 'И', 'О', 'У', 'Ы', 'Э', 'Ю', 'Я' };
        return word.Count(c => vowels.Contains(c));
    }

    private List<(int Position, string WordVariant)> GenerateStressVariants(string word, int syllableCount, int correctPosition)
    {
        var variants = new List<(int, string)>();
        var vowels = new[] { 'а', 'е', 'ё', 'и', 'о', 'у', 'ы', 'э', 'ю', 'я' };

        // Находим позиции гласных
        var vowelPositions = new List<int>();
        for (int i = 0; i < word.Length; i++)
        {
            if (vowels.Contains(char.ToLower(word[i])))
            {
                vowelPositions.Add(i);
            }
        }

        for (int syllable = 1; syllable <= vowelPositions.Count; syllable++)
        {
            var vowelIndex = vowelPositions[syllable - 1];
            var variant = word.Insert(vowelIndex + 1, "́"); // Вставляем символ ударения после гласной
            variants.Add((syllable, variant));
        }

        return variants;
    }
}

